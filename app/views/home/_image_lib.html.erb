<div class="index_base">
  <p class="clearfix index_tit">
    <a href="/images" target="_blank" class="pull-right"><small class="muted">查看更多<i class="icon-i16 icon-more"></i></small></a>
    <strong class="pull-left">装修图库</strong>
  </p>
  <hr class="border2 border2_mt2">
  <div class="index_main clearfix">
    <div class="pull-left tagbase">
      <% @image_tags.each_with_index do |image_tag, index| %>
        <dl class="clearfix <%= 'noborder nomargin' if index == @image_tags.size - 1 %>">
          <dt><a href="/images/<%= tag_link image_tag.category_id %>" class="pull-right">更多>></a><%= tag_name image_tag.category_id %></dt>
          <% tags = image_tag.category_list.split(',') || [] %>
          <% tags.each do |tag| %>
            <dd><a href="/images/<%= tag_link tag %>"><%= tag_name tag %></a></dd>
          <% end %>
        </dl>
      <% end %>
    </div>
    <div class="pull-left imgbase_show">
      <a href="<%= @image_lib1.url if @image_lib1.present? %>" target="_blank" class="show1">
