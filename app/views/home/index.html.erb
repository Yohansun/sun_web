<div class="center pr">
  <div class="centerBg indexmain">
    <div class="top1content">
      <div class="boxA" id="master_palace">
        <div class="titlebar">
          <div class="left"><img src="<%= asset_path "design/boxA_triangle_left.gif" %>"/></div>
          <div class="right"><img src="<%= asset_path "design/boxA_triangle_right.gif" %>"/></div>
          <div class="title">
            <span class="cn">大师殿堂</span>
            <span class="en">Feel the Masters</span>
          </div>
        </div>
        <div class="box_content">
          <div class="master_palace_content">
            <% if @master_interview -%>
            <div class="original">
              <div class="image"><a href="/master_interviews/<%= @master_interview.id %>"><%= image_tag @master_interview.preview_img_in.url %></a></div>
              <div class="t"><a href="/master_interviews/<%= @master_interview.id %>"><%= @master_interview.title %></a></div>
              <div class="c">
                <div class="text"><%=  gsub_body_string(@master_interview.intro, 80) %></div>
              </div>
              <div class="plus">+</div>
            </div>
            <div class="replace boxB">
              <div class="box_title"><h3>大师访谈</h3></div>
              <div class="boxb_content boxb_box">
                <a href="/master_interviews/<%= @master_interview.id %>">
                  <%= image_tag @master_interview.preview_img_out.url(:home_page), :class=> "master_img" %>
                </a>
                <div class="boxb_text2"><%= @master_interview.title %></div>
                <p><%= gsub_body_string(@master_interview.intro, 140) %></p>
                <h4><%= @master_interview.name %></h4>
              </div>
            </div>
            <% end -%>
          </div>
        </div>
      </div>

      <div id="design_appreciation">
        <div class="inner">
          <div class="titlebar">
            <span class="cn">设计鉴赏</span>
            <span class="en">Appreciate the works</span>
          </div>
          <div class="box_content">
            <div class="inner">
              <div class="inner_inner">
                <div class="image">
                  <a href="/weekly_stars">
                    <% unless @weekly_star.main_preview_img.nil? %>
                      <%= image_tag(@weekly_star.main_preview_img.url(:index)) %>
                    <%- end -%>
                  </a>
                </div>
                <div class="t">
                  <p>设计师：<%= @weekly_star.try(:author) %></p>
                </div>
                <div class="s">
                  <p class="like"><%= @weekly_star.try(:votes_count) %></p>
                  <p class="review">评论<%= @weekly_star.try(:comments_count) %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="boxA" id="information">
        <div class="titlebar">
          <div class="left"><img src="<%= asset_path "design/boxA_triangle_left.gif" %>"/></div>
          <div class="right"><img src="<%= asset_path "design/boxA_triangle_right.gif" %>"/></div>
          <div class="title">
            <span class="cn">行业资讯</span>
            <span class="en">Sector News</span>
          </div>
        </div>
        <div class="box_content">
          <div class="inner">
            <ul>
              <% @home_infos.each do |info| %>
              <li><a href="#"><%= image_tag(info.preview_img.url) %></a></li>
              <%- end -%>
              <li class="desc">
                <p class="c"><%= @home_infos.first.try(:title) %></p>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <div class="boxA" id="hot_topic">
        <div class="titlebar">
          <div class="left"><img src="<%= asset_path "design/boxA_triangle_left.gif" %>"/></div>
          <div class="right"><img src="<%= asset_path "design/boxA_triangle_right.gif" %>"/></div>
          <div class="title"></div>
        </div>
        <div class="box_content boxB shadow" style="padding:15px 20px">
          <div class="box_title"><h3>大师热点话题</h3></div>
          <div class="boxb_content" style="width:600px;height:236px;overflow:hidden;  ">
            <a href="/master_topics/<%= @hot_topic.id %>">
              <%= image_tag @hot_topic.preview_img.url(:icolor_master_topic) %>
            </a>
            <div class="boxb_text">
              <h3><%= @hot_topic.title %></h3>
              <p>
                <%= gsub_body_string(@hot_topic.body, 130) %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="boxB" id="masters_guidance">
        <div class="box_title"><h3>大师作品</h3>
          <div class="more"><a href="/master_designs">+查看更多</a></div>
        </div>
        <% if @master_design -%>
        <div class="boxb_content qa">
          <div class="gallery galleryN">
            <span class="moveleft"></span>
            <span class="moveright"></span>
            <div class="list">
              <ul>
                <%- @master_design.master_design_uploads.each do |i| %>
                <%- unless i.file.nil? %>
                <li><%= image_tag(i.file.url(:home_page))%></li>
                <%- end %>
                <%- end %>
              </ul>
            </div>
          </div>

          <div class="intro">
            <h3>作者：<%= @master_design.try(:master_profile).try(:name) %></h3>
            <p>国籍：<%= @master_design.try(:master_profile).try(:nationality) %></p>
            <p>作品名称：<%= @master_design.try(:design_name) %></p>
          </div>
        </div>
        <% end -%>
      </div>
    </div>
    <div class="top1mask"></div>
    <div class="boxA" id="top2">
      <div class="titlebar">
        <div class="left"><img src="<%= asset_path "design/boxA_triangle_left.gif" %>"/></div>
        <div class="right"><img src="<%= asset_path "design/boxA_triangle_right.gif" %>"/></div>
        <div class="title"></div>
      </div>
      <div class="box_content">
        <div class="titlebar">
          <div class="title">
            <span class="cn">设计鉴赏</span>
            <span class="en">Appreciate the works</span>
          </div>
        </div>
        <div class="inner">
          <div class="inner-inner">
            <div class="boxB" id="weekly_star">
              <div class="box_title"><h3>每周之星</h3></div>
              <div class="boxb_content" style=" position: static; top: 0;">
                <a href="/weekly_stars/<%= @weekly_star.id%>">
                    <% unless @weekly_star.main_preview_img.nil? %>
                      <%= image_tag(@weekly_star.main_preview_img.url(:index)) %>
                    <%- end -%>
                </a>
                <div class="cor"></div>
                <div class="designer">设计师：<%= @weekly_star.try(:author) %></div>
                <div class="notes"><%= @weekly_star.try(:votes_count) %></div>
              </div>
            </div>
            <div class="boxB" id="afflatus_showcase">
              <div class="box_title"><h3>灵感秀</h3></div>
              <div class="boxb_content">
                <div class="galleryP">
                  <ul>
                    <% @inspirations.each do |insp| %>
                    <li>
                      <%- unless insp.cover_img.nil? -%>
                        <a href="/inspirations/<%= insp.id %>"></a><%= image_tag insp.cover_img.try(:file).url(:home_page) %>
                      <%- end -%>
                    </li>
                    <%- end -%>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div id="recommended_works">
            <div class="box_title"><img src="<%= asset_path "design/recommended_works.gif" %>"></div>
            <div class="box_content">
              <div class="galleryM">
                <span class="moveleft"></span>
                <span class="moveright"></span>
                <div class="list">
                  <ul>
                    <% @designs.each do |design|  %>
                    <li>
                      <div class="img">
                        <a href="/designs/<%= design.id %>"><%= image_tag design.cover_img.file.url(:slide_thumb) if design.cover_img %></a>
                      </div>
                      <div class="s">
                        <p class="like"><%= design.shares_count %></p>
                        <p class="forward">转发</p>
                        <p class="review">评论</p>
                      </div>
                    </li>
                    <%- end -%>
                  </ul>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>

    <div id="home_improvement_news">
      <div class="titlebar">
        <span class="cn">行业资讯</span>
        <span class="en">Sector News</span>
      </div>
      <div class="box_content">
        <div class="left">
          <div class="industry_news shadow">
            <div class="boxB">
              <div class="box_title"><h3>行业资讯</h3></div>
              <div class="boxb_content">
                <div class="major">
                  <div class="legend"><a href="/articles/<%= @articles.first.try(:id) %>"><%= @articles.first.try(:title) %></a></div>
                  <div class="desc">
                    <%= gsub_body_string(@articles.first.try(:body), 125) %>
                    <a href="/articles/<%= @articles.first.try(:id) %>">[查看详细]</a>
                  </div>
                </div>
                <div class="list">
                  <ul>
                    <% @articles.shift %>
                    <% @articles.each do |article| %>
                    <li>
                      <div class="img"><%= image_tag(article.preview_img.url()) %></div>
                      <div class="t"><a href="/articles/<%= article.id %>"><%= article.title %></a></div>
                      <div class="c"><%= gsub_body_string(article.body, 70) %><a href="/articles/<%= article.id %>">[查看详细]</a></div>
                    </li>
                    <%- end -%>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="right">
          <div class="inner shadow">
            <div class="tweibo boxB">
              <div class="box_title"><h3>立邦官微资讯</h3></div>
