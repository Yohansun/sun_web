    <div class="box_content">
      <div id="gift">
        <div class="titlebar">
          <!--<span class="cn">礼从天降</span>-->
          <!--<span class="en">Promotion and more</span>-->
          <img src="<%= asset_path 'design/promotion_and_more.jpg' %>">
