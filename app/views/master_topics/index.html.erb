<%- content_for :head do %>
  <%= stylesheet_link_tag 'style', 'weekstar' %>
    <style type="text/css">
        .shadow {
            zoom: 1;
        }
    </style>
<%- end %>
<div class="main">
  <div class='sub_title tr'>
    <img src='<%= set_style[:pic_path] %>' alt=""/>
  </div>
  <div class='sub_nav ft12 pr tr'>
    <a href="#">首页</a><span class="arrow_1"></span><a href="#">大师殿堂</a><span class="arrow_2"></span><a class="fb" href="/master_topics">热点话题</a>
  </div>
  <!--sub_nav ends-->
  <div class='wrapper pt25 pb30'>
    <%- if @topics %>
        <%- @topics.each do |topic| %>
            <div class="shadow mt25 mb15">
              <div class="section">
                <div class="hot_topics_box group">
                  <div class="fl">
                    <h3><a href="/master_topics/<%= topic.id %>" >小户型空间细节设计全案</a></h3>
                    <div class="h3_sub group">
                      <span>时间：<%= topic.published_at.to_formatted_s(:db) %></span><span class="zf">转发(124)</span><span class="pl">评论(86)</span>
                    </div>
                    <div class="hot_topic_main group">
                      <%= image_tag topic.preview_img.url(:original) if topic.preview_img %>
                      <div class="hot_topics_con">
                        <p><%= raw topic.intro %>...<%= link_to "[详细]", "/master_topics/#{topic.id}" %></p>
                      <p class="pl40">
                        <%- @tags.each do |tag| %>
                        <span><%= link_to tag.name,  "/master_topics?tags=#{URI.escape(tag.name)}"%></span>
                        <%- end %>
                      </p>
                      </div>
                    </div>
                  </div>
                  <!--fl-->
                  <div class="fr new_comm">
                    <h4>最新评论</h4>
                    <ul>
                      <li>不错，真的很实用！</li>
                      <li>不错，真的很实用！</li>
                      <li>不错，真的很实用！</li>
                      <li>不错，真的很实用！</li>
                      <li>不错，真的很实用！</li>
                      <li>不错，真的很实用！</li>
                      <li class="noborder">不错，真的很实用！</li>
                    </ul>
                  </div>
                  <!--fr-->
                </div>
              </div>
            </div>
        <%- end %>
    <%- end %>
  </div>
  <!--wrapper ends-->

  <div class='sub_bot pr'>
    <div class="pager ft12">
      <%= paginate @topics %>
    </div>
    <!--pager ends-->
  </div>
</div><!--pager ends-->
</div><!--sub_bot ends-->
</div><!--main ends-->