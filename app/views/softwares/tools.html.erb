<%- content_for :head do %>
    <%= stylesheet_link_tag "news" %>
    <%= javascript_include_tag 'myfocus'%>
    <style type="text/css">
        .popup_zf {
            width: 180px;
            position: absolute;
            left: 15px;
            bottom: -32px;
            background: #fff;
            padding: 5px 0 !important;
            border: 1px solid #f1f1f1;
        }

        .popup_zf span {
            float: left;
            font-size: 12px;
            padding: 3px 5px !important;
            margin: 0;
        }

        .popup_zf a {
            float: left;
            display: inline;
            width: 16px;
            height: 16px;
            background: url(<%= asset_path "master/icon_zf.png"%>) no-repeat;
            margin: 0px 3px;
        }

        .popup_zf a.pupot_zf_qq {
            background-position: left 0;
        }

        .popup_zf a.popup_zf_sina {
            background-position: left -16px;
        }

        .popup_zf a.popup_zf_rr {
            background-position: left -32px;
        }

        .popup_zf a.popup_zf_kaixin {
            background-position: left -48px;
        }
        .clear:after {
        content: ".";
        display: block;
        height: 0;
        clear: both;
        visibility: hidden;
    </style>
<%- end %>
<div class="main">
  <div class='sub_title text-right'>
    <img src='<%= asset_path "news/title_tools.png" %>'/>
  </div>
  <div class='sub_nav ft12 pr tr'>
