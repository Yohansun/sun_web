<!-- Content -->
<div class="content">

  <div class="title">
     <h5>网站用户</h5>
  </div>

   <%= form_tag "users", :method => "get" do %>
      请输入查询时间范围：<br />
      <%= date_select("search", "created_at_from", :default => @from) %> <br /><br />
      至<br />
      <%= date_select("search", "created_at_to", :default => @to) %> <br /><br />
    <%= submit_tag "查找" %>
   <% end %>

  <% if @users -%>

  <div class="table">

    <div class="head"><h5 class="iFrames">网站用户列表</h5></div>

    <table cellpadding="0" cellspacing="0" border="0" class="display">
      <thead>
        <tr>
          <th width="10%">ID</th>
          <th width="10%">用户名</th>
          <th width="10%">用户性质</th>
          <th width="15%">用户主页url</th>
          <th width="15%">省</th>
          <th width="15%">市</th>
          <th width="15%">区</th>
          <th width="15%">minisite</th>
          <th width="15%">邮件地址</th>
          <th width="15%">联系电话</th>
          <th width="10%">注册时间</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |u| %>
        <tr class="gradeA">
          <td><%= u.id %></td>
          <td><%= u.username %></td>
          <td><%= u.role_chn_name %></td>
          <td><%= main_app.users_url(u) %></td>
          <td><%= u.areas[0] %></td>
          <td><%= u.areas[1] %></td>
          <td><%= u.areas[2] %></td>
          <td><%= u.is_from_minisite %></td>
          <td><%= u.email %></td>
          <td><%= u.phone %></td>
          <td><%= u.created_at.localtime.to_formatted_s(:db) %></td>
        </tr>
        <%- end -%>
      </tbody>
    </table>
  </div>
  <% end -%>
</div><!-- Content -->