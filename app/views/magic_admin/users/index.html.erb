<!-- Content -->
<div class="content">

  <div class="title">
     <h5>网站用户</h5>
  </div> 
   
   <%= form_tag "users", :method => "get" do %>
       请输入查询时间范围：<br />
       <%= date_select("search", "time_range_first") %> <br /><br />
       至<br />
       <%= date_select("search", "time_range_last") %> <br /><br />
       <ul>       
       <li><%= radio_button_tag  "search[user_behave]", 1, :checked => (params['user_behave'] == '1') %>全部</li>
       <li><%= radio_button_tag  "search[user_behave]", 2, :checked => (params['user_behave'] == '2') %>未上传作品</li>
       <li><%= radio_button_tag  "search[user_behave]", 3, :checked => (params['user_behave'] == '3') %>未登录</li>  
      </ul><br />
       <%= submit_tag "查找" %>
       
   <% end %>    

  <div class="table">

    <div class="head"><h5 class="iFrames">网站用户列表</h5></div>

    <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
      <thead>
        <tr>
          <th width="10%">ID</th>
          <th width="10%">用户</th>
          <th width="10%">姓名</th>
          <th width="15%">邮件地址</th>
          <th width="15%">手机号</th>
          <th width="10%">用户类型</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |u| %>
        <tr class="gradeA">
          <td><%= u.id-%></td>
          <td><%= u.username -%></td>
          <td><%= u.name -%></td>
          <td><%= u.email -%></td>
          <td><%= u.phone-%></td>
          <td>
          <%- if u.job_designer? -%>
          设计师在职
          <%- elsif u.reading_designer?-%>
          设计师在读
          <%- elsif u.company?-%>
          家装公司
          <%- else u.common_user?-%>
          普通用户
          <%- end -%>
          </td>
        </tr>
        <%- end -%>
      </tbody>
    </table>
  </div>
</div><!-- Content -->