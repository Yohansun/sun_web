<% content_for :head do -%>
    <%= stylesheet_link_tag "refresh_life/map"  %>
    <%= javascript_include_tag "exp/css/style.css", "exp/exp.js", "LinkageSelect/location.js", "LinkageSelect/LinkageSelect.js" %>
<% end -%>
<div class="container refresh_main">
	<h3 class="chann_caption nomargin"><i class="icon-map icon-map9 icon_colors"></i><strong>刷新生活</strong><small>立邦帮您刷新，共建美好生活</small></h3>
	<ul class="breadcrumb">
		<li><a href="/">首页</a> > </li>
		<li><a href="#">刷新生活</a> > </li>
		<li><a href="/refresh_record">刷新实录</a> > </li>
		<li class="active">幸福生活 新的开始</li>
	</ul>
	<hr class="border2 border2_mt2">

	<div class="clearfix refresh_lists refresh_video1">
		<div class="unstyled map-left index_main pull-left">
			<h4 class="video_title text-center">
				<%= @life_memoir.title %>
			</h4>
			<div class="video text-center">
				<object classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000" width="600" height="331" id="FLVPlayer">
					<param name="movie" value="FLVPlayer_Progressive.swf" />
					<param name="quality" value="high" />
					<param name="wmode" value="opaque" />
					<param name="scale" value="noscale" />
					<param name="salign" value="lt" />
					<param name="FlashVars" value="&amp;MM_ComponentVersion=1&amp;skinName=Clear_Skin_1&amp;streamName=<%=@life_memoir.video.url%>&amp;autoPlay=false&amp;autoRewind=false" />
					<param name="swfversion" value="8,0,0,0" />
					<!-- 此 param 标签提示使用 Flash Player 6.0 r65 和更高版本的用户下载最新版本的 Flash Player。如果您不想让用户看到该提示，请将其删除。 -->
					<param name="expressinstall" value="Scripts/expressInstall.swf" />
					<!-- 下一个对象标签用于非 IE 浏览器。所以使用 IECC 将其从 IE 隐藏。 -->
					<!--[if !IE]>-->
					<object type="application/x-shockwave-flash" data="FLVPlayer_Progressive.swf" width="600" height="331">
						<!--<![endif]-->
						<param name="quality" value="high" />
						<param name="wmode" value="opaque" />
						<param name="scale" value="noscale" />
						<param name="salign" value="lt" />
						<param name="FlashVars" value="&amp;MM_ComponentVersion=1&amp;skinName=Clear_Skin_1&amp;streamName=<%=@life_memoir.video.url%>&amp;autoPlay=false&amp;autoRewind=false" />
						<param name="swfversion" value="8,0,0,0" />
						<param name="expressinstall" value="Scripts/expressInstall.swf" />
						<!-- 浏览器将以下替代内容显示给使用 Flash Player 6.0 和更低版本的用户。 -->
						<div>
							<h4>此页面上的内容需要较新版本的 Adobe Flash Player。</h4>
							<p><a href="http://www.adobe.com/go/getflashplayer"><img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="获取 Adobe Flash Player" /></a></p>
						</div>
						<!--[if !IE]>-->
					</object>
					<!--<![endif]-->
				</object>
			</div>
			<div class="refresh_banner">
				<a href="#"><img src=<%= asset_path "refresh_life/refresh/refresh_banner.jpg" %>></a>
			</div>
		</div>
		<div class="pull-right">
			<ul class="unstyled map-right index_main">
				<li class="clearfix refresh_r_tit">
					<a href="#" target="_blank" class="pull-right"><small class="muted">更多></small></a>
					<strong class="pull-left">最新大师作品</strong>					
				</li>
				<% if @master_design_datas.present? %>
					<% @master_design_datas.each_with_index do |data, index| %>
					  <% if index == 0 %>
					    <li class="map-r1 dott1">
								<a href="#">
									<strong><%= data.title %></strong>
									<%= image_tag data.file.url  %>
								</a>
							</li>
					  <% else %>
					    <li class="map-r2"><a href="<%= data.url %>"><%= data.title %></a></li>
					  <% end %>
					<% end %>
				<% end %>
			</ul>
			<div class="chann_warp chann1_right map-right index_main">
				<div class="media media_chann">
					<a class="pull-left" href="/design_images/lists">
						<i class="icon-chann icon-chann_imgbase"></i>
					</a>
					<div class="media-body">
						<h4 class="media-heading">装修图库</h4>
						<p class="media_con nomargin">寻找最新家装图片<br>给您专属的家装设计参考！</p>
					</div>
				</div>
				<div class="media media_chann">
					<a class="pull-left" href="/color_designs">
						<i class="icon-chann icon-chann_match"></i>
					</a>
					<div class="media-body">
						<h4 class="media-heading">色彩配搭</h4>
						<p class="media_con nomargin">色彩搭配案例 家居色彩宝典 为您的家装出谋画色！</p>
					</div>
				</div>
				<div class="media media_chann">
					<a class="pull-left" href="/channel/refresh_service">
						<i class="icon-chann icon-chann_fresh2"></i>
					</a>
					<div class="media-body">
						<h4 class="media-heading">立邦刷新服务</h4>
						<p class="media_con nomargin">对话顶尖设计大师，提升家装专业眼界！</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<%= render :partial => "foot_select" %>
</div>
<% content_for :tails do -%>
    
<% end -%>