<% content_for :tail do -%>
    <%#= stylesheet_link_tag "refresh_life/map", "style.css"  %>
    <%= javascript_include_tag "exp/exp.js", "flowplayer-3.2.11.min.js" %>
    <script language="JavaScript">
					flowplayer("player", "/flash/flowplayer-3.2.12.swf",{
					 clip:  {
					  autoPlay: false,
					  autoBuffering: true
					 }
					});
				</script>
<% end -%>
<div class="container refresh_main">
	<h3 class="chann_caption nomargin"><i class="icon-map icon-map9 icon_colors"></i><strong>刷新生活</strong><small>立邦帮您刷新，共建美好生活</small></h3>
	<ul class="breadcrumb">
		<li><a href="/">首页</a> > </li>
		<li><a href="<%=refresh_record_index_path%>">刷新生活</a> > </li>
		<li><a href="/refresh_record">为爱刷新</a> > </li>
		<li class="active">幸福生活 新的开始</li>
	</ul>
	<hr class="border2 border2_mt2">

	<div class="clearfix refresh_lists refresh_video1">
		<div class="unstyled map-left index_main pull-left">
			<h4 class="video_title text-center">
				<%= @life_memoir.title %>
			</h4>
			<div class="video text-center">
				 <a href="<%= @life_memoir.video.url %>" style="display:block;width:600px;height:331px;margin:0 auto;" id="player"></a>
			</div>
			<div class="refresh_banner">
				<% cache "refresh_record_show_banner1" do %>
					<a href="<%=@i_banner.position(1).first.url if @i_banner.position(1).first %>" target="_blank"><img src="<%=@i_banner.position(1).first.try(:file).try(:url,:list_670x85)%>"></a>
				<% end %>
			</div>
		</div>
		<div class="pull-right">
			<% cache "refresh_record_show_master_design" do %>
			<ul class="unstyled map-right index_main js-img_show">
				<li class="clearfix refresh_r_tit">
					<a href="<%=@url if @url %>" target="_blank" class="pull-right"><small class="muted">更多></small></a>
					<strong class="pull-left">最新大师作品</strong>
				</li>
        <% @i_column_datas.each_with_index do |cd,index| %>
				<li class="map-r1 dott1 <%="active" if index == 0%>">
            <i class="icon-i16 icon-<%=index+1%>"><%=index+1%></i>
						<strong class="js-title"><%=cd.title%></strong><br>
						<a href="<%= cd.url %>" class="<%="hide" if index != 0%> js-img" target="_blank"><img src="<%=cd.file.url(:list_155x115)%>" alt="" /></a>
				</li>
        <% end %>
			</ul>
			<% end %>
			<div class="chann_warp chann1_right map-right index_main">
				<div class="media media_chann">
					<a class="pull-left" href="/design_images/lists" target="_blank">
						<i class="icon-chann icon-chann_imgbase"></i>
					</a>
					<div class="media-body">
						<h4 class="media-heading"><a class="media-heading_link_a" href="/images" target="_blank">装修图库</a></h4>
						<p class="media_con nomargin">寻找最新家装图片<br>给您专属的家装设计参考！</p>
					</div>
				</div>
				<div class="media media_chann">
					<a class="pull-left" href="/color_designs" target="_blank">
						<i class="icon-chann icon-chann_match"></i>
					</a>
					<div class="media-body">
						<h4 class="media-heading"><a class="media-heading_link_a" href="/color_designs" target="_blank">色彩配搭</a></h4>
						<p class="media_con nomargin">色彩搭配案例 家居色彩宝典 为您的家装出谋画色！</p>
					</div>
				</div>
				<div class="media media_chann">
					<a class="pull-left" href="/channel/refresh_service" target="_blank">
						<i class="icon-chann icon-chann_fresh2"></i>
					</a>
					<div class="media-body">
						<h4 class="media-heading"><a class="media-heading_link_a" href="/channel/refresh_service" target="_blank">立邦刷新服务</a></h4>
						<p class="media_con nomargin">对话顶尖设计大师，提升家装专业眼界！</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="index_main refresh_news mt10 clearfix">
		<% cache "refresh_record_show_foot_select" do %>
		<%= render :partial => "foot_select" %>
		<% end %>
		<div class="pull-right"><a href="<%=@i_banner.position(2).first.url if @i_banner.position(2).first %>" target="_blank"><img src="<%=@i_banner.position(2).first.try(:file).try(:url,:list_230x230)%>"></a></div>
	</div>
	<% cache "refresh_record_show_footer_banner" do %>
	<div class="clearfix">
		<div class="footer_banner pull-left"><a href="<%=@i_banner.position(3).first.url if @i_banner.position(3).first %>" target="_blank"><img src="<%=@i_banner.position(3).first.try(:file).try(:url,:list_670x85)%>"></a></div>
		<div class="footer_banner pull-right"><a href="<%=@i_banner.position(4).first.url if @i_banner.position(4).first %>" target="_blank"><img src="<%=@i_banner.position(4).first.try(:file).try(:url,:list_310x85)%>"></a></div>
	</div>
	<% end %>
</div>