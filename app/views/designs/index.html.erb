<%- content_for :head do %>
    <%= stylesheet_link_tag "style" %>
<%- end %>
<%- content_for :tail do %>
    <%= javascript_include_tag "/location.js", "LinkageSelect.js" %>
    <script type="text/javascript">
    $(function() {
      var options = {
        data  : data
      }
      var sel = new LinkageSelect(options);
      <%- if params[:area_id] && !params[:area_id].blank? -%>
        <% area = Area.find(params[:area_id])%>
        sel.bind('.level_1',<%= area.parent.id unless area.parent.nil?%>);
        sel.bind('.level_2',<%= area.id%>);
      <%- else -%>
        sel.bind('.level_1');
        sel.bind('.level_2');
      <%- end -%>
      $('span.zf').hover(function(){
        $(this).parent('.p2').siblings('span.popup_zf').toggle();
      });

      $('span.popup_zf').hover(function(){
        $(this).toggle();
      });

    });
    </script>
<%- end %>
<div class="main">
<div class='sub_title tr pt25'>
  <img src='<%= asset_path "design/title_design.png" %>'/>
</div>
<div class='sub_nav ft12 pr tr'>
  <a href="#">首页</a><span class="arrow_1"></span><a href="#">设计鉴赏</a><span class="arrow_2"></span><a class="fb" href="#">推荐作品</a>
</div>
<!--sub_nav ends-->
<div class='wrapper pb60 group'>
<div class="design_tit group">
  <ul class="design_filter group">
    <form method="get" id="filter_form">
      <li>
        <%= select_tag "order", options_for_select(ColorDesign.order_select, params[:order]), class: "arrow_filter li_current",
                :onchange => "$('#filter_form').submit()", :prompt => "排序" ,:style =>"width:108px;" %>
      <li>
    <li>
       <%= select_tag "style", options_for_select(Design.style_select, params[:style]), class: "arrow_filter li_current",
                :onchange => "$('#filter_form').submit()", :prompt => "风格" ,:style =>"width:108px;" %>
    </li>
    <li>
      <%= select_tag "room_type",options_for_select(Design.room_type_select, params[:room_type]), class: "arrow_filter", :prompt => "户型" ,:onchange => "$('#filter_form').submit()" %>
    </li>
    <li>
      <select id="province" class="level_1 arrow_filter"></select>
      <select id="city" class="level_2 arrow_filter" name="area_id" onchange="$('#filter_form').submit()"></select>
    </li>
    </form>
  </ul>
  <div class="upload_btn">
    <% if current_user -%>
      <%= link_to "我要上传", new_user_design_path(current_user) %>
    <% else -%>
      <%= link_to_function "我要上传", "show_login()" %>
    <% end -%>
  </div>
</div>
<div class="design_result">
  <% @designs.in_groups_of(3, false).each do |group| -%>
  <ul class="d_works group">
    <% group.each do |design| -%>
    <li>
      <%= link_to image_tag(design.cover_img.file.url(:index)),
        user_design_path(design.user_id, design) if design.cover_img %>
      <h3><%= design.title %></h3>
      <p class="p1 group">
        <strong class="ft14 fb">当前票数：<em id ="votes_count<%= design.id%>"><%= design.votes_count %></em></strong>
        <%= link_to image_tag("design/d_vote_btn.png"), votes_path(:voteable_id => design.id, :voteable_type => "Design"), :remote => true, :method => 'post' %>
      </p>

      <p class="p2 p2_popup_zf group">
        <span class="zf ft12">转发 (<%= design.shares_count %>)</span><span class="pl ft12">评论 (<%= design.comments_count %>)</span>
      </p>
      <span class="popup_zf group none"><span>一键转发：</span><a class="popup_zf_qq one_key_forward" href="#"></a><a  class="popup_zf_sina one_key_forward" href="#"></a><a class="popup_zf_rr one_key_forward" href="#"></a><a class="popup_zf_kaixin one_key_forward" href="#"></a></span>

      <p>
        公司：<%= design.user.name_of_company %>
        <br/>
        设计师：<%= design.user.display_name %>
        <br/>
        风格：<%= design.style %>
      </p>
    </li>
    <% end -%>
  </ul>
  <% end -%>
  <!--result one ends-->
</div>
<!--design_result ends-->
</div>
<!--wrapper ends-->
<div class='sub_bot pr'>
  <div class="pager ft12">
    <%= paginate @designs %>
  </div>
  <!--pager ends-->
</div>
<!--sub_bot ends-->
</div><!--main ends-->