<% content_for :head do -%>
  <%= stylesheet_link_tag '2013upload'%>
<% end -%>
<%- content_for :tail do %>
<script type="text/javascript">
  function countDown(secs,surl){
    var jumpTo = document.getElementById('jumpTo');
    jumpTo.innerHTML=secs;
    if(--secs>0){
      setTimeout("countDown("+secs+",'"+surl+"')",1000);
    }
    else{
      location.href=surl;
    }
  }
</script>
<script type="text/javascript">countDown(5,'<%= user_path(current_user) %>');</script>
<% end %>
<div class="container refresh_main">
  <ul class="breadcrumb">
    <li><a href="#">首页</a> > </li>
    <li class="active">用户中心</li>
  </ul>
  <hr class="border2 border2_mt2">

  <ul class="nav nav-tabs upload_tab" id="upload_tab">
    <li class="active"><a href="#upload_tab1" data-toggle="tab">上传作品</a></li>
  </ul>

  <div class="tab-content upload_success">
    <div class="tab-pane active" id="upload_tab1">
      <div class="index_main text-center noborder">
        <img src="<%= asset_path '2013/success.jpg'%>" alt="" />
        <p class="text-center linet1">系统将在 <strong class="text-important" id="jumpTo">5</strong> 秒后自动进入我的个人主页</p>
        <div class="text-center">
          <a href="<%=user_asks_path(current_user)%>" class="link_btns">进入我的个人主页</a>
          <a href="<%=user_design_path(current_user,params[:design_id])%>" class="link_btns">看看我发布的作品</a>
        </div>
      </div>
    </div>
  </div>

  <div class="clearfix">
    <div class="footer_banner pull-left"><a href="#"><img src="images/index/footer_banner.jpg"></a></div>
    <div class="footer_banner pull-right"><a href="#"><img src="images/index/footer_banner2.jpg"></a></div>
  </div>
</div>
