<% content_for :head do -%>
  <%= stylesheet_link_tag 'weekstar','style' %>
  <style type="text/css">
  	span.arrow_1{right:87px;}
  </style>
<% end -%>
<% content_for :tail do -%>
  <%= javascript_include_tag 'galleryB.js','main' %>
  <script type="text/javascript">
    $(".slide_thumb").click(function(event) {
      event.preventDefault();
      $(".big_image img").attr("src", $(event.target).parent().attr("href"));
    });
  </script>
<% end -%>
<div class="main page_weekstar page_weekstar_detail">
  <div class='sub_title tr pt25'>
    <img src="<%= asset_path "design/title_design.png" %>" />
  </div>
  <div class='sub_nav ft12 pr tr'>
    <a href="#">首页</a><span class="arrow_1"></span><a href="/weekly_stars">设计鉴赏</a>
  </div><!--sub_nav ends-->
  <div class="wrapper group">
    <div class="weekstart_titleB">
      <h1><%= @design.title %></h1>
      <div class="subtitle">
        <div class="votes">
          当前票数：<span id="votes_count<%= @design.id%>"><%= @design.votes_count %></span>
          <%= link_to image_tag("design/d_vote_btn.png"), votes_path(:voteable_id => @design.id, :voteable_type => "Design"), :remote => true, :method => 'post' %>
        </div>
        <div class="operate pr">
          <span class="forward">转发 (<%= @design.shares_count %>)</span>
          <span class="review">评论 (<%= @design.comments_count %>)</span>
          <div class="popup_zf group none" style="bottom:0px; left:175px;"><span style="background:none; padding:0; margin:0; line-height:14px;">一键转发：</span><a class="popup_zf_qq" href="#"></a><a  class="popup_zf_sina" href="#"></a><a class="popup_zf_rr" href="#"></a><a class="popup_zf_kaixin" href="#"></a></div>
        </div>
      </div>
      <div class="fullscreen_btn">
        <%= link_to "全屏观看", fullscreen_user_design_path(@design.user_id, @design) %>
      </div>
    </div>
    <div class="weekstart_detail">
      <div class="big_image">
        <% if @design.cover_img -%>
          <%= image_tag @design.cover_img.file.url(:slide) %>
        <% end -%>
      </div>
      <div class="galleryB">
        <span class="moveleft"></span>
        <span class="moveright"></span>
        <div class="list">
          <ul>
            <% @design.design_images.each do |i| -%>
              <li><%= link_to (image_tag i.file.url(:slide_thumb),
                :alt => @design.title), i.file.url(:slide),
                :title => @design.title, :class => "slide_thumb" %></li>
            <% end -%>
          </ul>
        </div>
      </div>
      <div class="properties">
        <div class="tags">
          <h5>标签</h5>
          <ul>
            <li><a href="#">装修</a></li>
            <li><a href="#">环保</a></li>
            <li><a href="#">简约</a></li>
          </ul>
        </div>
        <table class="propertyA">
          <tr>
            <th>公司名称：</th>
            <td>深圳星客环境艺术有限公司 <a href="#">[进入公司主页]</a></td>
          </tr>
          <tr>
            <th>公司地址：</th>
            <td>深圳市华侨城创意园A4栋303</td>
          </tr>
          <tr>
            <th>设计师：</th>
            <td>王勤俭 <a href="#">[进入个人主页]</a></td>
          </tr>
          <tr>
            <th>项目名称：</th>
            <td>华地公馆A1-1样板房</td>
          </tr>
          <tr>
            <th>设计风格：</th>
            <td>田园</td>
          </tr>
          <tr>
            <th>设计说明：</th>
            <td>别墅的设计风格正如题记之中所描述的那样，圆了人们一个关于栖息的理想梦境，从古罗马的辉煌到桃源仙境，从东方到西方，从古时到现代，这个梦被以各种方式诠释着，关于优雅，关于品味，关于享受方式，关于舒适，更重要的是，关于思考的境界。</td>
          </tr>
          <tr>
            <th>主要材料：</th>
            <td>黑金花大理石、橙皮红大理石、金柠檬黄大理石、道格拉斯进口瓷砖、雅金箔、米白洞石、球纹桃花芯木饰面、艺术拼花马赛克、 红檀香实木地板、进口墙纸、水晶灯、银镜</td>
          </tr>
          <tr>
            <th>推荐理由：</th>
            <td>新千年的第一个十年，是中国室内设计行业发展最为蓬勃的十年。</td>
          </tr>
        </table>
      </div>
      <div class="review_wrap">
        <div class="reviewform">
          <div class="bar">
            <h4><span>评论</span>(<%= @design.comments_count %>)</h4><span class="r"><span class="words_tip">0</span>/140</span>
		  </div>
          
          <div class="form-content">
            <%= form_for(Comment.new) do |f| %>
            <%= f.hidden_field :commentable_id, value: params[:id] %>
            <%= f.hidden_field :commentable_type, value: 'Design' %>
            <p class="input">
              <%= f.text_area :content, :class => "area_text" %>
            </p>
            <p class="button">
              <!-- <input type="image" name="submit" src="<%= asset_path "design/submitA.gif" %>" alt="提交" value="提交" /> -->
              <%= image_submit_tag "design/submitA.gif", value: "提交", alt: "提交" -%>
            </p>
            <% end %>
          </div>
        </div>
        <div class="pager ft12">
          <%= paginate @comments %>
        </div>
        <div class="review_list">
          <ul class="review_listA">
            <% @comments.each do |c| %>
            <li>
              <div class="bar">
                <span class="user"><%= c.user.name %></span><span class="time"><%= c.created_at.to_date %></span>
              </div>
              <div class="reply">
                <a href="#">回复</a>
              </div>
              <div class="content">
                <%= c.content %>
              </div>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class='sub_bot pr'>
  </div>
</div>