<% content_for :head do -%>
    <%= stylesheet_link_tag 'news' %>
    <%= javascript_include_tag "/location.js", "LinkageSelect.js" %>
<% end -%>
<div class="main">
  <div class='sub_title tr'>
    <img src='<%= asset_path "news/title_owner.png"%>'/>
  </div>
  <div class='sub_nav ft12 pr tr'>
    <a href="#">首页</a><span class="arrow_1"></span><a href="#">业主通道</a><span class="arrow_2"></span><a class="fb" href="#">片区快查</a>
  </div>
  <!--sub_nav ends-->
  <div class='wrapper'>
    <div class="owner_map clear">
      <% if MagicSetting.promote_designers -%>
      <% MagicSetting.promote_designers.split(",").each do |user_id| -%>
        <% user = User.find(user_id.to_i) rescue nil -%>
        <%= link_to image_tag(user.avatar.file.url(:access_wall)), user_path(user) if !user.avatar.nil? && !user.avatar.file.nil? %>
      <% end -%>
      <% end -%>
    </div>
    <!--owner_map ends-->
    <div class="owner_bar ft12 clear">
      <%= form_tag("/channel/access", :method => "put") %>
      <img src="<%= asset_path "news/hot_search.png"%>" class="fl"/>
      <select id="province" class="level_1" name="province">
        <option>请选择省--不限</option>
      </select>
      <select id="city" class="level_2" name="city">
        <option>请选择市--不限</option>
      </select>
      <select id="country" class="level_3" name="area_id">
        <option>请选择区--不限</option>
      </select>
      <select name="des_status">
        <%= options_for_select(User::USER_TYPE.collect{|k,v| [v,k]}) %>
      </select>
      <input type="text" value="请输入关键字" class="owner_search fl" name="keywords"/>
      <input type="image" src="<%= asset_path "news/search_btn.jpg"%>" class="owner_sub fl"/>

    </div>
    <!--owner_bar ends-->
    <% @design_users.each do |user| %>
    <div class="owner clear">
      <img src="<%= user.avatar.try(:file).try(:url, :access_icon) %>" class="fl">
        <div class="owner_center fl ft12">
        	<span class="owner_name fl fb ft14"><%= user.display_name %></span>
            <span class="owner_city fl">(<%= user.city.try(:name) %>)</span>
            <%= link_to "进入主页", user_path(user), :class => "fl" %>
            <div class="owner_info fl pr">
            	<span></span>
              <%= user.signature %>
            </div><!--owner_info ends-->
        </div><!--owner_center ends-->
        <a href="#" class="owner_ask tc ft14 fr fb" id="channel_access">我要咨询</a>
    </div>
    <%- end -%>
  </div>
  <!--wrapper ends-->
  <div class='sub_bot ft12 pr'>
    <div class="pager ft12">
      <%= paginate @design_users %>
    </div>
    <!--pager ends-->
  </div>
  <!--sub_bot ends-->
</div><!--main ends-->
<script type="text/javascript" charset="utf-8">
    $(function() {
        var options = {
            data  : data
        }

        var sel = new LinkageSelect(options);
        sel.bind('.level_1');
        sel.bind('.level_2');
        sel.bind('.level_3');
    });
</script>
