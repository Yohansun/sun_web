<div class="unlogin modal" style="height: 354px;">
	<%= form_for(:user, :url => user_session_path, :html => {:id => "overlay_new_user" },:remote => true)  do |f| %>
		<div class="login_tit">
			<a href="javascript:;" class="close_btn js-close_btn"></a>
			<span>请先登录</span>
		</div><!--login_tit ends-->
		<div class="err_tips">
			用户名密码错误
			<span>x</span>
		</div><!--err_tips-->
		<div class="loginCon clearfix noborder nopadding">
			<form class="login_form">
	      <div class="clearfix">
	        <label for="username" class="username ft14 fl login_label">帐号：</label>
	        <input id="username" type="text" placeholder="用户名/邮箱/手机" name="user[login]" value=""/>
	      </div>
	      <div class="clearfix">
	        <label for="password" class="password ft14 fl login_label">密码：</label>
	        <input id="password" type="password" class="fl" name="user[password]"/>
	        <span class="tips text-center fr pass_tips"><a href="/users/password/new">忘记密码？</a></span>
	      </div>
				<p class="clearfix">
		      <input id="login" type="image" src="<%= asset_path "login.jpg" %>" />
		      <label class="checkbox fl login_auto">
		        <input type="checkbox" /><span>下次自动登录</span>
		      </label>
	      </p>
	    </form>
		</div><!--loginCon ends-->
	<% end %>
	<ul class="loginCon login_way clearfix">
		<li><a href="#"><%= image_tag "manage/login/sina.jpg" %>新浪微博</a></li>
		<li><a href="#"><%= image_tag "manage/login/qq.jpg" %>QQ</a></li>
		<li><a href="#"><%= image_tag "manage/login/rr.jpg" %>人人网</a></li>
		<li class="noborder"><a href="#"><%= image_tag "manage/login/kx.jpg" %>开心网</a></li>
	</ul>
	<div class="loginCon register_now clearfix">
		<p class="pull-left">还没加入iColor?</p>
		<a href="reg.html" class="reg_now pull-left"></a>
	</div><!--loginCon ends-->
	<div class="loginCon">
		<a href="/users/sign_up"><img src="<%= asset_path "reg_ads.jpg" %>" alt="ads" /></a>
	</div>
</div><!--unlogin ends 未登录-->