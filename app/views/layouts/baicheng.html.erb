	<div class="footer">
		<ul class="center clear">
			<li>
				<%= link_to '首页', '/baicheng',
					class: "bot-nav1 #{'active' if controller_name == 'welcome' && params[:page].blank?}" %>
			</li>
			<li>
				<%= link_to '大众三级跳', '/baicheng/jump',
					class: "bot-nav2 #{'active' if controller_name == 'welcome' && params[:page] == 'jump'}" %>
			</li>
			<li>
				<%= link_to '设计大PK', '/baicheng/pk',
