<div class="widget-box replace_maps" style="width:700px;">
  <h5 class="bigger lighter">
    <i class="icon-table"></i>
    鼠标热区
  </h5>
  <div class="widget-body">
    <div class="widget-main no-padding">
      <table class="table table-striped table-bordered table-hover">
        <%- maps.each do |map|%>
          <tr class="map_ids" data-map-id="<%= map.id %>">
            <td>
              <p>
                x:<%= map.x_line %>
                y:<%= map.y_line %>
                w:<%= map.width %>
                h:<%= map.high %>
              </p>
              <br>
              <p>URL:<a href="<%= map.url %>" target="_blank"><%= map.url %></a></p>
            </td>
            <td><%= link_to '删除', kv_map_path(map.id) , confirm: '确定删除?', method: :delete, remote: true %></td>
          </tr>
        <%- end %>
      </table>
    </div>
  </div>
</div>