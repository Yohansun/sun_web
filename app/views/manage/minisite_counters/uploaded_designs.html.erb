<div class="main bs-docs-grid">
  <h2>"设计师上传作品" 报表</h2>
  <div class="row show-grid">
    <div class="span10">
      <%= form_tag('/manage/minisite_counters/uploaded_designs', :class => 'form-inline', :method => 'get') do %>
        日期:从
        <%= text_field_tag "data_start", params[:data_start].present? ? params[:data_start] : '2014-01-01 00:00:00', :class => "input-medium datetimepicker_full", :name => 'data_start', :readonly => 'readonly' %>
        到
        <%= text_field_tag "data_end", params[:data_end].present? ? params[:data_end] : Time.now.to_s, :class => "input-medium datetimepicker_full", :name => 'data_end', :readonly => 'readonly' %>
        &nbsp;&nbsp;&nbsp;
        <%= button_tag "查询", data: { disable_with: "请等待..." }, :class => 'btn btn-small btn-primary' %>
        &nbsp;&nbsp;
        <a href="<%= uploaded_designs_minisite_counters_path(:format => :xls) %>" class="btn btn-small btn-primary">Excel报表</a>
      <% end %>
    </div>
  </div>
</div>

<div class="main bs-docs-grid">
  <div class="row show-grid">
    <div class="span10">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <td>设计师/家装公司用户名</td>
            <td>身份</td>
            <td>电话</td>
            <td>邮箱</td>
            <td>作品链接url</td>
            <td>上传时间</td>
          </tr>
        </thead>
        <tbody>
          <% @designs.each do |design| %>
            <tr>
              <td><%= design.user.try(:display_name) %></td>
              <td><%= design.user.try(:role_chn_name) %></td>
              <td><%= design.user.try(:phone) %></td>
              <td><%= design.user.try(:email) %></td>
              <td><a href="<%= user_design_path(design.user_id,design) if design.user_id %>" target="_blank"><%= user_design_url(design.user_id,design) if design.user_id %></a></td>
              <td><%= design.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="navbar-form pull-left">
    <div class="span4">
      <%= paginate @designs, :outer_window => 5 %>
    </div>
  </div>
</div>