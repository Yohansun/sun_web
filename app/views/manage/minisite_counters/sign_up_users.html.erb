<div class="main bs-docs-grid">
  <h2>"Minisite用户注册统计" 报表</h2>
  <div class="row show-grid">
    <div class="span10">
      <%= form_tag('/manage/minisite_counters/sign_up_users', :class => 'form-inline', :method => 'get') do %>
        日期:从
        <%= text_field_tag "data_start", params[:data_start].present? ? params[:data_start] : '2014-01-01 00:00:00', :class => "input-medium datetimepicker_full", :name => 'data_start', :readonly => 'readonly' %>
        到
        <%= text_field_tag "data_end", params[:data_end].present? ? params[:data_end] : Time.now.to_s, :class => "input-medium datetimepicker_full", :name => 'data_end', :readonly => 'readonly' %>
        &nbsp;&nbsp;&nbsp;
        <%= button_tag "查询", data: { disable_with: "请等待..." }, :class => 'btn btn-small btn-primary' %>
        &nbsp;&nbsp;
        <a href="<%= sign_up_users_minisite_counters_path(:format => :xls) %>" class="btn btn-small btn-primary">Excel报表</a>
      <% end %>
    </div>
  </div>
</div>

<div class="main bs-docs-grid">
  <div class="row show-grid">
    <div class="span10">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <td>普通用户</td>
            <td>设计师(在读)</td>
            <td>设计师(在职)</td>
            <td>家装公司</td>
            <td>总计</td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @normal_users.count %></td>
            <td><%= @school_designer_users.count %></td>
            <td><%= @job_designer_users.count %></td>
            <td><%= @company_users.count %></td>
            <td><%= @users.count %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>