<div class="form-group">
  <%= f.label :end_time,'活动结束时间:', class: 'control-label' %>
  <div class="col-xs-12 col-sm-9">
    <div class="clearfix">
      <%= f.text_field :end_time, :class => "input-medium datetimepicker_full", :readonly => 'readonly' %>
    </div>
  </div>
</div>
<div class="space-2"></div>
<br/>

<div class="form-group">
  <%= f.label :title,'活动名称:', class: 'control-label' %>
  <div class="col-xs-12 col-sm-9">
    <div class="clearfix">
      <%= f.text_field :title, maxlength: '30' %>
      <span class="help-inline">
        <span class="middle">(不超过30个汉字)</span>
      </span>
    </div>
  </div>
</div>
<div class="space-2"></div>
<br/>

<div class="form-group">
  <%= f.label :start_time,'活动时间:', class: 'control-label' %>
  <div class="col-xs-12 col-sm-9">
    <div class="clearfix">
      <%= f.text_field :start_time, maxlength: '20' %>
      <span class="help-inline">
        <span class="middle">(不超过20个汉字)</span>
      </span>
    </div>
  </div>
</div>
<div class="space-2"></div>
<br/>

<div class="form-group">
  <%= f.label :intro,'活动简介:', class: 'control-label' %>
  <div class="col-xs-12 col-sm-9">
    <div class="clearfix">
      <%= f.text_area :intro, rows: 5, maxlength: '90' %>
      <span class="help-inline">
        <span class="middle">(不超过90个汉字)</span>
      </span>
    </div>
  </div>
</div>
<div class="space-2"></div>
<br />
<div class="form-group">
  <p class="control-label">活动图片:</p>
  <div class="col-xs-12 col-sm-9">
    <div class="clearfix">
      <span class="btn btn-small btn-primary fileinput-button">
        <span>上传图片</span>
        <input id="fileupload" type="file" name="file" multiple>
      </span>
      <span class="help-inline col-xs-12 col-sm-7">
        <span class="middle">(尺寸280x145)</span>
      </span>
      <br/>
      <%= image_tag @designer_event.try(:file).try(:url,:list),size: '280x145',id: 'designer_event_image' %>
      <input type="hidden" id="event_image" />
    </div>
  </div>
</div>
<div class="space-2"></div>
<br/>

<div class="form-group">
  <label class="control-label">活动内容:</label>
  <div class="col-xs-12 col-sm-9">
    <div class="clearfix">
      <%= f.text_area :content, rows: 15, class: 'textarea_settings' %>
    </div>
  </div>
</div>
<div class="space-2"></div>
<br/>

<div class="form-group">
  <label class="control-label"></label>
  <div class="clearfix">
    <input type="submit" class="btn btn-small btn-primary" value="保存" />
    <a href="/manage/desginer_events" class="btn btn-small btn-primary">取消</a>
  </div>
</div>