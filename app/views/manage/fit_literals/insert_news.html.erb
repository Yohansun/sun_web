<% content_for :tail do -%>
  <script type="text/javascript">
    $(function(){
    	$('.new_fit_lit_save').click(function(){
        if ($(".insert_new_title").val().length > 10){
				  alert("标题必须输入不超过10个汉字");
				  return false;}
				else{
				 	return true;
				}
			});
    })
  </script>
<% end %>
<div class="clearfix">
   <span><a href="fit_images">图片咨询</a>|<a href="fit_literals">文字咨询</a></span>
</div>
<div class="row-fluid">
  <div style="margin:15px;">
    <table class="table table-striped table-bordered table-hover">
			<thead>
        <tr>
          <td>操作</td>
          <td>排序</td>
          <td>标题（最多输入十个汉字）</td>
          <td>链接</td>
          <td>最后修改日期</td>
        </tr>
      </thead>
      <tbody>
				<tr class="form-inline">
					<%= form_tag(fit_literals_path, method: "post") do %>
						<td>
							<input type="submit" class="new_fit_lit_save" value="保存" id='monitor_link_326820'>
							<%= link_to "取消", fit_literals_path %>
						</td>
						<td>
							<select name="order_id" class="input-medium literal_select">
					      <option>1</option>
					      <option>2</option>
					      <option>3</option>
					      <option>4</option>
					      <option>5</option>
					      <option>6</option>
					    </select>
						</td>
						<td>
							<input name="insert_new_title" value="">
						</td>
						<td>
							<input name="insert_new_link" value="">
						</td>
						<td>
							<span class="">
								<%= Time.now.to_s %>
							</span>
						</td>
				    <% end %>
			  </tr>
				<% @news.each do |new| %>
					<tr  class="form-inline edit_form<%= new.id%>">
						<td>
							<%= link_to "编辑", edit_fit_literal_path(new), :remote => true %>
						</td>
						<td><%= new.order_id %></td>
						<td><%= new.title %></td>
						<td><%= new.link %></td>
						<td><span class="label label-warning"><%= new.updated_at.strftime("%Y-%m-%d %H:%M") %></span>
						</td>
					</tr>
			  <% end %>
		  </tbody>
		</table>
	</div>    
</div>    