<div class="clearfix">
   <span><a href="manage/fit_images">图片咨询</a>|<a href="manage/fit_literals">文字咨询</a></span>
</div>
<ul class="unstyled">
	<li>
		<h5 class="pull-left" style="width:20%">操作</h5>
		<h5 class="pull-left" style="width:20%">排序</h5>
		<h5 class="pull-left" style="width:20%">标题(最多输入十个汉字)</h5>
		<h5 class="pull-left" style="width:15%">链接</h5>
		<h5 class="pull-left" style="width:20%">最后修改日期</h5>
	</li>
	<li  class="form-inline">
		<%= form_tag(fit_literals_path, method: "post") do %>
			<label style="width:20%">
				<input type="submit" class="" value="保存" id='monitor_link_326820'>
				<%= link_to "取消", fit_literals_path %>
			</label>
			<label style="width:20%">
				<input name="order_id" value="">
			</label>
			<label style="width:20%">
				<input name="title" value="">
			</label>
			<label style="width:15%">
				<input name="link" value="">
			</label>
			<label style="width:20%">
				<span class="label label-warning">
					<input name="update_at" value="">
				</span>
			</label>
	<% end %>
</li>
	<% @news.each do |new| %>
		<li  class="form-inline edit_form<%= new.id%>">
			<label style="width:20%">
				<%= link_to "编辑", edit_fit_literal_path(new), :remote => true %>
			</label>
			<label style="width:20%"><%= new.order_id %></label>
			<label style="width:20%"><%= new.title %></label>
			<label style="width:15%"><%= new.link %></label>
			<label style="width:20%"><span class="label label-warning"><%= new.updated_at.strftime("%Y-%m-%d %H:%M") %></span>
			</label>
		</li>
  <% end %>
</ul>