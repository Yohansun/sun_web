<% content_for :tail do -%>
  <script type="text/javascript">
    $(function(){
    	$('.edit_fit_literal').click(function(){
         $(this).parents('li').siblings().find('.edit_fit_literal').attr('href','')
      });
    })
  </script>
  <% end %>
  <div id="breadcrumbs">
  	<ul class="breadcrumb">
  		<li><a href="fit_images">图片资讯</a><span>|</span></li>
  		<li><a href="fit_literals">文字资讯</a></li>
  	</ul>
  </div>
  <div class="row-fluid">
    <div style="margin:15px;">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <td>操作</td>
            <td>排序</td>
            <td>标题（最多输入十个汉字）</td>
            <td>链接</td>
            <td>最后修改日期</td>
          </tr>
        </thead>
        <tbody>
          <% @news.each do |new| %>
          <tr class="edit_form<%= new.id%>">
            <td><%= link_to "编辑", edit_fit_literal_path(new), :remote => true, :class => "edit_fit_literal" %></td>
            <td><%= new.order_id %></td>
            <td><%= new.title %></td>
            <td><%= new.link %></td>
            <td><span class="label label-warning"><%= new.updated_at.strftime("%Y-%m-%d %H:%M") %></span></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%=link_to "最上方插入一行", insert_news_fit_literals_path, :class => "btn btn-small btn-primary", confirm: "此操作会删除最上方的记录，是否继续? " %>
    </div>
  </div>
