<%= render :partial => "head" %>
<%=link_to "最上方插入一行", insert_news_home_liter_heads_path(genre: @liters.first.genre, design_type: "home_" + @liters.first.genre_type + "_liters"), :class => "btn btn-small btn-primary", confirm: "此操作会删除最上方的记录，是否继续? " %>
<div class="row-fluid">
  <div style="margin:15px;">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <td>操作</td>
          <td>排序</td>
          <% if @liters.first.genre_type == "red" || @liters.first.genre_type == "black" %>
            <td>标题（最多输入16个汉字）</td>
          <% else %>
            <td>标题（最多输入12个汉字）</td>
          <% end %>
          <td>链接</td>
          <td>最后修改日期</td>
        </tr>
      </thead>
      <tbody>
        <% @liters.each do |liter| %>
          <tr class="edit_form<%= liter.id%>">
            <td><%= link_to "编辑", edit_home_liter_head_path(liter, genre: liter.genre), :remote => true, :class => "edit_liter_head" %></td>
            <td><%= liter.try(:order_id) %></td>
            <td><%= liter.title %></td>
            <td><%= liter.link %></td>
            <td><span class=""><%= liter.updated_at.strftime("%Y-%m-%d %H:%M") %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
