<% content_for :tail do -%>
  <script type="text/javascript">
    $(function(){
    	$('.new_fit_lit_save').click(function(){
        if ($(".title").val().length > 10 || $(".title").val().length == 0){
				  alert("标题必须输入不超过10个汉字同时标题不能为空");
				  return false;}
				else if($(".link").val() == ""){
          alert("请输入链接");
				  return false;
				}
				else{
				 	return true;
				}
			});
    })
  </script>
<% end %>
<%= render :partial => "head" %>
<div class="row-fluid">
  <div style="margin:15px;">
    <table class="table table-striped table-bordered table-hover">
			<thead>
        <tr>
          <td>操作</td>
          <td>排序</td>
          <td>标题（最多输入十个汉字）</td>
          <td>链接</td>
          <td>最后修改日期</td>
        </tr>
      </thead>
      <tbody>
				<tr class="form-inline">
					<%= form_tag(home_liter_heads_path, method: "post") do %>
						<td>
							<input type="submit" class="new_fit_lit_save" value="保存" id='monitor_link_326820'>
							<%= link_to "取消", fit_literals_path %>
						</td>
						<td>
							1<input name="order_id" value="1" style="display:none;">
							 <input name="genre" value="<%= params[:genre] %>" style="display:none;">
						</td>
						<td>
							<input class="title" name="title" value="">
						</td>
						<td>
							<input class="link" name="link" value="">
						</td>
						<td>
							<span class="">
								<%= Time.now.to_s %>
							</span>
						</td>
				    <% end %>
			  </tr>
				<% @news.each_with_index do |new,index| %>
						<tr  class="form-inline edit_form<%= new.try(:id) %>">
							<td>
								<%= link_to "编辑", edit_home_liter_head_path(new), :remote => true %>
							</td>
							<td><%= new.order_id%></td>
							<td><%= new.title %></td>
							<td><%= new.link %></td>
							<td><span class="label label-warning"><%= new.updated_at.strftime("%Y-%m-%d %H:%M") %></span>
							</td>
						</tr>
			  <% end %>
		  </tbody>
		</table>
	</div>    
</div>    