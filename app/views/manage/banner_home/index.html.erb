<div class="main">

	<div id="index_tab6" class="tab-pane active">
		<div class="clearfix row-fluid bann_edit">
			<div class="span3 well well-small nom">
				<p class="text-right">
					<a href="/manage/banner_home?position=1" class="btn btn-medium <%= @i_banner.id == 1 ? 'btn-primary' : 'btn-light' %>">270x100</a>
				</p>
				<p class="">
					<a href="/manage/banner_home?position=2" class="btn btn-small btn-block <%= @i_banner.id == 2 ? 'btn-primary' : 'btn-light' %>">1000x85</a>
				</p>
				<p class="text-right">
					<a href="/manage/banner_home?position=7" class="btn btn-small <%= @i_banner.position == 7 ? 'btn-primary' : 'btn-light' %>">240x170</a>
					<a href="/manage/banner_home?position=8" class="btn btn-small <%= @i_banner.position == 8 ? 'btn-primary' : 'btn-light' %>">230x170</a>
				</p>
				<p class="">
					<a href="/manage/banner_home?position=3" class="btn btn-small btn-block <%= @i_banner.id == 3 ? 'btn-primary' : 'btn-light' %>">1000x85</a>
				</p>
				<p class="text-left">
					<a href="/manage/banner_home?position=4" class="btn btn-large <%= @i_banner.id == 4 ? 'btn-primary' : 'btn-light' %>">290x200</a>
				</p>
				<div class="clearfix">
					<p class="text-left">
						<a href="/manage/banner_home?position=5" class="btn btn-small span7 <%= @i_banner.id == 5 ? 'btn-primary' : 'btn-light' %>">670x85</a>
						<a href="/manage/banner_home?position=6" class="btn btn-small span5 <%= @i_banner.id == 6 ? 'btn-primary' : 'btn-light' %>">310x85</a>
					</p>
				</div>
			</div>

			<div class="span8">
				<p class="banner_show">
					<img src="<%= asset_path @i_banner.file("list_#{@i_banner.size}".to_sym) %>">
				</p>
				<div>
				<span class="btn btn-small btn-primary fileinput-button">
				    <i class="icon-plus icon-white"></i>
				    <span>上传图片...</span>
				    <input id="fileupload" type="file" name="file" multiple>
				</span>
				<span class="help-inline">当前banner限制尺寸：<%= @i_banner.size %></span></div>
