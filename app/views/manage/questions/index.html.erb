        '</td>' +
        '<td>' +
          '<p class="tips_tit tips_toggle none">title1</p>' +
          '<input type="text" class="input-medium tips_tit_edit">' +
        '</td>' + 
        '<td>' +
          '<p class="tips_site tips_toggle none">www.icolor.com.cn</p>' +
          '<input type="text" class="input-medium tips_site_edit" >' +
