  // $('.tips_form table').on('click','.js-tips_cancel', function(){//alert($(this))
  //   $(this).parents('.row_id').remove();
  //   $('.js-addtr').one('click', function(){
  //     func.call(this)
  //   });

  //   $(this).parents('.tips_form').find('tr').removeClass('row_id');
