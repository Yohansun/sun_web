<%- content_for :tail do %>
  <%= javascript_include_tag "/resources/js/plugins/exp/exp.js" %>
  <script type="text/javascript">
    $(function(){
      var options = {
        data: data
      }
      var sel = new LinkageSelect(options);
      sel.bind('.level_1', <%= params[:province_id].present? ? params[:province_id] : "null" %>, '请选择省');
      sel.bind('.level_2', <%= params[:city_id].present? ? params[:city_id] : "null" %>, '请选择市');
      // use in cubit slide
      var options2 = {
        data  : data
      }
      var sel = new LinkageSelect(options2);
      sel.bind('.level1_1', null, '省/直辖市');
      sel.bind('.level1_2', null, '城市');
      sel.bind('.level1_3', null, '区');

      if (<%= params[:upload_success].present? ? true : false %>) {
        $('#upload_success').modal({show:true});
      };

      $('#check_my_story').click(function(event) {
        $('#upload_success').modal('hide');
        $.get('<%= get_story_info_love_stories_path(love_story_id: params[:love_story_id]) %>');
      });
    })
  </script>
  <script type="text/javascript">
  $(window).load(function () {
    $('.js-msnry').masonry();

    $('.story_modal').on('shown', function () {
      $('#slider_pics').carouFredSel({
        items               : 3,
        direction           : "left",
        scroll : {
          items           : 1,
          duration        : 400,
          pauseOnHover    : true
        },
        prev: {
          button: '#havepics .slider-prev'
        },
        next: {
          button: '#havepics .slider-next'
        },
        auto: {
          play            : false
        }
      });
      $('#slider_designer').carouFredSel({
        items               : 4,
        direction           : "left",
        scroll : {
          items           : 1,
          duration        : 400,
          pauseOnHover    : true
        },
        prev: {
          button: '#nohavepics .slider-prev'
        },
        next: {
          button: '#nohavepics .slider-next'
        },
        auto: {
          play            : false
        }
      });
    });
  });
  </script>
<%- end %>
<div class="container-fluid story">
  <div class="banner">
    <!-- <a href="#" class="btn pa"></a> -->
    <div class="wrapper">
      <%= image_tag 'love_story/images/story/story-banner2.jpg', usemap: '#story_kv', alt: '' %>
      <map name="story_kv" name="story_kv">
        <area shape="rect" coords="56,253,250,290" href="javascript:;" alt="" />
      </map>
    </div>
  </div>
  <div class="container">
    <div class="top-bg"></div>
    <div class="main">
      <div class="p010 clearfix">
        <div class="left_big pull-left">
          <div class="index_main">
            <%= form_tag '/love_story/love_stories', method: :get, class: 'form_search nomargin form-inline' do %>
              <strong class="label-text">地区:</strong>
              <select id="province" class="level_1 input-small" name="province_id"></select>
              <select id="city" class="level_2 input-small" name="city_id"></select>
              <strong class="label-text">故事来源:</strong>
              <%= select_tag :come_from, options_for_select([["请选择",""],
                ["icolor上传","icolor"],
                ["新浪微博上传", "sina"]], params[:come_from]), :class => "input-small" %>
              <button class="btn">确定</button>
              <div class="pull-right">
                <input type="text" class="nomargin pull-left" placeholder="搜名字" name="user_name" value="<%= params[:user_name] if params[:user_name].present? %>" />
                <button class="btn btn-search pull-left"><i class="icon-i16 icon-search_white"></i></button>
              </div>
            <% end %>
          </div>
          <div class="mt10">
            <%- if current_user %>
              <a href="<%= new_love_story_path %>" target="_blank" class="icon-btn icon-share_story">分享爱的故事</a>
            <%- else %>
              <a href="/users/sign_in?return_to=<%= new_love_story_url %>" class="icon-btn icon-share_story" target="_blank" data-confirm="登录网站后才能分享爱的故事,是否现在登录?">分享爱的故事</a>
            <%- end %>
          </div>
          <div class="list">
            <div class="thumbnails js-msnry">
              <%- @love_stories.each do |love_story| %>
                <div class="span3 thumbnail">
                  <% if love_story.love_story_images.count > 0 %>
                    <a href="javascript:;" class="icon-btn icon-pic"></a>
                  <% end %>
                  <h5 class="author">
                    <%= link_to "#{love_story.user_name}", get_story_info_love_stories_path(love_story_id: love_story), class: 'text-blue', remote: true %>
                  </h5>
                  <span class="time"><%= love_story.created_at.try(:to_date) %></span>•<span class="address"><%= Area.find(love_story.area_id).try(:root).try(:name) %></span>
                  <p class="J_resulte dot_linet1 paragraph">
                    <%= love_story.content %>
                  </p>
                </div>
              <%- end %>

            </div>
            <div class="pagination pagination-centered">
              <%= paginate @love_stories, :window => 3, :outer_window => 3, :left => 5, :right => 3 %>
            </div>
          </div>
        </div>
        <div class="right_small pull-right">
          <div class="big_menu index_main">
            <div class="media media_chann">
              <a class="pull-left" href="/images" target="_blank">
                <i class="icon-chann icon-chann_imgbase"></i>
              </a>
              <div class="media-body">
                <h4 class="media-heading"><a class="media-heading_link_a" href="/images" target="_blank">装修图库</a></h4>
                <p class="media_con nomargin">寻找最新家装图片<br>给您专属的家装设计参考！</p>
              </div>
            </div>
            <div class="media media_chann">
              <a class="pull-left" href="/color_designs" target="_blank">
                <i class="icon-chann icon-chann_match"></i>
              </a>
              <div class="media-body">
                <h4 class="media-heading"><a class="media-heading_link_a" href="/color_designs" target="_blank">色彩配搭</a></h4>
                <p class="media_con nomargin">色彩搭配案例 家居色彩宝典 为您的家装出谋画色！</p>
              </div>
            </div>
            <div class="media media_chann">
              <a class="pull-left" href="http://shuaxinfuwu.nipponpaint.com.cn/" target="_blank">
                <i class="icon-chann icon-chann_fresh2"></i>
              </a>
              <div class="media-body">
                <h4 class="media-heading"><a class="media-heading_link_a" href="http://shuaxinfuwu.nipponpaint.com.cn/" target="_blank">立邦刷新服务</a></h4>
                <p class="media_con nomargin">对话顶尖设计大师，提升家装专业眼界！</p>
              </div>
            </div>
          </div>
          <!-- 装修丘比特 -->
          <%= render partial: 'design_images/cubit' %>
          <div class="mt10">
            <a href="#"><img src="<%= asset_path 'love_story/images/ads/ads1.jpg'%>" alt="" /></a>
          </div>
        </div>
      </div>
      <div class="mt25">
        <a href="#"><img src="<%= asset_path 'love_story/images/ads/ads2.jpg'%>" alt="" /></a>
      </div>
      <div class="p010 ul_dot_lists mt25 clearfix">
        <div class="ul_dot_list pull-left">
          <h5><a href="<%= @images_jx_more.url if @images_jx_more%>" target="_blank" class="pull-right a_hover_red"><small class="muted">更多></small></a>装修图库精选</h5>
          <ul class="ul_dot">
            <%- @images_jx.each_with_index do |m,i| %>
              <li class="<%= 'noborder' if i == @images_jx.size - 1 %>">
                <a href="<%= m.url %>" target="_blank"><%= m.title %></a>
              </li>
            <%- end %>
          </ul>
        </div>
        <div class="ul_dot_list pull-left">
          <h5><a href="<%= @star_jx_more.url if @star_jx_more %>" target="_blank" class="pull-right a_hover_red"><small class="muted">更多></small></a>设计之星作品精选</h5>
          <ul class="ul_dot">
            <%- @star_jx.each_with_index do |m,i| %>
              <li class="<%= 'noborder' if i == @images_jx.size - 1 %>">
                <a href="<%= m.url %>" target="_blank"><%= m.title %></a>
              </li>
            <%- end %>
          </ul>
        </div>
        <div class="pull-right"><a href="#"><img src="<%= asset_path 'love_story/images/ads/ads1.jpg'%>"></a></div>
      </div>
    </div>
  </div>
</div>
