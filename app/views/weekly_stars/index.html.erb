<% content_for :head do -%>
  <%= stylesheet_link_tag "imageflow", "style" %>
  <style type="text/css">
    .designs_in_slide #gallery_caption{visibility: hidden;}
    #gallery{
      -webkit-user-select: none; /* Chrome/Safari */
      -moz-user-select: none; /* Firefox */
      -ms-user-select: none; /* IE10+ */
      /* Rules below not implemented in browsers yet */
      -o-user-select: none;
      user-select: none;
    }
  </style>
<% end -%>
<%- content_for :tail do %>
  <%= javascript_include_tag "new_imageflow" %>
  <script type="text/javascript">
  $(function(){
    var gallery = new ImageFlow();
    gallery.init({
      icolor: true,
      ImageFlowID: 'gallery',
      imagesHeight:       0.69,
      startID:            1,
      xStep:              100,
      buttons:            true,          /* Toggle navigation buttons */
      circular:           true,          /* 连续播放 */
      imageFocusMax:      1,              /* Max number of images on each side of the focussed one */
      imagesM:            1.0,            /* Multiplicator for all images in percent */
      opacity:            true,          /* Toggle image opacity */
      opacityArray:       [10,7],         /* Image opacity (range: 0 to 10) first value is for the focussed image */
      percentLandscape:   300,           /* Scale landscape format */
      onClick:            function() { window.open('/weekly_stars/<%= @design.id%>#'+ $(this).data('id'))}
    });
  });
  </script>
<%- end %>
<h3 class="chann_caption nomargin">
  <i class="icon-map icon-map3 icon_colors"></i>
  <strong>设计鉴赏</strong>
  <small>实用案例为您的家装出谋画色</small>
</h3>
<div class="mt10">
  <a href="<%= @banners[0].url? ? @banners[0].url : 'javascript:void(0);' %>" target="_blank"><%= image_tag @banners[0].try(:file).try(:url, :list_1000x85) %></a>
</div>
<ul class="breadcrumb">
  <li><%= link_to "首页", "/" %> &gt;</li>
  <li><%= link_to "设计鉴赏", "/weekly_stars" %> &gt;</li>
  <li class="active">设计之星</li>
</ul>
<hr class="border2 border2_mt2">
<div class="weekly_gallery">
  <div class="slider_topbar">
    <form class="btn_group pull-right">
      <%-
        {weekly_stars_week_weekly_stars_path => "每周之星",
         weekly_stars_month_color_weekly_stars_path  => "月度色彩之星",
         weekly_stars_month_design_weekly_stars_path => "月度设计之星"}.each do |pat,type|
      %>
      <%= link_to type, pat, :class => "#{request.fullpath == pat ? 'btn active' : 'btn'}" %>
      <%-end%>
    </form>
    <h3 class="title nomargin"><%= @design.design_name %></h3>
  </div>
  <div class="index_main nopadding">
    <div class="slides_box">
      <div class="designs_in_slide pr">
        <div class="imageflow" id="gallery" unselectable="on">
          <%- @design.weekly_star_uploads.each_with_index do |star_upload,index| %>
            <%= image_tag(star_upload.file.url(:slide), :class => "cloudcarousel", :'data-id' => star_upload.id, :alt => "#gallery#{index+1}") unless star_upload.file.nil? %>
          <%- end %>
        </div>
      </div>
    </div>
    <div class="weekly_info clearfix mt10">
      <div class="pull-left main">
        <div class="btn_group clearfix nomargin pr">
          <%= link_to raw("<i class='icon-i16 icon-xin_gray'></i><span class='votes_count#{@link_design.id}'>#{@link_design.try(:votes_count)}</span>"), votes_path(:voteable_id => @link_design.id, :voteable_type => "Design"), :remote => true, :method => 'post', class: 'btn2 pull-left', title: '' %>
          <%= link_to raw("<i class='icon-i16 icon-comment1'></i>评论(#{@link_design.try(:comments).try(:length)})"), "/weekly_stars/#{@design.id}#comments" ,class: 'btn2 pull-left', title: '', target: '_blank' %>
          <%= link_to raw("<i class='icon-i16 icon-share1'></i>转发(#{@link_design.try(:shares_count) || 0})"), "javascript:;" ,class: 'btn2 pull-left js-share_btn', title: '' %>
          <div id="bdshare" class="bdshare_t bds_tools get-codes-bdshare js-share_toggle hide">
            <a class="bds_qzone"></a>
            <a class="bds_tsina"></a>
            <a class="bds_tqq"></a>
            <a class="bds_renren"></a>
            <a class="bds_t163"></a>
            <a class="shareCount" href="#" title="累计分享0次">0</a>
            <!-- <a class="bds_more" style="background-image:none!important;padding-left:0;">更多分享平台...</a> -->
          </div>
          <%= link_to raw("<i class='icon-i16 icon-fullscreen'></i>全屏"), "/weekly_stars/#{@design.id}/fullscreen" ,class: 'btn2 pull-right', title: '' %>
          <%= link_to raw("<i class='icon-i16 icon-collect'></i>收藏"), user_collects_path(@design.id, weekly_star_id: @design.id), :remote => true, method: :post, :class => "btn2 pull-right", title: ''  %>
          <%= link_to raw("<i class='icon-i16 icon-freedown'></i>免费下载"), download_weekly_star_path(@design.id,:target => params[:action]), class: "btn2 pull-right", title: '' %>
        </div>

        <%- @design.weekly_star_uploads.each_with_index do |star_upload,index| %>
          <% unless star_upload.file.nil? %>
            <div id="gallery<%= index + 1%>" class="colors_box clearfix nomargin pt15 hide">
              <div class="pull-left">
                <img src="<%= asset_path 'imgbase_in/color.jpg' %>">
              </div>
              <ul class="pull-left group unstyled">
                <%- color1, color2, color3 = search_color_code(star_upload.recommend_color1), search_color_code(star_upload.recommend_color2), search_color_code(star_upload.recommend_color3) %>
                <% if color1 %>
                  <li>
                    <%- if color1.rgb? %>
                      <div class="colorblock" style="background-color:rgb(<%= color1.rgb %>)"></div>
                    <%- end %>
                    <h6 class="colortitle"><%= star_upload.recommend_color_category1 %></h6>
                    <p class="colorname">立邦(<%= star_upload.recommend_color1 %>)<%= color1.try(:name) %></p>
                  </li>
                <% end %>
                <% if color2 %>
                  <li>
                    <%- if color2.rgb? %>
                      <div class="colorblock" style="background-color:rgb(<%= color2.rgb %>)"></div>
                    <%- end %>
                    <h6 class="colortitle"><%= star_upload.recommend_color_category2 %></h6>
                    <p class="colorname">立邦(<%= star_upload.recommend_color2 %>)<%= color2.try(:name) %></p>
                  </li>
                <% end %>
                <% if color3 %>
                  <li>
                    <%- if color3.rgb? %>
                      <div class="colorblock" style="background-color:rgb(<%= color3.rgb %>)"></div>
                    <%- end %>
                    <h6 class="colortitle"><%= star_upload.recommend_color_category3 %></h6>
                    <p class="colorname">立邦(<%= star_upload.recommend_color3 %>)<%= color3.try(:name) %></p>
                  </li>
                <% end %>
              </ul>
              <a href="http://www.nipponpaint.com.cn/web/home/dealer_search.jsp" target="_blank" class="goshop pull-right"></a>
              <a href="http://nipponpaint.tmall.com/shop/viewShop.htm?prt=1338961882482&prc=1" target="_blank" class="gobuy pull-right"></a>
            </div>
          <% end %>
        <%- end %>

        <div class="work_infos linet1">
          <p class="work_info">
            <%- unless @design.company_name.blank? %>
              <span>公司名称：<%= @design.company_name %></span>
            <%- end %>
            <%- unless @design.author.blank? %>
              <span>设计师  ：<%=  @design.author %>
                <%- unless @design.author_url.blank? %>
                  <%= link_to "", user_asks_path(@link_design.user.id), class: "btn_ask"%>
                <%- end %>
              </span>
            <%- end %>
            <%- unless @design.design_style.blank? %>
              <span>设计风格：<%= @design.design_style %></span>
            <%- end %>
          </p>
          <%- unless @design.design_intro.blank? %>
            <p class="work_info">设计说明：<%= @design.design_intro %></p>
          <%- end %>
        </div>
      </div>
      <div class="pull-right">
        <a href="<%= @banners[1].url? ? @banners[1].url : 'javascript:void(0);' %>" target="_blank"><%= image_tag @banners[1].try(:file).try(:url, :list_230x230) %></a>
      </div>
    </div>
  </div>
</div>
<div class="clearfix">
  <div class="footer_banner mt10 pull-left">
    <a href="<%= @banners[2].url? ? @banners[2].url : 'javascript:void(0);' %>" target="_blank"><%= image_tag @banners[2].try(:file).try(:url, :list_670x85) %></a>
  </div>
  <div class="footer_banner mt10 pull-right">
    <a href="<%= @banners[3].url? ? @banners[3].url : 'javascript:void(0);' %>" target="_blank"><%= image_tag @banners[3].try(:file).try(:url, :list_310x85) %></a>
  </div>
</div>
<div class="clearfix color_designs weekly_stars mt10">
  <div class="map-left pull-left">
    <div class="index_main" style="height:1254px;">
      <h5 class="sub_title">往期之星</h5>
      <ul class="per_works unstyled clearfix mt20 pb25">
        <% if @elder_designs.present? %>
          <% @elder_designs.in_groups_of(3, false).each do |group| -%>
            <% group.each do |design| -%>
              <% link_design = Design.find(design.design_link.split("/").last) unless design.design_link.blank? %>
              <li class="pr">
                <a href="/weekly_stars/<%= design.id %>" class="help-block pr" target="_blank">
                  <img src="<%= design.main_preview_img.url(:index) %>" title="装修设计欣赏-<%= design.design_name %>" alt=""/>
                  <%=
                    case design.star_type_id
                      when 2
                        content_tag(:i, "", class: "icon-star_of icon-star_color")
                      when 3
                        content_tag(:i, "", class: "icon-star_of icon-star_design")
                    end
                  %>
                </a>
                <div class="thumb_imgs clearfix">
                  <%- if link_design %>
                    <%- link_design.design_images.sample(3).each do |design_image| %>
                      <a href="/weekly_stars/<%= design.id %>" target="_blank" class="pull-left thumb_item">
                        <%= image_tag design_image.try(:file).try(:url, :thumb), size: '65x65' %>
                      </a>
                    <%- end %>
                  <%- end %>
                </div>
                <h5 title="<%= design.design_name %>" class="dott1">
                  <%= truncate(design.design_name, :length => 16) %>
                </h5>
                <p class="para_oneline">
                  <small class="pull-right muted"><%= design.updated_at.to_date %></small>
                  <%= truncate(design.author, :length => 8) %>
                </p>
                <p class="dott1 nomargin pr">
                  <%= link_to raw("<span><i class='icon-i16 icon-xin_gray2'></i><em class='votes_count#{link_design.id}'>#{link_design.votes_count}</em></span>"), votes_path(:voteable_id => link_design.id, :voteable_type => "Design"), :remote => true, :method => 'post', title: '' %>

                  <a href="/weekly_stars/<%= design.id%>#comments" target="_blank">
                    <span><i class="icon-i16 icon-comment1"></i><%= link_design.try(:comments).try(:length) || 0 %></span>
                  </a>
                  <span class="noborder js-works_share"><i class="icon-i16 icon-share1"></i><%= link_design.try(:shares_count) || 0%></span>
                </p>
                <div id="bdshare" class="bdshare_t bds_tools get-codes-bdshare js-works_share hide">
                  <a class="bds_qzone"></a>
                  <a class="bds_tsina"></a>
                  <a class="bds_tqq"></a>
                  <a class="bds_renren"></a>
                  <a class="bds_t163"></a>
                  <a class="shareCount" href="#" title="累计分享0次">0</a>
                  <!-- <a class="bds_more" style="background-image:none!important;padding-left:0;">更多分享平台...</a> -->
                </div>
              </li>
            <% end -%>
          <% end -%>
        <% end -%>
      </ul>
      <form class="pager pager-form">
        <%= paginate @elder_designs %>
        &nbsp;&nbsp;
        <% if @elder_designs.total_pages > 1 %>
          共<%=@elder_designs.total_pages %>页
          跳到第<input type="text" name="page" value="<%= params[:page] if params[:page]%>" />页
          <input type="submit" value="GO" class="pager-submit">
        <% end %>
      </form>
    </div>
  </div>
  <div class="pull-right smaller">
    <%- colum_datas1 = IColumnData.show_data(1).limit(5) %>
    <ul class="unstyled map-right index_main js-img_show">
      <li class="clearfix refresh_r_tit">
        <a href="<%= IColumnData.where(position: 0, i_column_type_id: 1).first.try(:url) %>" target="_blank" class="pull-right"><small class="muted">更多></small></a>
        <strong class="pull-left">最新大师作品</strong>
      </li>
      <% colum_datas1.each_with_index do |dcs,index| %>
      <li class="map-r1 dott1 <%="active" if index == 0%>">
          <i class="icon-i16 icon-<%= index+1 %>"><%= index+1 %></i>
            <strong class="js-title"><%=dcs.title%></strong><br>
            <a href="<%=dcs.url %>" class="<%="hide" if index != 0%> js-img" target="_blank"><img src="<%=dcs.file.url(:list_155x115)%>" alt="" /></a>
      </li>
      <% end -%>
    </ul>
    <%- colum_datas2 = IColumnData.show_data(4).limit(5) %>
    <ul class="unstyled map-right index_main mt10 js-img_show">
      <li class="clearfix refresh_r_tit">
        <a href="<%= IColumnData.where(position: 0, i_column_type_id: 4).first.try(:url) %>" target="_blank" class="pull-right"><small class="muted">更多></small></a>
        <strong class="pull-left">装修效果图精华推荐</strong>
      </li>
      <% colum_datas2.each_with_index do |dcs,index| %>
      <li class="map-r1 dott1 <%="active" if index == 0%>">
          <i class="icon-i16 icon-<%= index+1 %>"><%= index+1 %></i>
            <strong class="js-title"><%=dcs.title%></strong><br>
            <a href="<%=dcs.url %>" class="<%="hide" if index != 0%> js-img" target="_blank"><img src="<%=dcs.file.url(:list_155x115)%>" alt="" /></a>
      </li>
      <% end -%>
    </ul>
    <%- colum_datas3 = IColumnData.show_data(5).limit(5) %>
    <ul class="unstyled map-right index_main mt10 js-img_show">
      <li class="clearfix refresh_r_tit">
        <a href="<%= IColumnData.where(position: 0, i_column_type_id: 5).first.try(:url) %>" target="_blank" class="pull-right"><small class="muted">更多></small></a>
        <strong class="pull-left">本周最热装修设计</strong>
      </li>
      <% colum_datas3.each_with_index do |dcs,index| %>
      <li class="map-r1 dott1 <%="active" if index == 0%>">
          <i class="icon-i16 icon-<%= index+1 %>"><%= index+1 %></i>
            <strong class="js-title"><%=dcs.title%></strong><br>
            <a href="<%=dcs.url %>" class="<%="hide" if index != 0%> js-img" target="_blank"><img src="<%=dcs.file.url(:list_155x115)%>" alt="" /></a>
      </li>
      <% end -%>
    </ul>
    <div class="mt10">
      <a href="<%= @banners[4].url? ? @banners[4].url : 'javascript:void(0);' %>" target="_blank"><%= image_tag @banners[4].try(:file).try(:url, :list_230x170) %></a>
    </div>
  </div>
</div>

