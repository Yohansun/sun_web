<% content_for :head do -%>
    <%= stylesheet_link_tag 'style', 'weekstar' %>
<% end -%>
<%- content_for :tail do %>
    <%= javascript_include_tag "reply" %>
<%- end %>
<div class="main page_weekstar page_weekstar_detail">
<div class='sub_title tr pt25'>
  <img src="<%= asset_path "design/title_design.png" %>"/>
</div>
  <div class='sub_nav ft12 pr tr'>
    <em><a class="fb" href="/weekly_stars">每周之星</a></em>
    <em><a href="/weekly_stars">设计鉴赏</a><span></span></em>
    <em><a href="/">首页</a><span></span></em>
  </div><!--sub_nav ends-->
<div class="wrapper group">
<%- if @design == WeeklyStar.last %>
    <div class="weekstart_titleA">
      <div class="subtitle">2012.5.12 往期作品</div>
      <div class="fullscreen_btn"><%= link_to "全屏观看", "/weekly_stars/#{@design.id}/fullscreen" %></div>
      <h1><%= @design.design_name %></h1>
    </div>
<%- else %>
<div class="weekstart_titleA">
  <div class="subtitle"><%= @design.try(:published_at).try(:to_date) %> 往期作品</div>
  <div class="fullscreen_btn"><%= link_to "全屏观看", "/weekly_stars/#{@design.id}/fullscreen?action_from=action_show" %></div>
  <h1><%= @design.design_name %></h1>
</div>
<%- end %>

<div class="weekstart_detail">
<div class="gallery">
  <span class="moveleft"></span>
  <span class="moveright"></span>

  <div class="galleryK" id="gallery">
    <%- unless @design.nil? %>
        <%- @design.weekly_star_uploads.each do |i| %>
            <%= image_tag(i.file.url(:slide), :class => "cloudcarousel", :alt => "") unless i.file.nil? %>
        <%- end %>
    <%- end %>
  </div>
</div>
<%= javascript_include_tag "galleryK" %>
<div class="color-picker">
<div class="overview">
  <div class="votes">所获票数：<span id="votes_count<%= @design.id %>"><%= @design.try(:votes_count) %></span>
    <%#=# link_to image_tag("design/d_vote_btn.png"), votes_path(:voteable_id => @design.id, :voteable_type => "WeeklyStar"), :remote => true, :method => 'post' %>
  </div>

  <div class="operate pr">
    <span class="forward">转发 (0)</span>
    <span class="review">评论 (<%= @design.try(:comments).length %>)</span>
    <div class="popup_zf group none" style="bottom:-35px; left:25px;">
      <%= forward_links("分享每周之星精彩设计作品----#{@design.project_name}（#{@design.author}），更多精彩装修作品，尽在---立邦iColor网","", @design.main_preview_img.url) %>
    </div>
  </div>
</div>
<div class="color">
  <div class="palettes">
    <%- color_count = 0  -%>
    <%- color_count += 1 if @color1-%>
    <%- color_count += 1 if @color2-%>
    <%- color_count += 1 if @color3 -%>
    <%- if color_count > 0 -%>
        <%- 8.times do %>
            <div class="palette">
              <%- if color_count == 1 %>
                  <div class="desc desc1">
              <%- end %>
              <%- if color_count == 2 %>
                  <div class="desc desc2">
              <%- end %>
              <%- if color_count == 3 %>
                  <div class="desc desc3">
              <%- end %>
              <div class="title"></div>
              <div class="list"><ul>
                <%if @color1  %>
                    <li><div class="colorblock" style="background-color:rgb(<%= @color1.rgb %>)"></div>
                      <h5><%= @color1.name %></h5>
                      <p><%= '立邦'+@color1.code %></p>
                    </li>
                <%- end %>
                <%if @color2  %>
                    <li><div class="colorblock" style="background-color:rgb(<%= @color2.rgb %>)"></div>
                      <h5><%= @color2.name %></h5>
                      <p><%= '立邦'+@color2.code %></p>
                    </li>
                <%- end %>
                <%if @color3  %>
                    <li><div class="colorblock" style="background-color:rgb(<%= @color3.rgb %>)"></div>
                      <h5><%= @color3.name %></h5>
                      <p><%= '立邦'+@color3.code %></p>
                    </li>
                <%- end %>
              </ul></div>
              </div>
              </div>
        <%- end %>
    <%- end %>
    </div>
