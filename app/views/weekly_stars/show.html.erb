<script type="text/javascript">
    if ($.browser.msie && $.browser.version < 7) {
        $(function () {
            $('div.palette').hover(function () {
                $(this).find('div.desc').show();
            }, function () {
                $(this).find('div.desc').hide();
            });
        })
    }
</script>
<![endif]-->
<div class="gotaobao">
  <a href="http://nipponpaint.tmall.com/shop/viewShop.htm" target="_blank">访立邦淘宝商城，点选更多产品颜色</a>
</div>
</div>
</div>

<div class="properties">
  <table class="propertyA">
    <%- unless @design.company_name.blank? %>
        <tr><th>公司名称：</th>
          <td><%= @design.company_name %>
            <%- unless @design.company_url.blank? %>
                <a href="<%=@design.company_url%>">[进入公司主页]</a></td>
            <%- end %>
            </tr>
    <%- end %>
    <%- unless @design.company_address.blank? %>
        <tr><th>公司地址：</th>
          <td><%= @design.company_address %></td>
        </tr>
    <%- end %>
    <%- unless @design.author.blank? %>
        <tr><th>设计师：</th>
          <td><%=  @design.author %>
            <%- unless @design.author_url.blank? %>
                <a href="<%= @design.author_url %>">[进入个人主页]</a></td>
            <%- end %>
            </tr>
    <%- end %>
    <%- unless @design.project_name.blank? %>
        <tr><th>项目名称：</th>
          <td><%= @design.project_name %></td>
        </tr>
    <%- end %>
    <%- unless @design.design_style.blank? %>
        <tr><th>设计风格：</th>
          <td><%= @design.design_style %></td>
        </tr>
    <%- end %>
    <%- unless @design.design_intro.blank? %>
        <tr><th>设计说明：</th>
          <td><%= @design.design_intro %></td>
        </tr>
    <%- end %>
    <%- unless @design.design_material.blank? %>
        <tr><th>主要材料：</th>
          <td><%= @design.design_material %></td>
        </tr>
    <%- end %>
    <%- unless @design.recommend_reason.blank? %>
        <tr><th>推荐理由：</th>
          <td><%= @design.recommend_reason %></td>
        </tr>
    <%- end %>
  </table>
</div>
<div class="review_wrap">
  <div class="reviewform">
    <div class="bar">
      <h4><span>评论</span>(<%= @design.comments.length %>)</h4><span class="r"><span class="words_tip">0</span>/140</span>
    </div>
    <div class="form-content">
      <%= form_for(Comment.new) do |f| %>
          <%= f.hidden_field :commentable_id, value: params[:id] %>
          <%= f.hidden_field :commentable_type, value: 'WeeklyStar' %>
          <p class="input">
            <%= f.text_area :content, :class => "area_text" %>
          </p>
          <p class="button">
            <%= image_submit_tag "design/submitA.gif", value: "提交", alt: "提交" -%>
          </p>
      <% end %>
    </div>
  </div>
  <div class="pager ft12">
    <%- unless @comments.nil? %>
        <%= paginate @comments %>
    <%- end %>
  </div>
  <div class="review_list">
    <ul class="review_listA">
      <% @comments.each do |c| %>
          <li>
            <div class="bar">
              <span class="user"><%= c.user.display_name %></span><span class="time"><%= c.created_at.to_date %></span>
            </div>
            <div class="reply">
              <a href="javascript:void(0)">回复</a>
            </div>
            <div class="content">
              <%= c.content %>
            </div>
            <%- c.reply_msgs.order("created_at DESC").each do |r| %>
                <div class='reply_list cl pr clear ft14'>
                  <em class='pa'>◆</em>
                  <span class='pa'>◆</span>
                  <p class="reply_tabs fl">
                    <%= r.user.display_name %><%= r.content %>
                  </p>
                  <p class="fr">
                    <%= r.created_at.to_date %>
                  </p>
                </div>
            <%- end %>
            <div class="reply_input none cl pr clear">
              <%= form_for(ReplyMsg.new) do |f| %>
                  <%= f.hidden_field :show_id, value: @design.id %>
                  <%= f.hidden_field :comment_id, value: c.id %>
                  <%= f.hidden_field :reply_type, value: "weekly_stars" %>
                  <%= f.text_area :content, :rows => 5 %>
                  <em class="pa">◆</em>
                  <span class="pa">◆</span>
                  <input type="image" src="<%= asset_path "btn.jpg" %>">
              <%- end %>
            </div>
            <!--reply_input ends-->
          </li>
      <% end %>
    </ul>
  </div>
</div>
</div>
</div>
<div class='sub_bot pr'></div>
<!--sub_bot ends-->
</div><!--main ends-->