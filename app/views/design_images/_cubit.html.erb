<div class="request_box mt10">
	<%= form_tag cubit_fixtures_path, :class=>"request_form form-inline chann1_left1", :remote => true do %>
		<div class="form-inline option">
			<label for="" class="control-label">姓名<span class="text-error">*</span></label>
			<%= text_field :cubit_fixtures, :name ,:class => "input-small"%>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">电话<span class="text-error">*</span></label>
			<%= text_field :cubit_fixtures, :phone, :class => "input-small" %>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">装修面积<span class="text-error">*</span></label>
			<%= text_field :cubit_fixtures, :fixture_area, :class => "input-small" %>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">期望风格</label>
			<%=  select_tag "cubit_fixtures[style]", options_from_collection_for_select(ImageLibraryCategory.style, "title", "title",params[:style]),:prompt=>'请选择', :class => "input-small"  %>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">楼盘名称<span class="text-error">*</span></label>
			<%= text_field :cubit_fixtures, :house_name, :class => "input-small" %>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">房型<span class="text-error">*</span></label>
			<%=  select_tag "cubit_fixtures[fixture_type]", options_from_collection_for_select(ImageLibraryCategory.where(parent_id: 1), "title", "title",params[:tag]),:prompt=>'请选择',class: "input-small"%>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">装修区域<span class="text-error">*</span></label>
			<select class="level1_1 input-small" name="" style="width:85px;"></select>
      <select class="level1_2 input-small" name="" style="width:58px;"></select>
      <select class="level1_3 input-small" name="cubit_fixtures[area_id]" style="width:85px;margin-left:67px;"></select>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">装修预算<span class="text-error">*</span></label>
			<%=  select_tag "cubit_fixtures[pre_price]", options_from_collection_for_select(ImageLibraryCategory.cost, "title", "title",params[:style]),:prompt=>'请选择', :class => "input-small"  %>
		</div>
		<div class="channel1 text-center dott1">
			<input type="submit" value="" class="input_submit">
		</div>
		<script type="text/javascript">
  $(function(){
    var bool = true;
    var one = true;
    $('.chann1_left1').submit(function(){
      var input_submit = $(this).find('.input_submit');
      if(one){
        input_submit.bind('click', inputTimeout);
        setTimeout(function(){
          input_submit.unbind('click', inputTimeout);
          one = bool = true;
        },5000);
        one = false;
      }
      return bool;
    })
    function inputTimeout(){
      bool = false;
      alert('系统正在处理上一次提交的需求，请稍后再试！')
    }
  })
  </script>
	<%- end %>
</div>