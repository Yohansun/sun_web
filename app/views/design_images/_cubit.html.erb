<div class="request_box mt10">
	<%= form_tag cubit_fixtures_path, :class=>"request_form form-inline", :remote => true do %>
		<div class="form-inline option">
			<label for="" class="control-label">姓名<span class="text-error">*</span></label>
			<%= text_field :cubit_fixture, :name ,:class => "input-small"%>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">电话<span class="text-error">*</span></label>
			<%= text_field :cubit_fixture, :phone, :class => "input-small" %>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">装修面积<span class="text-error">*</span></label>
			<%= text_field :cubit_fixture, :fixture_area, :class => "input-small" %>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">期望风格</label>
			<%=  select_tag "cubit_fixture[style]", options_from_collection_for_select(ImageLibraryCategory.style, "title", "title",params[:style]),:prompt=>'请选择', :class => "input-small"  %>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">楼盘名称<span class="text-error">*</span></label>
			<%= text_field :cubit_fixture, :house_name, :class => "input-small" %>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">房型<span class="text-error">*</span></label>
			<%=  select_tag "cubit_fixture[fixture_type]", options_from_collection_for_select(ImageLibraryCategory.where(parent_id: 1), "id", "title",params[:tag]),:prompt=>'请选择',class: "input-small"%>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">装修区域<span class="text-error">*</span></label>
			<select class="level1_1 input-small" name="" style="width:85px;"></select>
      <select class="level1_2 input-small" name="" style="width:58px;"></select>
      <select class="level1_3 input-small" name="cubit_fixture[area_id]" style="width:85px;margin-left:67px;"></select>
		</div>
		<div class="form-inline option">
			<label for="" class="control-label">装修预算<span class="text-error">*</span></label>
			<%=  select_tag "cubit_fixture[pre_price]", options_from_collection_for_select(ImageLibraryCategory.cost, "title", "title",params[:style]),:prompt=>'请选择', :class => "input-small"  %>
		</div>
		<div class="channel1 text-center dott1">
			<input type="submit" value="" class="input_submit">
		</div>
	<%- end %>
</div>