<!DOCTYPE html>
<html>
  <head>
    <title>幻灯片</title>
    <meta charset="utf-8" />
    <%= stylesheet_link_tag  "reset", "galleryc"  %>
    <%= javascript_include_tag  "jquery","galleryC"  %>
  </head>
  <body>
    <div class="galleryC_wrap">
      <div class="title"><h1><%= @design_image.title ? @design_image.title : "未命名" %><span class="qin_span"></span></h1></div>
      <div class="galleryC">
        <div class="toolbar">
          <div class="toolbar_wrap">
            <%- if params[:img] == "imgs" %>
               <div class="exit"><%= link_to "退出全屏", user_design_images_path(@design_image, page: params[:page], imageable_type: params[:imageable_type], pinyin: params[:pinyin], search: params[:search], tags: params[:tags], all_tags: params[:all_tags], area_id: params[:area_id], ranking_list: params[:ranking_list]) %></div>
            <%- elsif params[:img] == "img" %>
               <div class="exit"><%= link_to "退出全屏", image_show_design_image_path(@design_image) %></div>
            <%- else %>
               <div class="exit"><%= link_to "退出全屏", user_design_images_path(@design_image, page: params[:page], imageable_type: params[:imageable_type],pinyin: params[:pinyin], search: params[:search], tags: params[:tags], all_tags: params[:all_tags], area_id: params[:area_id], ranking_list: params[:ranking_list]) %></div>
            <%- end %>
          </div>
        </div>
        <div class="big_image">
          <%= image_tag(@design_image.file.url(:fullscreen))%>
        </div>
      </div>
    </div>
    <div class="gallery_over_mask"></div>
  </body>
</html>