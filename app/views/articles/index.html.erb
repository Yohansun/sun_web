<% content_for :head do -%>
    <%= stylesheet_link_tag "news","style", "industry_news"%>
    <style type="text/css">
        .article a {
            color: #b90000;
        }
        /*.faqs p.ft14{ width:780px; line-height:18px; margin-bottom:15px;}*/
    </style>
<% end -%>
<div class="main">
  <div class='sub_title text-right'>
    <img src="<%= asset_path "news/title_news.png" %>"/>
  </div>
  <div class='sub_nav ft12 pr tr'>
    <em><%= link_to "装修资讯", articles_with_tag_path("design"), :class => 'fb' %></em>
    <em><%= link_to "行业资讯", articles_with_tag_path("design") %><span></span></em>
    <em><%= link_to "首页", "/" %><span></span></em>
  </div><!--sub_nav ends-->
  <div class='wrapper'>
    <!--news_top ends-->
    <%- if params[:tags].present?
     tag = params[:tags]
     -%>
    <%- @articles.each do |article| %>
        <div class="shadow">
          <div class="section clear">
            <%= image_tag article.preview_img.url(:icolor_articles) if article.preview_img %>
            <div class="article fl ft14">
              <h1><%= link_to article.title, "/articles/#{article.id}-design" %></h1>
              <span>时间：<%= article.published_at.to_date %></span>
              <p><%= raw article.intro %>...<br/><%= link_to "[详细]", "/articles/#{article.id}-design" %></p>
            </div>
            <!--article ends-->
          </div><!--section ends-->
        </div><!--shadow ends-->
    <%- end %>
    <%- else -%>
       <%- @articles.each do |article| %>
        <div class="shadow">
          <div class="section clear">
            <%= image_tag article.preview_img.url(:icolor_articles) if article.preview_img %>
            <div class="article fl ft14">
              <h1><%= link_to article.title, "/articles/#{article.id}-design" %></h1>
              <span>时间：<%= article.published_at.to_date %></span>
              <p><%= raw article.intro %>...<br/><%= link_to "[详细]", "/articles/#{article.id}-design" %></p>
            </div>
            <!--article ends-->
          </div><!--section ends-->
        </div><!--shadow ends-->
    <%- end %>
    <%- end %>
    <div class="pag_container">
      <div class="pager ft12">
        <%= paginate @articles %>
      </div>
      <!--pager ends-->
    </div>
    <!--pag_container ends-->
    <div class="weekly_tips ft12" id="weekly_tips">
      <%= render :partial => "weekly_tips/index" %>
    </div>
    <!--weekly_tips ends-->
    </div>
    <!--wrapper ends-->
  <div class='sub_bot pr'>
    <div class="pager ft12" id="weekly_tips_nav">
      <%= render :partial => "weekly_tips/nav" %>
    </div>
    </div>
    <!--sub_bot ends-->
  </div>
  <!--main ends-->