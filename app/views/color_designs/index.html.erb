      <ul class="per_works unstyled clearfix mt10">
        <% @designs.in_groups_of(3, false).each do |group| -%>
          <% group.each do |design| -%>
          <li class="">
            <a href="/color_designs/<%= design.id %>" class="help-block"><img src="<%= design.main_preview_img.url(:index) %>" title="<%= design.design_name %>" alt="" /></a>
