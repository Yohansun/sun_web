<% content_for :head do -%>
    <%= stylesheet_link_tag 'weekstar' %>
<% end -%>
<% content_for :tail do -%>
    <%= javascript_include_tag 'galleryB.js' %>
    <script type="text/javascript">
        $(".slide_thumb").click(function(event) {
            event.preventDefault();
            $(".big_image img").attr("src", $(event.target).parent().attr("href"));
        });
    </script>
<% end -%>
<div class="main page_weekstar page_weekstar_detail">
  <div class='sub_title tr pt25'>
    <img src="<%= asset_path "design/title_design.png" %>" />
  </div>
  <div class='sub_nav ft12 pr tr'>
    <a href="/">首页</a><span class="arrow_1"></span><a href="/color_designs">色彩搭配</a>
  </div><!--sub_nav ends-->
  <div class="wrapper group">
    <div class="weekstart_titleB">
      <h1><%= @design.design_name %></h1>
      <div class="subtitle">
        <div class="votes">
          所获票数：<span id="votes_count<%= @design.id%>"><%= @design.votes_count %></span>
          <%= link_to image_tag("design/d_vote_btn.png"), votes_path(:voteable_id => @design.id, :voteable_type => "ColorDesign"), :remote => true, :method => 'post' %>
        </div>
        <div class="operate">
          <span class="forward">转发 (0)</span>
          <span class="review">评论 (<%= @design.comments.length %>)</span>
        </div>
      </div>
      <div class="fullscreen_btn">
        <%= link_to "全屏观看", "/color_designs/#{@design.id}" %>
      </div>
    </div>
    <div class="weekstart_detail">
      <div class="big_image">
        <% if @design.main_preview_img -%>
            <%= image_tag @design.main_preview_img.url(:slide) %>
        <% end -%>
      </div>
      <div class="galleryB">
        <span class="moveleft"></span>
        <span class="moveright"></span>
        <div class="list">
          <ul>
            <% @design.color_design_uploads.each do |i| -%>
                <li><%= link_to (image_tag i.file.url(:slide_thumb),
                                           :alt => @design.design_name), i.file.url(:slide),
                                :title => @design.design_name, :class => "slide_thumb" %></li>
            <%- end -%>
          </ul>
        </div>
      </div>
      <div class="properties">
        <div class="tags">
          <h5>标签</h5>
          <ul>
            <% @tags.each do |tag| %>
                <li><%= link_to tag.name, "/articles?tags=#{URI.escape(tag.name)}" %></li>
            <% end %>
          </ul>
        </div>
        <table class="propertyA">
          <tr><th>公司名称：</th>
            <td><%= @design.company_name %><a href="<%=@design.company_url%>">[进入公司主页]</a></td>
          </tr>
          <tr><th>公司地址：</th>
            <td><%= @design.company_address %></td>
          </tr>
          <tr><th>设计师：</th>
            <td><%=  @design.author %><a href="<%= @design.author_url %>">[进入个人主页]</a></td>
          </tr>
          <tr><th>项目名称：</th>
            <td><%= @design.project_name %></td>
          </tr>
          <tr><th>设计风格：</th>
            <td><%= @design.design_style %></td>
          </tr>
          <tr><th>设计说明：</th>
            <td><%= @design.design_intro %></td>
          </tr>
          <tr><th>主要材料：</th>
            <td><%= @design.design_material %></td>
          </tr>
          <tr><th>推荐理由：</th>
            <td><%= @design.recommend_reason %></td>
          </tr>
        </table>
      </div>
      <div class="review_wrap">
        <div class="reviewform">
          <div class="bar">
            <h4><span>评论</span>(<%= @design.comments.length%>)</h4><span class="r">0/140</span>
          </div>
          <div class="form-content">
            <%= form_for(Comment.new) do |f| %>
                <%= f.hidden_field :commentable_id, value: params[:id] %>
                <%= f.hidden_field :commentable_type, value: 'ColorDesign' %>
                <p class="input">
                  <%= f.text_area :content %>
                </p>
                <p class="button">
                  <%= image_submit_tag "design/submitA.gif", value: "提交", alt: "提交" -%>
                </p>
            <% end %>
          </div>
        </div>
        <div class="pager ft12">
          <%- unless @comments.nil? %>
            <%= paginate @comments %>
          <%- end %>
        </div>
        <div class="review_list">
          <ul class="review_listA">
            <% @comments.each do |c| %>
                <li>
                  <div class="bar">
                    <span class="user"><%= c.user.name %></span><span class="time"><%= c.created_at.to_date %></span>
                  </div>
                  <div class="reply">
                    <a href="#">回复</a>
                  </div>
                  <div class="content">
                    <%= c.content %>
                  </div>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class='sub_bot pr'>
  </div>
</div>