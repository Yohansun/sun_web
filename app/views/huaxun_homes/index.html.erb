<%- content_for :head do %>
  <%= stylesheet_link_tag "manage/per_home" %>
  <style type="text/css">
    .popup_zf,.popup_zf2{width:160px; position:absolute; left:142px; bottom:-28px;*bottom:45px!important; _bottom:50px; background:#fff; padding:5px 0!important; border:1px solid #f1f1f1;}
.popup_zf span,.popup_zf2 span{float:left;font-size:12px; padding:3px 5px!important;}
.popup_zf a,.popup_zf2 a{ float:left; display:inline; width:16px; height:16px; background:url(<%= asset_path "master/icon_zf.png" %>) no-repeat; margin:0px 3px;}
.popup_zf a.pupot_zf_qq,.popup_zf2 a.pupot_zf_qq{ background-position:left 0;}
.popup_zf a.popup_zf_sina,.popup_zf2 a.popup_zf_sina{ background-position:left -16px;}
.popup_zf a.popup_zf_rr,.popup_zf2 a.popup_zf_rr{ background-position:left -32px;}
.popup_zf a.popup_zf_kaixin,.popup_zf2 a.popup_zf_kaixin{ background-position:left -48px;}

  </style>
<%- end %>
<%- content_for :tail do %>
  <%= javascript_include_tag "/resources/js/plugins/exp/exp.js" %>
  <script type="text/javascript">
    $(function(){
      $('#haxun').slider({
        buttons : false,
        pagers: '.circle_indicators'
      });
      $('#haxun_design_slide').slider({
        pagers: '.circle_indicators',
        margin : 16
      });
      $('#reply_list').on('click','.js-review_btn', function(){
        $(this).parent().siblings('form.js-review').show();
        console.log($(this))
      });
      $('#reply_list').on('click', '.js-review_cannel', function(){
        $(this).parents('form.js-review').hide();
      });
    })
    </script>
<% end %>
<ul class="breadcrumb">
  <li><a href="/">首页</a> > </li>
  <li class="active">用户中心</li>
</ul>
<hr class="border2 border2_mt2">
<div class="per_banner">
  <img src="<%= asset_path 'manage/per_home_huaxun/per_banner.jpg'%>" alt="" style="height:300px;width:1000px;" />
  <div class="per_photo">
    <div>
      <img src="<%= asset_path 'manage/per_home_huaxun/haxun_logo.jpg'%>" alt="" />
      <a href="<% if current_user %>/users/<%=current_user.id%>/edit<% else %>javascript:show_login();<% end %>" class="per_edit">
        <i class="icon-i16 icon-edit2"></i>编辑个人资料
      </a>
    </div>
    <h4>华浔品味装饰</h4>
  </div>
  <ul class="per_links unstyled clearfix">
    <li class="pull-left">
      <a name="phone"></a>
      <i class="icon-phone1 icon-i30"></i>
      <span style="color:#676666;font:bold 14px 'SimSun';">全国服务热线：</span><span class="phone_number"><%= @phone.phone if @phone %></span>
    </li>
    <li class="pull-right">
      <a href="#case">案例赏析</a>
      <a href="#asks">免费咨询</a>
      <a href="#trem">精英团队</a>
      <% if current_user && current_user.role_id != 3 %>
        <a href="#huaxun_tab1">积分兑换</a>
      <% elsif current_user && current_user.role_id == 3 %>
        <a href="#huaxun2">走进华浔</a>
      <% else %>
        <a href="#phone">联系方式</a>
      <% end %>
    </li>
  </ul>
</div>
<a name="case"></a>
<div class="per_home clearfix">
  <%= render partial: 'hx_examples' %>
  <div class="per_right index_main pull-right">
    <div class="work_comments nomargin nopadding">
      <a name="asks"></a>
      <%= form_tag new_ask_huaxun_homes_path, :class => "comment_form exp-holder" do %>
        <h5>
          <span class="pull-right phone_number">
            <i class="icon-phone_small icon-i30"></i>
            <%= @phone.phone if @phone %>
          </span>
          免费咨询
        </h5>
        <textarea id="J_t" name="content"></textarea>
        <ul class="moodbtn_group unstyled clearfix">
          <li class="pull-right btn_send">
            <span class="muted">还可以输入<span class="text-important">1000</span>个字符</span>
            <% if current_user %>
              <button class="">提交留言</button>
            <% else %>
              <a onclick="show_login()">提交留言</a>
            <% end %>
          </li>
          <li class="pull-left exp-block-trigger" id="J_sbt">
            <i class="icon-mood icon-face"></i>
            添加表情
          </li>
        </ul>
      <% end %>
      <ul class="mood_list unstyled nomargin" id="reply_list">
        <%= render :partial => "reply_list" %>
      </ul>
      <div class="pager" id="reply_page">
        <%= render :partial => "reply_page" %>
      </div>
    </div>
  </div>
</div>
<div class="per_home clearfix mt20">
  <%= render partial: 'hx_news' %>
  <%= render partial: 'hx_kvs' %>
</div>

<div class="per_home index_main_black mt20">
  <a name="trem"></a>
  <p class="clearfix index_tit">
    <a href="http://www.hxdec.com/designerSort.asp?sortid=4" target="_blank" class="pull-right"><small class="muted">更多 ></small></a>
    <strong class="pull-left">精英团队</strong>
  </p>
  <hr class="border2 border2_mt2">
  <div id="haxun_design_slide" class="slider-bin">
    <div class="slider-container">
      <ul class="unstyled">
        <% @teams.each do |team| %>
          <li>
            <a href="<%=team.url%>" target="_blank"><img src="<%=team.file.url(:list)%>"></a>
            <p class="nomargin text-center"><%=team.name%></p>
          </li>
        <% end %>
      </ul>
    </div>
    <!-- <a href="javascript:;" class="slider-prev">prev</a> -->
    <!-- <a href="javascript:;" class="slider-next">next</a> -->
  </div>
</div>

<div class="per_home index_main closer_haxun mt20">
  <p class="clearfix index_tit">
    <strong class="pull-left mr5"><a name="huaxun2">走进华浔</a></strong>
  </p>
  <hr class="border2 border2_mt2">
  <div class="huaxun_intro">
    <%= raw @hx_profile.content if @hx_profile%>
  </div>
</div>
<% if current_user && current_user.role_id != 3 %>
  <div class="index_main haxun_point nopadding mt20">
    <ul class="nav nav-tabs upload_tab" id="upload_tab">
      <li class="active"><a href="#huaxun_tab1" name="huaxun_tab1">积分兑换细则</a></li>
      <li><a href="<% if current_user %><%=user_points_exchange_path(current_user)%><% else %>javascript:show_login();<% end %>">积分奖品兑换</a></li>
    </ul>
    <div class="tab-content upload_content">
      <div class="tab-pane active" id="huaxun_tab1">
        <div class="per_point">
          <p class="per_tips">
            客户买单，你积分！<br>
            无论是您为客户代购还是陪客户在立邦专卖店购买产品，<br>
            只要记下成交的产品名称和桶数，就能获取积分兑换iColor众多礼品哦！
          </p>
          <p class="per_tips">
            <span>
              提醒：<br>
              1、您的购买产品记录表记录完成后，请注意提交。提交后此次记录表产生的积分会自动累计进入您的积分账号；<br>
              2、您的累计积分经审核后才能转化成可兑换积分，进行奖品兑换。所以请注意购买产品记录表填写的真实性；<br>
              3、当您选择完所需兑换礼品，确定兑换后，您的礼品会在10个工作日内按个人账户所留的地址寄送。
            </span>
          </p>
          <div class="mt20">
            <h5 class="text-important">积分礼品</h5>
            <ul class="gifts_list linet1 unstyled clearfix">
              <% @point_gifts.each_with_index do |gift, index| %>
                <% i_index = index + 1 %>
                <li class='<%= "noborder_right" if (i_index % 4) == 0 && i_index != 0 %>'>
                  <a href="#" class="gift_img">
                    <img src="<%= gift.file.url(:list) %>" alt="" />
                  </a>
                  <a href="#">
                    <span class="help-block nomargin"><%= gift.gift_name %></span>
                    <span class="help-block nomargin">所需积分<strong class="text-important"><%= gift.gift_point %></strong></span>
                  </a>
                </li>
              <% end %>
            </ul>
            <div class="pager pt15" style="margin-bottom:60px;">
              <%= paginate @point_gifts %>
            </div>
          </div>
          <div class="mt20">
            <h5 class="text-important">产品积分</h5>
            <div class="clearfix linet1">
              <table class="gifts_table pull-left" style="position:relative;">
                <tr>
                  <th width="400">产品</th>
                  <th width="79">积分</th>
                </tr>
                <% @point_products.each_with_index do |product, index| %>
                  <% if index < @middle_value %>
                    <tr>
                      <td><%= product.product_name %></td>
                      <td><%= product.product_point %></td>
                    </tr>
                  <% end %>
                <% end %>
              </table>
              <table class="gifts_table pull-left">
                <tr>
                  <th width="400">产品</th>
                  <th width="79">积分</th>
                </tr>
                <% @point_products.each_with_index do |product, index| %>
                  <% if index >= @middle_value %>
                    <tr>
                      <td><%= product.product_name %></td>
                      <td><%= product.product_point %></td>
                    </tr>
                  <% end %>
                <% end %>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="huaxun_tab2">2</div>
    </div>
  </div>
<% end %>

