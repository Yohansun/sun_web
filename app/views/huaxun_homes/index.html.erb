  <div class="footer_banner pull-left">
    <a href="<%= @banner1.url? ? @banner1.url : 'javascript:void(0);' if @banner1 %>" target="_blank"><%= image_tag @banner1.try(:file).try(:url, :list_670x85) %></a>
  </div>
  <div class="footer_banner pull-right">
    <a href="<%= @banner2.url? ? @banner2.url : 'javascript:void(0);' if @banner2 %>" target="_blank"><%= image_tag @banner2.try(:file).try(:url, :list_310x85) %></a>
  </div>
</div>