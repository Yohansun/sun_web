<%- if @changed == false %>
	$('.abs_center').fadeOut();
	$('#layer').fadeOut();
<%- elsif @messages.present? %>
	alert("<%= @messages %>");
<%- else %>
	$("#<%= params[:user_id] %>").find(".data_pop").attr({'data-order':"<%= @user.try(:top_order) %>",
		'data-reason':"<%= @user.try(:top_reason) %>"
	});

	$(".data_pop").attr({'data-remain':"<%= current_seller_user.top_remain %>"});

	$('.abs_center').fadeOut();
	$('#layer').fadeOut();
<%- end %>