$('#input_pop').hide();
$('#sale_amount').hide();

<%- if @products && !@products.blank?%>
	$("#<%= params[:user_id] %>").find(".product_name").html("<%= raw @products %>");
<%- elsif @sales  %>
	$("#<%= params[:user_id] %>").find(".sale_amount").html("<p><%= @sales %></p>");
<%- elsif @art_paint_quantity  %>
	$("#<%= params[:user_id] %>").find(".art_paint_num").html("<p><%= @art_paint_quantity %></p>");
<%- elsif @remarks  %>
	$("#<%= params[:user_id] %>").find(".comments").html("<p><%= @remarks %></p>");	
<%- end %>