<%- content_for :head do %>
<script type="text/javascript">
  $(window).load(function() {
    $('#inspiration').masonry();
  }));
</script>
<%- end %>
<div class="main signup group">
  <div class="shadow signup_box">
    <div class="section">
      <div class="host_self group">
        <div class="signup_img_box"> <img class="box_shadow" src="<%= asset_path "personal/d_host_img.jpg " %>" alt="" />
          <%- if params[:user_id].to_i == current_user.id %>
          <p><a href="#">修改账户信息</a></p>
          <%- end %>
        </div>
        <div class="host_status">
          <!--<h2><strong>杨明洁</strong><em>金牌会员</em></h2>-->
          <!--<a class="back_perhome" href="#">返回个人主页</a>-->
          <!--<div class="signup_text">
            <p>
            从业5年，擅长简约及田园风格室内装修设计
            </p>
          </div>-->
          <p class="d_hostaddr">上海罗磊室内设计有限公司</p>
          <div class="signup_text">
            <p>从业5年，擅长简约及田园风格室内装修设计 </p>
          </div>
          <p class="icon_email">Email:<%= @user.email %></p>
          <p class="icon_qq">QQ:<%= @user.qq %></p>
          <p class="icon_msn">MSN:<%= @user.msn %></p>
          <p class="icon_fetion">飞信:<%= @user.fetion %></p>
        </div>
        <!--host_status ends-->
      </div>
      <!--host_self ends-->
      <%- if params[:user_id].to_i == current_user.id %>
      <ul class="system_info group">
        <li class="icon_point"><a href="f_in_point.html">我的积分</a></li>
        <li class="icon_info"><a href="f_in_infolist.html">系统消息(2)</a></li>
        <li class="icon_qustion"><a href="f_in_question.html">我的提问(新回复1)</a></li>
        <li class="icon_active"><a href="f_in_signup.html">我报名的活动</a></li>
      </ul>
      <%- end %>
      <!--system_info ends-->

      <div class="sort_box pr mt25 group">
        <ul class="sort_show_ul group">
          <li> <a class="sort_show_a" href="f_in_works.html">作&nbsp;&nbsp;品</a> </li>
          <li class="sort_show"> <a class="sort_show_a" href="/inspirations">灵感秀</a> </li>
          <li> <a class="sort_show_a" href="f_in_msgboard.html">留言板</a> </li>
          <li> <a class="sort_show_a" href="f_in_notice.html">活动公告</a> </li>
        </ul>
        <%- if params[:user_id].to_i == current_user.id %>
        <!-- <a class="launch_act" href="#">我要上传</a> -->
        <%=link_to "我要上传", new_inspiration_path(:user_id => params[:user_id]), class: "launch_act" %>
        <%- end %>
      </div>
      <!--sort_box ends-->

      <div class="host_main">
        <div class="inspiration_result">
          <div id="inspiration" class="row host_ins pb30 line_b_dot group">
            <%- @inspirations.each do |i| -%>
            <div>
              <%= link_to (image_tag i.img.url(:inside), class: "host_ins_img"), inspiration_path(i) %>
              <h3><%= i.title %></h3>
              <p class="p1 group"> <strong class="ft14 fb"><%= i.votes_count %></strong> </p>
              <p class="p2 group"> <span class="zf ft12">转发 (<%= i.shares_count %>)</span><span class="pl ft12">评论 (<%= i.comments_count %>)</span> </p>
            </div>
            <% end %>
          </div>
          <!--row ends-->
        </div>
        <!--design_result ends-->
      </div>
      <div class="pager host_pager ft12">
        <%= paginate @inspirations %>
      </div>
      <!--pager ends-->
    </div>
  </div>
  <!--shadow ends-->
</div>
<!--main ends-->
