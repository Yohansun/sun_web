<div class="index_main refresh_news mt10 clearfix">
  <div class="refresh_new pull-left">
    <h5><a href="<%= @design_more.try(:url) %>" target="_blank" class="pull-right"><small class="muted">更多></small></a>装修图库精选</h5>
    <ul class="ul_dot">
      <% if @design_datas.present? %>
        <% @design_datas.each do |data| %>
          <% unless data.position == 0 %>
            <li><a href="<%= data.url %>" target="_blank"><%= data.title %></a></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div class="refresh_new pull-left">
    <h5><a href="<%= @master_design_more.try(:url) %>" target="_blank" class="pull-right"><small class="muted">更多></small></a>刷新效果精彩资讯</h5>
    <ul class="ul_dot">
      <% if @wonderful_datas.present? %>
        <% @wonderful_datas.each do |data| %>
          <% unless data.position == 0 %>
            <li><a href="<%= data.url %>" target="_blank"><%= data.title %></a></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div class="pull-right"><a href="<%= @i_banner1.url? ? @i_banner1.url : 'javascript:void(0);' %>" target="_blank"><img src="<%=@i_banner1.try(:file).try(:url,:list_230x230)%>"></a></div>
</div>
<div class="clearfix">
  <div class="footer_banner pull-left"><a href="<%= @i_banner2.url? ? @i_banner2.url : 'javascript:void(0);' %>" target="_blank"><img src="<%=@i_banner2.try(:file).try(:url,:list_670x85)%>"></a></div>
  <div class="footer_banner pull-right"><a href="<%= @i_banner3.url? ? @i_banner3.url : 'javascript:void(0);' %>" target="_blank"><img src="<%=@i_banner3.try(:file).try(:url,:list_310x85)%>"></a></div>
</div>