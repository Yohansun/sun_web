<% content_for :head do -%>
    <%= stylesheet_link_tag "refresh_life/map", "style.css"  %>
    <%= javascript_include_tag "exp/exp.js", "LinkageSelect/location.js", "LinkageSelect/LinkageSelect.js" %>
<% end -%>
<div class="container refresh_main">
	<h3 class="chann_caption nomargin"><i class="icon-map icon-map9 icon_colors"></i><strong>刷新生活</strong><small>iColor和您一起刷新家，新开始</small></h3>
	<ul class="breadcrumb">
		<li><a href="/">首页</a> > </li>
		<li><a href="#">刷新生活</a> > </li>
		<li><a href="/refresh_record">刷新实录</a> > </li>
		<li class="active">精彩资讯</li>
	</ul>
	<hr class="border2 border2_mt2">

	<div class="clearfix refresh_lists">
		<div class="unstyled map-left index_main pull-left">
			<% @i_life_infos.each do |info| %>
				<div class="media tit_con">
					<a class="pull-left media_a" href="javascript:void(0);">
						<%= image_tag(info.preview_img	, :class => "media-object" ) %>
						<!-- <img class="media-object" data-src="holder.js/64x64" src=<%#= asset_path "refresh_life/refresh/refresh_list1.jpg" %> > -->
					</a>
					<div class="media-body refresh_list">
						<ul class="ul_dot clearfix nomargin">
							<li>
								<h5 class="nomargin"><a href="<%= refresh_list_path(info) %>" target="_blank"><%= info.title %></a></h5>
								<p class="nomargin"><a href="<%= refresh_list_path(info) %>"><%= info.intro %></a></p>
							</li>
						</ul>
						<div class="nomargin clearfix"><a class="btn_detail pull-left" href="<%= refresh_list_path(info) %>">查看详情</a></div>
					</div>
				</div>
			<% end %>
			<ul class="pager pager-form noborder clear-fix">
				<%= paginate @i_life_infos if @i_life_infos.present? %>
				<!-- <form class="pager pager-form noborder pull-left">
					&nbsp;&nbsp;
					共<%= @page_count%>页
					跳到第<input type="page_text" />页
					<input type="submit" value="GO" class="" />
				</form> -->
			</ul>
		</div>
		<div class="pull-right">
			<div class="chann_warp chann1_right map-right index_main">
				<div class="media media_chann">
					<a class="pull-left" href="/design_images/lists">
						<i class="icon-chann icon-chann_imgbase"></i>
					</a>
					<div class="media-body">
						<h4 class="media-heading"><a class="media-heading_link_a" href="/images">装修图库</a></h4>
						<p class="media_con nomargin">寻找最新家装图片<br>给您专属的家装设计参考！</p>
					</div>
				</div>
				<div class="media media_chann">
					<a class="pull-left" href="/color_designs">
						<i class="icon-chann icon-chann_match"></i>
					</a>
					<div class="media-body">
						<h4 class="media-heading"><a class="media-heading_link_a" href="/color_designs">色彩配搭</a></h4>
						<p class="media_con nomargin">色彩搭配案例 家居色彩宝典 为您的家装出谋画色！</p>
					</div>
				</div>
				<div class="media media_chann">
					<a class="pull-left" href="/channel/refresh_service">
						<i class="icon-chann icon-chann_fresh2"></i>
					</a>
					<div class="media-body">
						<h4 class="media-heading"><a class="media-heading_link_a" href="/channel/refresh_service">立邦刷新服务</a></h4>
						<p class="media_con nomargin">对话顶尖设计大师，提升家装专业眼界！</p>
					</div>
				</div>
			</div>
			<ul class="unstyled map-right index_main js-img_show">
				<li class="clearfix refresh_r_tit">
					<a href="<%=@master_design_data_url.url if @master_design_data_url %>" target="_blank" class="pull-right"><small class="muted">更多></small></a>
					<strong class="pull-left">最新大师作品</strong>
				</li>
        <% @master_design_datas.each_with_index do |cd,index| %>
				<li class="dott1 <%="active" if index == 0%>">
          <i class="icon-i16 icon-<%=index+1%>"><%=index+1%></i>
					<strong class="js-title"><%=cd.title%></strong><br>
					<a href="<%= cd.url %>" class="<%="hide" if index != 0%> js-img" target="_blank"><img src="<%=cd.file.url(:list_155x115)%>" alt="" /></a>
				</li>
        <% end %>
			</ul>
			<div><a href="#"><img src="<%= asset_path "refresh_life/refresh/refresh_list_banner1.jpg" %>" ></a></div>
			<div class="mt10"><a href="#"><img src="<%= asset_path "refresh_life/refresh/refresh_list_banner2.jpg" %>" ></a></div>
		</div>
	</div>
	<%= render :partial => "foot_select" %>
</div>
<% content_for :tails do -%>

<% end -%>