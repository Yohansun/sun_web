<%= content_for :tail do %>
  <%= stylesheet_link_tag "style" %>
<%- end -%>
<div class="main color_signup_box">
  <h2><img src="<%= asset_path "design/mb/design_signup.png" %>"></h2>
  <div class="wrapper">
    <p class="line_b_dot">请提交您的报名资料</p>
    <div class="shadow">
      <div class="section ">
        <%= form_for @approve do |f| %>
          <div class="color_signup"><label>*姓名：</label>
            <%= f.text_field :name, :class => "color_username" %>
          </div>
          <div class="color_signup"><label>*证件类型：</label>
            <select class="fl" name="approve[id_type]">                              
              <%= options_for_select(Approve::ID_TYPE.collect{|k,v| [v,k]}) %>
            </select>
          </div>
          <%= hidden_field_tag "approve[approve_type]", 0 %>
          <div class="color_signup"><label>*证件号码：</label><%= f.text_field :id_number %></div>
          <div class="color_signup"><label>*联系方式：</label><%= f.text_field :telphone %></div>
          <div class="color_signup"><label>*电子邮件：</label><%= f.text_field :email %></div>
          <div class="color_signup"><label>*邮寄地址：</label><%= f.text_field :address %></div>
          <div class="color_input_image_box tc"><input class="color_input_image" type="image" src="<%= asset_path "design/submitB.gif" %>"></div>
        <%- end -%>

      </div><!--section ends-->
    </div><!--shadow ends-->
  </div>
</div>