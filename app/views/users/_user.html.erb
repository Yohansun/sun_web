<div class="reg_list fl referr_input">
  <label for="uesername">是否有推荐人：</label>
  <input type="radio" name="user[recommended]" class="radio_btn fl" value="1" <%= "checked" if current_user.recommended == true %>/>
  <span class="recommand fl fb">是</span>
  <input type="radio" name="user[recommended]" class="radio_btn fl" value="0" <%= "checked" if current_user.recommended == false %>/>
  <span class="recommand fl fb">否</span>
</div><!--reg_list ends-->
<div class="reg_list fl" id="referr">
  <label for="recommander">推荐人用户名：</label>
  <%= f.text_field :recommended_name, :class => "password fl" %>
  <span class="reg_tip3 fl">注：如您正确注册成功，推荐人账号相应获得奖励积分</span>
</div><!--reg_list ends-->
<div class="reg_list fl">
  <label for="uesername">真实姓名：</label>
  <%= f.text_field :name, :class => "password fl" %>
</div><!--reg_list ends-->
<div class="reg_list fl">
  <label for="uesername">性别：</label>
  <input type="radio" class="radio_btn fl" <%= "checked" if current_user.sex == "1" %> name="user[sex]" value="1"/>
  <span class="recommand fl fb">男</span>
  <input type="radio" class="radio_btn fl" <%= "checked" if current_user.sex == "0" %> name="user[sex]" value="0"/>
  <span class="recommand fl fb">女</span>
</div><!--reg_list ends-->
<div class="reg_list fl">
  <label for="uesername">出生日期：</label>
  <div class="fl">
    <% year  = resource.date_of_birth.year rescue nil %>
    <% month = resource.date_of_birth.month rescue nil %>
    <% day   = resource.date_of_birth.day rescue nil %>
    <%= select_tag 'user[date_of_birth(1i)]', options_for_select((1900..(Date.today.year)).to_a.reverse, year), :class => "fl", :prompt => "#{current_user.date_of_birth.try(:year)}" %>
    <span class="fl">年</span>
    <%= select_tag 'user[date_of_birth(2i)]', options_for_select((1..12).to_a, month), :class => "fl", :prompt => "#{current_user.date_of_birth.try(:month)}" %>
    <span class="fl">月</span>
    <%= select_tag 'user[date_of_birth(3i)]', options_for_select((1..31).to_a, day), :class => "fl", :prompt => "#{current_user.date_of_birth.try(:day)}" %>
    <span class="fl">日</span>
  </div>
</div><!--reg_list ends-->
<div class="reg_list fl">
  <label for="uesername">收件地址：</label>
  <%= f.text_field :recipient_address, :class => "company fl" %>
  <span class="reg_tip3 fl">请填写真实地址以便发送奖品</span>
</div><!--reg_list ends-->
