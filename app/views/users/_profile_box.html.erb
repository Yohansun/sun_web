<%- content_for :tail do %>
<%= javascript_include_tag "jquery.jeditable" %>

<script type="text/javascript" charset="utf-8">
$(document).ready(function() {
  <% if current_user && current_user.id == @user.id %>
    $("#signature").editable('/users/<%= @user.id %>/update_user_signature', {
      indicator : "<img src='<%= asset_path "indicator.gif" %>'>",
      type : 'text',
      tooltip : '点击修改...',
      placeholder : '请点击输入个人签名',
      submitdata: { _method: "post" },
      select : true,
      submit : '修改',
      cancel : '取消',
      height : '23px',
      cssclass : "editable",
      tooltip : '点击修改',
      id : 'id',
      style : 'display: inline;'
    });
  <%- end -%>
});
</script>
<%- end %>
<div class="host_self group">
  <div class="signup_img_box">
    <% if @user.avatar -%>
    <%= image_tag @user.avatar.file(:profile), :class => 'box_shadow' %>
    <% else -%>
    <%= image_tag "news/regimg_bg.jpg", :width => "194" %>
    <% end -%>
    <%- if current_user && current_user == @user %>
    <p><%= link_to "修改账户信息", edit_user_path(current_user) %></p>
    <%- end %>
  </div>
  <div class="host_status">
    <p class="d_hostaddr">
      <%= @user.display_name %>
    </p>
    <%- if controller_name =~ /rank|sys_msgs|faqs|events/ %>
      <a class="back_perhome" href="<%= user_path(current_user) %>">返回个人主页</a>
    <%- end %>
    <div style="overflow: hidden;">
    <div class="signup_text" id='<%= params[:user_id] %>'>
      <span></span>
      <p id="signature"><%= raw @user.signature %></p>
    </div>
    <%- if @user.role.try(:role) =~ /designer/ %>
      <p class="d_hostaddr"><%= @user.try(:inauguration_company) || @user.try(:current_school)%></p>
    <%- end %>
    </div>    
    <p class="icon_email">Email: <%= @user.email unless @user.is_show_email? == false && @user != current_user %></p>       
    <p class="icon_qq">Q   Q:<%= @user.qq %></p>
    <p class="icon_msn">MSN: <%= @user.msn %></p>
    <p class="icon_fetion">飞信: <%= @user.fetion %></p>
  </div>
  <!--host_status ends-->
</div>

<!--host_self ends-->
<%- if current_user && current_user == @user %>
<ul class="system_info group">
  <%- unless current_user.role_name == "user" %>
    <li class="icon_point"><%= link_to "我的积分", user_rank_index_path, :class => "#{'host_cur' if controller_name == "rank" }"  %></li>
  <%- end %>
  <li class="icon_info"><%= link_to "系统消息#{"("+@user.sys_msgs.size.to_s+")" if @user.sys_msgs.size >0}", user_sys_msgs_path, :class => "#{'host_cur' if controller_name == "site_messages" }" %></li>
  <li class="icon_qustion"><%= link_to "我的提问", user_faqs_path, :class => "#{'host_cur' if controller_name == "faqs" }"  %></li>
  <li class="icon_active"><%= link_to "我报名的活动", "/users/#{@user.id}/events/my_event", :class => "#{'host_cur' if action_name == "my_event" }"  %></li>
</ul>
<%- end %>
<!--system_info ends-->

<%- if controller_name =~ /inspirations|designs|^messages|events/ %>
<%- unless action_name =~ /new|edit|my_event/  %>
<div class="sort_box pr mt25 group">
  <ul class="sort_show_ul group">
    <%- unless @user.role_name == "user" %>
      <li class="<%= "sort_show" if controller_name == 'designs' %>"><%= link_to raw("作&nbsp;&nbsp;品"), user_designs_path(@user), :class => 'sort_show_a' %></li>
    <%- end %>
    <li class="<%= "sort_show" if controller_name == 'inspirations' %>"><%= link_to "灵感秀", user_inspirations_path(@user), :class => 'sort_show_a' %></li>
    <li class="<%= "sort_show" if controller_name == 'messages' %>"><%= link_to "留言板", user_messages_path(@user), :class => 'sort_show_a' %></li>
    <%- unless @user.role_name == "user" %>
      <li class="<%= "sort_show" if controller_name == 'events' %>"><%= link_to "活动公告", user_events_path(@user), :class => 'sort_show_a' %></li>
    <%- end %>
  </ul>

  <%- if current_user && current_user == @user %>
    <% case controller_name %>
    <% when "inspirations" %>
      <%=link_to "我要上传", new_user_inspiration_path(current_user), class: "launch_act" %>
    <%- when "designs" %>
      <%=link_to "我要上传", new_user_design_path(current_user), class: "launch_act" %>
    <% when "events" %>
      <%=link_to "发起新活动", new_user_event_path(current_user), class: "launch_act" %>
    <%- end -%>
  <%- end %>
</div>
<!--sort_box ends-->
<%- end %>
<%- end %>
