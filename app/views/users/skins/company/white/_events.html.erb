<div class="host_main">
  <div class="host_main_list d_notice" id="d_notice">
    <h3 class="mb15">
      <span class="ft14">编辑</span><span class="ft14">发起时间</span><strong>标题</strong>（共<%= @events.size %>条）
    </h3>

    <% @events.each do |event| %>
    <p>
      <%- if current_user && current_user == @user %>
      <span><%= link_to "编辑", edit_user_event_path(current_user,event.id) %>/<%= link_to "删除", user_event_path(current_user,event.id), :method => "delete" %></span>
      <span><%= event.created_at.strftime("%Y-%m-%d") %></span><%= event.title %>
      <%- end %>
    </p>
    <%- end -%>
  </div>
</div>

<div class="pager host_pager" style="position:relative;bottom:-36px;left:0;">
  <%= paginate @events %>
</div><!--pager ends-->
<%- content_for :tail do %>
<script type="text/javascript">
  $(function(){
    $('#d_notice').children('p').mouseover(function(){
      $(this).addClass('p_hover').siblings('p').removeClass()
    }).mouseout(function(){
      $(this).removeClass()
    })
  })
</script>
<% end %>