<div class="faqs clear" id="tips_faqs">
  <% if !@weekly_tips.blank? -%>
      <%- body = @weekly_tips.first.body.split("\r\n\r\n") %>
      <%- if (body.size)/2 >= 5 %>
          <%- 5.times do |i| %>
              <a name="tips<%= i %>"></a>
              <div class="faqs_title clear">
                <span class="ask fl"></span>

                <p class="fl fb ft14"><%= body[2*i] %></p>
                <a href="javascript:void(0)" class="tips_bullet fr"></a>
              </div>
              <!--faqs_title ends-->
              <div class="faqs_content clear">
                <span class="answer fl"></span>

                <div class="fl">
                  <p> <%= body[2*i+1] %> </p>
                </div>
                <!--fl ends-->
              </div>
              <!--faqs_content ends-->
          <%- end %>
      <%- else -%>
          <%#- (body.size)/2.times do |i| %>
          <%- @weekly_tips.each_with_index do |tip, i| %>
              <%- body = tip.body.split("\r\n\r\n") %>
              <a name="tips<%= i %>"></a>
              <div class="faqs_title clear">
                <span class="ask fl"></span>

                <p class="fl fb ft14"><%= body[0] %></p>
                <a href="javascript:void(0)" class="tips_bullet fr"></a>
              </div>
              <!--faqs_title ends-->
              <div class="faqs_content clear">
                <span class="answer fl"></span>

                <div class="fl">
                  <p> <%= body[1] %> </p>
                </div>
                <!--fl ends-->
              </div>
              <!--faqs_content ends-->
          <%- end %>
          <%#- end %>
      <%- end %>
  <%- end %>
</div><!--faqs ends-->
<a name="answer"></a>