<%- content_for :head do %>
    <%= stylesheet_link_tag 'style', 'weekstar' %>
    <style type="text/css">
        .shadow {
            zoom: 1;
        }

        #gallery_caption {
            display: none;
        }
    </style>
<%- end %>
<%- content_for :tail do %>
   <%= render :partial => "recommend_color" %>
   <script type="text/javascript">
    $(function(){
      if ($("#new_message")) {
        $("#new_message").click(function (event) {
            <% if current_user -%>
            return true;
            <% else -%>
            show_login();
            return false;
            <% end -%>
        });
    }
    });
   </script>
   <script type="text/javascript" src="http://v2.jiathis.com/code/jia.js" charset="utf-8"></script>
    <script type="text/javascript" charset="utf-8">
    var jiathis_config = {
      boldNum:4,
      siteNum:4,
      showClose:false,
      sm:"kaixin001,renren,tsina,tqq",
      imageUrl:"http://v2.jiathis.com/code/images/r5.gif",
      imageWidth:26,
      marginTop:150,
      pic:"htt://www.icolor.com.cn/<%= @master_design.master_design_uploads.first.file.url(:slide) %>",
      url:"http://www.icolor.com.cn/master_designs/<%= @master_design.id %>",
      title:"#iColor分享#设计大师：<%= @master_design.master_profile.try(:name) %> 与你分享作品，想要学习业界顶级设计理念，尽在iColor！@刷新生活iColor，",
      data_track_clickback:true
    }
    </script>
<%- end %>
<div class="main">
  <div class='sub_title tr pt25'>
    <img src='<%= set_style[:pic_path] %>' />
  </div>
  <div class='sub_nav ft12 pr tr'>
    <em><%= link_to "大师作品", "/master_designs", :class => 'fb' %></em>
    <em><%= link_to "大师殿堂", "/master_interviews" %><span></span></em>
    <em><%= link_to "首页", "/" %><span></span></em>
  </div><!--sub_nav ends-->
  <div class='wrapper pb60 group pt25'>
    <div class="works_detail_tit line_b_dot group pr">
      <!-- JiaThis Button BEGIN -->
      <div id="ckepop" class="pa" style="top:35px;right:250px;">
        <span class="jiathis_txt">一键分享：</span>
        <a class="jiathis_button_tsina"></a>
        <a class="jiathis_button_kaixin001"></a>
        <a class="jiathis_button_renren"></a>
        <a class="jiathis_button_qzone"></a>
        <a href="http://www.jiathis.com/share" class="jiathis jiathis_txt jtico jtico_jiathis" target="_blank"></a>
      </div>
      <!-- JiaThis Button END -->
      <h3><%= @master_design.design_name%><strong><%= @master_design.master_profile.try(:name) || @master_design.master_name %></strong></h3>
      <div class="btn_group fr">
        <%= link_to "", "/master_designs/#{@master_design.id}/download", :class =>"icon_freedown" %>
        <%= link_to "", user_collects_path(@master_design.id, master_design_id: @master_design.id), :remote => true, method: :post, id: "new_message", :class => "icon_colleting" %>
        <a href="/master_designs/<%= @master_design.id %>/fullscreen" class="icon_fullscreen"></a>
      </div>
    </div>
    <div class="kv_loop mt25">
      <div class="gallery">
        <div class="galleryK" id="gallery">
          <%- @master_design.master_design_uploads.each do |i| %>
            <%- @upload_pic = i %>
            <%= image_tag(i.file.url(:slide), :class => "cloudcarousel", :'data-id' => i.id , :alt => "装修设计欣赏-#{@master_design.design_name}") unless i.file.nil? %>
          <%- end %>
        </div>
      </div>
      <%= javascript_include_tag  "galleryK"  %>
    </div>

    <div class="colors_box b_shadow">
      <div class="colorsbox " style="padding:10px 0; overflow:hidden;">
        <div class="color-picker group">
          <div class="colors_tit" style="float:left; margin:20px 15px 0 0;">
            <img src="<%= asset_path "master/colors_icon_tit.png" %>" />
          </div>
          <div id="colors_con" class="colors_con" style="float:left; padding:25px 0 0; height:35px; width:617px; position:relative;">
            <img src="<%= asset_path "design/colors2.gif" %>" />
            <div class="desc" style=" height:35px; width:617px; margin:25px 0;display:none; position:absolute; left:1px; top:1px; background:#fff;">
              <div class="list" style="height:35px;">
                <ul class="group" style="overflow:hidden;">
                </ul>
              </div>
            </div>
          </div>
          <div class="mall_link">
            <a href="http://www.nipponpaint.com.cn/web/home/dealer_search.jsp" target="_blank"><img src="<%= asset_path "master/go_shops.jpg"%>" /></a>
            <a href="http://nipponpaint.tmall.com/shop/viewShop.htm?prt=1338961882482&prc=1" target="_blank"><img src="<%= asset_path "master/mall_link_btn.png" %>" /></a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--wrapper ends-->
  <div class='sub_bot pr'>
  </div>
  <!--sub_bot ends-->
</div><!--main ends-->