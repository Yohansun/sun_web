<div class="content">
  <div class="title"><h5><%= parent.name %> >色彩配搭</h5>
    <div class="num"><%= link_to '新增色彩配搭', new_subject_color_design_path(parent), :class => "redNum" %></div>
    <%- if can?(:manage, Subject) && parent -%>
      <div class="num"><%= link_to '结构管理', subjects_path(:parent_id => parent), :class => "redNum" %></div>
    <%- end -%>
  </div>
  <!-- Dynamic table -->
  <div class="table">
    <div class="head"><h5 class="iFrames">色彩配搭列表</h5></div>
    <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
      <thead>
        <tr>
          <th width="5%">ID</th>
          <th>名称</th>
          <th width="12.5%">风格</th>
          <th width="12.5%">功能区</th>
          <th width="12.5%">色系</th>
          <th width="100px">列表页图片</th>
          <th width="100px">内页图片图片</th>
          <th width="12.5%">发布时间</th>
          <th width="100px">操作</th>
        </tr>
      </thead>
      <tbody>
        <%- collection.each do |c| %>
          <tr class="gradeA">
            <td><%= c.id %></td>
            <td><%= c.design_name %></td>
            <td><%= c.design_style %></td>
            <td><%= c.design_usage %></td>
            <td><%= c.design_color %></td>
            <td><%= image_tag c.main_preview_img.url(:thumb) %></td>
            <td><%= image_tag c.show_preview_img.url(:thumb) %></td>
            <% if c.published_at.nil? %>
              <td><%= format_time c.created_at %></td>
            <% else %>
              <td><%= c.published_at.strftime("%Y-%m-%d %H:%M") %></td>
            <%- end %>
            <td nowrap="nowrap" align="center">
              <%= link_to '编辑', edit_subject_color_design_path(parent, c), :class => 'button basicBtn' %>
              <%= link_to '删除', [parent, c], :confirm => '确定删除?', :method => :delete, :class => 'button basicBtn' %>
            </td>
          </tr>
        <%- end %>
      </tbody>
    </table>
  </div>
</div>
