<%= form_for [main_app,image], :html=> {:class => 'color_form'} do |f| %>
  <h3>设置色号</h3>
  <fieldset style="height:30px;padding:5px 60px">
    <label class="color_form_label">请输入色号：</label> 
    <input type="text" class="color_input" data-provide="typeahead" name="design_image[color1]">
  </fieldset>
  <fieldset style="height:30px;padding:5px 60px">
    <label class="color_form_label">请输入色号：</label>
    <input type="text" class="color_input2" data-provide="typeahead" name="design_image[color2]">
  </fieldset>
  <fieldset style="height:30px;padding:5px 60px">
    <label class="color_form_label">请输入色号：</label> 
    <input type="text" class="color_input3" data-provide="typeahead" name="design_image[color3]">
  </fieldset>
  <div class="color_form_button" >
    <%= f.submit :class => 'greyishBtn color_commit', :id => 'commit#{f.id}' , :disable_with => "提交中...",:value => "保存"%>
    <!-- <a href="javascript:;" class="greyishBtn color_commit ppp" >aa</a> -->
    <a href="javascript:;" class="js-close button greyishBtn" >取消</a>
  </div>
<%- end %>