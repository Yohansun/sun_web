          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>
            <%= link_to '编辑', '' %>
            <%= link_to '设置名称', '' %>
            <%= link_to '设置标签', '' %>
            <%= link_to '设置色号', '' %>
            <%= link_to '审核', '' %>
            <%= link_to '删除', '' %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>