<div class="content">
  <div class="title"><h5> 在线配色回复 </h5></div>
  <!-- Dynamic table -->
  <div class="table">
    <div class="head"><h5 class="iFrames">
      在线配色回复
    </h5></div>
    <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
      <thead>
        <tr>
          <th width="5%">ID</th>
          <th>咨询人</th>
          <th>状态</th>
          <th width="20%">发布时间</th>
          <th width="100px">操作</th>
        </tr>
      </thead>
      <tbody>
        <%- collection.each do |c| %>
          <tr class="gradeA">
            <td><%= c.id %></td>
            <td><%= c.user.display_name %></td>
            <td><%= MixColor::MixStatus[c.status] %></td>
            <td><%= c.created_at.to_date %></td>
            <td nowrap="nowrap" align="center">
              <% unless c.status.eql? 1 %>
              <%= link_to '回复', "/admin/content/mix_colors/#{c.id}/edit", :class => 'button basicBtn' %>
              <%- end -%>
              <%#= link_to '删除', [parent, c], :confirm => '确定删除?', :method => :delete, :class => 'button basicBtn' %>
</td>
          </tr>
        <%- end %>
      </tbody>
    </table>
  </div>
</div>
