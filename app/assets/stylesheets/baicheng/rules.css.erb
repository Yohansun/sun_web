@charset "utf-8";

.rules{font: 14px 'Microsoft Yahei';padding-top: 0;}
.rules ul{list-style: none;margin: 0;}
.rules-nav{background: #e71d36;border-radius: 3px 3px 0 0;}
.rules-nav li{float: left;_display: inline;}
.rules-nav a{display: block;padding: 15px 27px;text-decoration: none;color: #fff;font-size: 14px;}
.rules-nav li:hover,.rules-nav .active{background:#bc000e url(<%= asset_path 'baicheng/rules/rules-arrow1.jpg'%>) bottom center no-repeat;}
.rules-nav li.pr:hover{background-image: url(<%= asset_path 'baicheng/rules/rules-arrow2.jpg'%>);}
.rules-nav .rules-subnav{position: absolute;width: 110px;display: none;}
.rules-nav li:hover .rules-subnav{display: block;}
.rules-subnav li{width: 110px;}
.rules-subnav a{padding: 15px 6px;text-align: center;font-size: 12px;border-bottom: 1px dotted #741024;}
.rules-subnav a,.rules-subnav a:hover{background: #aa000d;}

.fb{font-weight: bold;}
.pd30{padding: 30px;}
.rules-section{border-bottom:1px solid #d6d6d6;margin-bottom:20px;padding-bottom:20px;}
.rules-section li p{margin:-25px 0 0 10px;color: #232323;}
.rules-section li p.fixie7{margin-top: 0;}
.btn-title_medium{line-height:33px;text-align:center;padding-right:3px;background:url(<%= asset_path 'baicheng/rules/titlebg_r.png'%>) no-repeat right center;}
.btn-title_medium a{padding:6px 18px;background:url(<%= asset_path 'baicheng/rules/titlebg_l.png'%>) no-repeat left center;color:#fff;font-size:16px;text-decoration: none;font-weight: normal;}
.font-italic{font-style: italic;}
.rules-section .font-italic{font-size:12px;color: #545454;}
.rules-section b{color: #e71d36;}
.rules-bin li{line-height:24px;}

.rules-public,.rules-designers{background: url(<%= asset_path 'baicheng/rules/rules-public-bg.jpg'%>) right bottom no-repeat;height: 546px;}
.rules-public{background-image: url(<%= asset_path 'baicheng/rules/rules-public-bg.jpg'%>);}
.rules-contents h1{background:url(<%= asset_path 'baicheng/rules/rules-contents.jpg'%>) no-repeat;height:50px;text-indent: -999em;}
.rules-public h1{width:200px;}
.rules-public-btn,.rules-designers-btn{background: url(<%= asset_path 'baicheng/rules/rules-contents-btn.jpg'%>) no-repeat;width: 107px;height: 33px;text-indent: -999em;float: left;}

.rules-designers h1{background-position: -200px 0;width: 256px;}
.rules-designers-btn{background-position: 0 -33px;}
.rules-designers{background-image: url(<%= asset_path 'baicheng/rules/rules-designers-bg.jpg'%>);}
.rules-designers p a{text-decoration: underline;color: #189dea;}
.rules-designers b{font-size: 12px;}

.rules-awards dl{float:left;margin:0}
.rules-awards dl dt{background:#ebebeb url(<%= asset_path 'baicheng/rules/rules3arrow.jpg'%>) no-repeat center bottom;text-align:center;padding:15px 0;}
.rules-awards dl dd h3{color:#232323;font-size:14px;font-weight:bold;line-height:1;}
.rules-awards .cr{color:#e71d36;}
.rules-awards dl .two_rows{margin:0 30px;padding:15px 0 0;border-bottom:1px dotted #9d9d9d;}
.rules-awards dl .two_rows dl{margin-bottom:0;}

.awards{padding:5px 5px 5px 80px;height:70px;background:url(<%= asset_path 'baicheng/rules/award.png'%>) no-repeat 0 5px;margin:20px 30px 0;border-bottom:1px dotted #9d9d9d;}
.awards_second{background-position:0 -78px;}
.awards_third{background-position:0 -164px;}
.awards_fourth{background-position:0 -246px;}
.awards_fifth{background-position:0 -328px;}
.awards_sixth{background-position:0 -410px;}
.awards_seventh{background-position:0 -492px;}
.awards_eight{background-position:0 -575px;}

.rules-table1{border-spacing: 2px;border-collapse: separate;width: 810px;margin: 0 auto;}
.rules-table1 td{background: #f7f7f7;border: 1px solid #dbdbdb;color: #232323;padding: 15px 30px;}
.rules-table1 .text-center{width: 140px;}


.rules-timeline{padding:18px 0 0 6px;background:url(<%= asset_path 'baicheng/rules/timebg.jpg'%>) no-repeat center top;margin-top:30px;}
.rules-timeline li{float:left;padding:10px 5px;width:109px;text-align:center;font-size:16px;background:#e71d36;border-right:1px solid #fff;color:#fff;cursor:pointer;font-weight: bold;}
.rules-table2{width:841px;margin-left:6px;}
.rules-table2 th{background:#7adee6;border-right:1px solid #fff;color:#fff;font:bold 18px "Microsoft Yahei";padding:10px 20px;}
.rules-table2 td{padding:8px 20px;}