@charset "utf-8";

#layer{background:#000;position:fixed;_position:absolute;width:100%;height:100%;left:0;top:0;opacity:0.5;filter:alpha(opacity=50);cursor:pointer;z-index:99999;display:none;}
.abs-center{background:#fff;position:fixed;_position:absolute;left:50%;top:50%;z-index:100000;border:1px solid #ccc;
	box-shadow:10px 10px 10px rgba(0,0,0,0.5);
	border-radius:5px;
}
.close-btn,.e-pop-btn{background:url(<%= asset_path 'baicheng/map/e-pop.jpg' %>) -160px 0 no-repeat;text-indent:-999em;}
.close-btn{width:20px;height:20px;position:absolute;top:10px;right:10px;}

#layer{background: #fff;}
.e-pop{width: 616px;height: 204px;border: 2px solid #cdcfcf;border-bottom-width: 4px;margin: -132px 0 0 -348px;padding: 30px 40px;}
.e-pop-btn{background-position: 0 0;width: 155px;height: 45px;display: block;margin: 0 auto;}
.e-pop .clear{margin: 30px 0;font-size: 21px;}
