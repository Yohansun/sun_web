@charset "utf-8";

body{background-color:#f9fae0;}

.step1,.step2,.step3,.step4{background:top center no-repeat;}
.step1 .container,.step2 .container,.step3 .container,.step4 .container{padding:220px 150px 60px;width:700px;}

/*step1*/
.step1{background-image:url(<%= asset_path 'baicheng/steps/step1-bg.jpg'%>);height:1346px;}
.step1 .container{background:url(<%= asset_path 'baicheng/steps/step1.jpg'%>) no-repeat;height:1068px;}
.step1 h1{height:70px;}
.step1 h1,.step2 h1,.step3 h1,.step2-upload{text-indent:-999em;}

.refresh-control{margin:2px 0;overflow:hidden;margin: 5px 0\9;}
.refresh-control label{width:120px;text-align:right;float:left;_display:inline;margin:12px 20px 0 0;font:14px "Simsun";}
.refresh-form b{color:#f00;font-weight:normal;}
.refresh-form select{float:left;_display:inline;width:106px;height:22px;border:1px solid #adadad;margin:9px 6px 0 0;padding:2px;color:#666;font-size:12px;}
input.form-text1{width:337px;height:30px;line-height:30px\9;box-shadow:inset 0 1px 5px rgba(0,0,0,0.5);}
.mt20{margin-top:20px;}
.none{display: none;} 

.refresh-form textarea{background-color:#fcfcfc;float:left;font:14px "Simsun";width:540px;height:67px;font:14px 'Simsun';}

.form-article{width:552px;float: left;_display:inline;}
.step2 .form-article{float: none;margin: 0 auto;}
.form-article .uploadify{float: left;_display:inline;margin-right: 10px;}
.helper-text{color:#adadad;margin:5px 0;}
.upload2013-toggle{border-top:1px solid #e6e6e6;margin-top:21px;position:relative;font-size:12px;color:#6a6a6a;padding:11px 0;}
.upload2013-btn{background:url(<%= asset_path 'baicheng/steps/upload2013-btn.jpg'%>) no-repeat;width:19px;height:23px;right:0;top:-1px;}
.upload2013-btn-down{background-position:0 100%;}
.upload2013-toggle label{margin:0 30px 10px 0;width:auto;text-align:left;font-size:12px;*margin-right: 20px;}
.upload2013-toggle input{margin-right:3px;float:left;margin-top:0;margin-top: -3px\9;}
.checkbox2013 label{width:85px;margin-right:15px;width: 78px\9;}
input.step1-btn{background:url(<%= asset_path 'baicheng/steps/step1-btn.jpg'%>) no-repeat;width:155px;height:46px;border:0;margin-bottom:10px;}
.refresh-multi label{width:auto;}
.refresh-label label{width:210px;}
.refres-icon{background: url(<%= asset_path 'baicheng/steps/refres-icon.png'%>) no-repeat top right;height: 72px;}

/*step2*/
.step2{background-image:url(<%= asset_path 'baicheng/steps/step2-bg.jpg'%>);height:950px;color:#666;}
.step2 .container{background:url(<%= asset_path 'baicheng/steps/step2.jpg'%>) no-repeat;height:632px;}
.step2 h1{height:100px;}
.step2-upload{background:url(<%= asset_path 'baicheng/steps/step2-upload.jpg'%>) no-repeat;width:88px;height:34px;margin-right:10px;}
.step2-archor{text-decoration:underline;color:#cc1414;}
.step2-area{border:solid #e6e6e6;border-width:3px 0;margin-bottom:15px;height:58px;padding:25px 0;}
.step2-area .btn{margin-top:13px;}
.step2 .refresh-control{margin-bottom:80px;}

/*step3*/
.step3,.step4{background-image:url(<%= asset_path 'baicheng/steps/step3-bg.jpg'%>);height:819px;}
.step3 .container{background:url(<%= asset_path 'baicheng/steps/step3.jpg'%>) no-repeat;height:499px;}
.step3 h1{height:150px;*height: 160px;}
.step3 label{width:80px;}
.step3 .input-block-level{height:40px;line-height:30px\9;*height: 30px;}
.steps-back,.step3-submit{background:url(<%= asset_path 'baicheng/steps/step3-btn.jpg'%>) no-repeat;height:46px;}
.steps-back{width:97px;margin-right:10px;font-size:0;line-height:0;}
input.step3-submit{background-position:-111px 0;width:155px;border:0;}
.step3 p.text-right,.step2 p.text-right{width:266px;margin:0 auto;}

/*.step4*/
.step4 .container{background:#fff url(<%= asset_path 'baicheng/steps/step4.jpg'%>) no-repeat center 0;width:900px;height:302px;padding-top:400px;font:14px "Microsoft Yahei";}
.step4 h1{color:#e71d36;font-size:22px;font-weight:bold;margin-left:220px;width:415px;}
.step4 p{color:#4c4c4c;margin:0 0 115px 220px;width:415px;}
.step4 b{color:#e71d36;}
.step4-btn{background:url(<%= asset_path 'baicheng/steps/step4-btn.jpg'%>) no-repeat;width:117px;height:46px;margin:0 auto;display:block;text-indent:-999em;}