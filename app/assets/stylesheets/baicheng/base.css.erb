input#password{width:108px;margin:9px 0;color:#aeaeae;}
span.tips{display:block;background:url(<%= asset_path 'baicheng/tips.jpg' %>) no-repeat;width:96px;height:22px;padding-top:4px;margin:9px 2px 0 0;}
span.tips a{color:#4ba958;}
span.tips a:hover{text-decoration:underline;}
input#login{margin-left:42px;float:left;display:inline;}
