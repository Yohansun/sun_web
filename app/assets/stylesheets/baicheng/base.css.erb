.none{display: none;}
.ft18{font-size: 18px;}
.pr{position: relative;}
.pa{position: absolute;}
#username,#password{padding: 0;}
#overlay_new_user{margin-bottom: 0;}
.abs-center{position: fixed;left: 50%;top: 50%;z-index: 1032;}
