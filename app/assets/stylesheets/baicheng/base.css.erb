@charset "utf-8";

body{background: url(<%= asset_path 'baicheng/refresh/refresh-bg.jpg' %>) no-repeat top center fixed;}
.header,.footer{width: 100%;min-width: 1180px;position: fixed;left: 0;z-index: 2;}
.header{background: #000;top: 0;}
.center,.wrapper{width: 1080px;margin: 0 auto;}
.nav{background: #424242;}
.nav li{float: left;display: inline;}
.nav a,.footer a,.refresh-logo a{display: block;}
.nav a{background: url(<%= asset_path 'baicheng/nav/top-nav.png' %>) no-repeat;text-indent: -999em;}
.top-nav1,.top-nav2{width: 86px;height: 49px;}
.top-nav3,.top-nav4,.top-nav5,.top-nav6,.top-nav7{height: 32px;margin: 9px 5px 0 0;}
.nav-bg{background: #585858;height: 49px;}
.nav .top-nav1{background-position: 0 0;}
.nav .top-nav2{background-position: -86px 0;}
.nav .top-nav3{background-position: -483px 0;width: 49px;}
.nav .top-nav4{background-position: -451px 0;width: 32px;}
.nav .top-nav5{background-position: -172px 0;width: 106px;}
.nav .top-nav6{background-position: -278px 0;width: 173px;}
.nav .top-nav7{background-position: -483px -49px;width: 52px;}
.top-nav1:hover,.top-nav1.active{background-position:0 -49px;}
.top-nav2:hover,.top-nav2.active{background-position:-86px -49px;}
.top-nav4:hover,.top-nav4.active{background-position:-451px -49px;}
.top-nav5:hover,.top-nav5.active{background-position:-172px -49px;}
.top-nav6:hover,.top-nav6.active{background-position:-278px -49px;}
.nav select{width: 105px;height: 27px;margin: 11px 5px;color: #c5c5c5;padding: 4px;font-size: 12px;border: 1px solid #c5c5c5;vertical-align: middle;*margin-top: 13px;}
.nav_submit{width: 50px;height: 27px;background: #fff;border: 1px solid #ccc;font: 14px "Microsoft Yahei";color: #666;line-height: 21px;*height: 20px;*line-height: 15px;*margin-top: -3px;}

.footer{background: #000;bottom: 0;height: 69px;}
.footer li{float: left;display: inline;}
.footer a,.footer .pr{background: url(<%= asset_path 'baicheng/nav/bot-nav.jpg' %>) no-repeat;height: 69px;text-indent: -999em;}
.footer .bot-nav1{background-position: 0 0;width: 85px;}
.footer .bot-nav2{background-position: -85px 0;width: 140px;}
.footer .bot-nav3{background-position: -225px 0;width: 124px;}
.footer .bot-nav4{background-position: -349px 0;width: 140px;}
.footer .bot-nav5{background-position: -489px 0;width: 215px;}
.bot-nav1:hover,.bot-nav1.active{background-position: 0 -69px;}
.bot-nav2:hover,.bot-nav2.active{background-position: -85px -69px;}
.bot-nav3:hover,.bot-nav3.active{background-position: -225px -69px;}
.bot-nav4:hover,.bot-nav4.active{background-position: -349px -69px;}
.bot-nav5:hover,.bot-nav5.active{background-position: -489px -69px;}

.footer .pr{background-position: right top;width: 111px;float: right;display: inline;}
.footer .bot-nav6,.footer .bot-nav7{background: none;width: 111px;height: 34px;position: absolute;left: 0;top: 0;}
.footer .bot-nav7{top: 35px;}

.subpage,.subpage .nav{background: #e71d36;}
.subpage .nav a{background-image: none;text-indent: 0;padding: 17px 25px;color: #fff;font-size: 14px;}
.subpage .logo a{width:132px;padding: 0;}
.logo{width: 364px;}
.subpage a:hover,.subpage a.active{background: #bc000e;}
.subpage li{position: relative;}
.sub{width: 1000px;}

.subnav{position:absolute;top:44px;left:0;background:url(<%= asset_path 'baicheng/nav/subnav_arrow.png' %>) no-repeat center top;padding-top:6px;}
.subpage .subnav li{border-bottom:1px dotted #66142a;}
.subpage .subnav a{width:106px;text-align:center;padding:10px 0;font:12px "Microsoft Yahei";background:#aa000d;}

.wrapper{padding-top: 86px;margin-bottom: 90px;}
.refresh-logo{background: url(<%= asset_path 'baicheng/refresh/refresh-logo.png' %>) no-repeat;width: 210px;height: 392px;padding:40px 7px 0 0;margin: 0 29px 0 77px;text-align:center;*left: 50%;*margin-left: -470px;}
.refresh-logo img{margin-bottom:47px;}
.refresh-logo a{background: url(<%= asset_path 'baicheng/refresh/refresh-btn.jpg' %>) no-repeat;width: 155px;height: 45px;text-indent: -999em;margin: 0 auto 14px;}
.refresh-logo .e-recent{background-position: -1px 0;height: 38px;}
.refresh-logo .e-upload{background-position: 0 -52px;}
.refresh-logo .e-publish{background-position: 0 -111px;}
.grid-container{height: 717px;overflow: hidden;}
.refresh-container{background: url(<%= asset_path 'baicheng/refresh/refresh-container.png' %>) repeat-y;width: 682px;padding: 2px 4px 4px 0;margin-left: 324px;}
.refresh-bin{width: 682px;width:702px\9;height: 717px;overflow: auto;}
div::-webkit-scrollbar,html::-webkit-scrollbar{display: none;}
.container-bot{background: url(<%= asset_path 'baicheng/refresh/container-bot.png' %>) no-repeat;width: 686px;height: 15px;position: relative;top: 19px;}

.grid-container{width: 1080px;}
.grid-container .refresh-bin{width: 1080px;width:1100px\9;}

.pager{text-align:center;margin:5px auto;clear: both;padding:3px 0;_padding:4px 0;}
.pager a{background:#fff;color:#7f7f7f;padding:0.2em 0.5em;border:1px solid #d1d1d1;}
.pager a:hover,.pager a.current{color:#bb0e0e;}

/*icolor reg*/
.unlogin.abs-center{background:#fff;border:5px solid #666;width:304px;height:339px;margin-left:-152px;margin-top:-170px;}
.unlogin .subs_title{margin-bottom:20px;height:22px;background:#f5f5f5;border-bottom:1px solid #e6e6e6;padding:8px;color:#959494;}
.unlogin .err_tips{top:30px;}
.unlogin .close-btn{background:url(<%= asset_path 'baicheng/close_btn.jpg' %>) no-repeat;width:21px;height:21px;}
.loginCon{width:260px;margin:0 auto;}
label.password{padding-top:8px;}
