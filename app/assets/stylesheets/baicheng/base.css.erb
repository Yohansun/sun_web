@charset "utf-8";

/*icolor reg*/
.none{display: none;}
.ft18{font-size: 18px;}
.pr{position: relative;}
.pa{position: absolute;}
#username,#password{padding: 0;}
#overlay_new_user{margin-bottom: 0;}
.abs-center{position: fixed;left: 50%;top: 50%;z-index: 1032;}
.unlogin.abs-center{background:#fff;border:5px solid #666;width:304px;height:339px;margin-left:-152px;margin-top:-170px;}
.unlogin .subs_title{margin-bottom:15px;height:22px;background:#f5f5f5;border-bottom:1px solid #e6e6e6;padding:8px;color:#959494;}
.unlogin .err_tips{top:30px;}
.unlogin .close-btn{background:url(<%= asset_path 'close_btn.jpg' %>) no-repeat;width:21px;height:21px;}
.loginCon{width:260px;margin:0 auto;}
label.password{padding-top:8px;}
input#username{width:208px;color:#aeaeae;}
input#password{width:108px;margin:9px 0;color:#aeaeae;}
span.tips{display:block;background:url(<%= asset_path 'tips.jpg' %>) no-repeat;width:96px;height:22px;padding-top:1px;margin:9px 2px 0 0;text-align: center;}
span.tips a{color:#4ba958;}
span.tips a:hover{text-decoration:underline;}
input#login{margin-left:42px;float:left;display:inline;}
.checkbox{margin:6px;color:#aeaeae;}
.checkbox input{float:left;display:inline;margin-right:5px;}
.border{border-top:1px dotted #999;padding:10px 0;}
.border_bottom{border-bottom:1px dotted #999;padding:10px 0;clear:both;margin:20px 0;}
ul.border li{float:left;display:inline;padding:0 5px;border-right:1px solid #dbdbdb;}
ul.border img{ float:left;margin:1px 2px 0 0;}
.border a{color:#0058a2;}
.reg_now{background:url(<%= asset_path 'register.jpg' %>) no-repeat;width:137px;height:32px;}
.loginCon p.fl{margin:9px;color:#000;}
.jia_custom,.jia_map{position: absolute;top: 505px;left: 50%;margin-left: 412px;color: #fff;}
.newheight{height: 407px;} 
#layer{background:#000;opacity:0.5;filter:alpha(opacity=50);position: fixed;top: 0;left: 0;width: 100%;height: 100%;z-index: 1031;display: none;}
.err_tips{background:#fffde4 url(/dev-assets/news/labels.png) 10px center no-repeat;width:200px;height:26px;line-height:26px;text-indent:2em;border:1px solid #e7e4d9;top:0;right:34px;}
.err_tips span.fr{color:#303030;margin:-7px 5px;}

.sub_bot .pager{margin-top:28px;}
.pager{/*width:388px;*/text-align:center;margin:0 auto; padding:3px 0;_padding:4px 0;}
.pager a{background:#fff;color:#7f7f7f;padding:0.2em 0.5em;border:1px solid #d1d1d1;}
.pager a:hover,.pager a.current{color:#bb0e0e;}

a.prev{padding-left:15px;position:relative;}
a.next{padding-right:15px;position:relative;}
a.prev span,a.next span{display:block;position: absolute;top:6px;border-color:transparent #737373;_line-height:0;font-size: 0px;}
a.prev span{left:3px;border-width:5px;border-style: solid solid solid none;height:0px;_border-color:#fff #737373;_filter:chroma(color=#ffffff);}
a.next span{right:3px;_left:50px;border-width:5px;border-style: solid none solid solid;height:0px;_border-color:#fff #737373;_filter:chroma(color=#ffffff);}
