@charset "utf-8";

.index,.leap,.pk{height: 600px;padding: 0;margin-bottom: 0;}
.index a,.leap a,.pk a{text-indent: -999em;display: block;position: absolute;}
.index span a,.leap span a,.pk span a{position: static;display: inline;text-indent: 0;}
.index-logo,.pk h1,.pk-btn{left: 50%;}
/*index*/
.index{background: url(<%= asset_path 'baicheng/index/index.jpg' %>) no-repeat;}
.index-logo{background: url(<%= asset_path 'baicheng/index/leap-logo.png' %>) no-repeat;width: 182px;height: 157px;margin-left: -79px;top: 0;}  
.index-join,.index-pk{background: url(<%= asset_path 'baicheng/index/index-join.png' %>) no-repeat;width: 118px;height: 35px;}  
.index-join{top: 109px;left: 30px;}  
.index-pk{background-position: 0 -35px;top: 123px;left: 654px;}  
.index-btn1{background: url(<%= asset_path 'baicheng/index/index-btn1.png' %>) no-repeat;width: 158px;height: 152px;top: 374px;left: 297px;}  
.index-btn2{background: url(<%= asset_path 'baicheng/index/index-btn2.png' %>) no-repeat;width: 183px;height: 163px;top: 293px;left: 114px;}  
.index-btn3{background: url(<%= asset_path 'baicheng/index/index-btn3.png' %>) no-repeat;width: 201px;height: 173px;top: 208px;left: 273px;} 

/*leap*/
.leap{background: url(<%= asset_path 'baicheng/index/leap.jpg' %>) no-repeat;}
.leap .index-logo,.pk .index-logo{left: 3px;top: 17px;margin-left: 0;}
.leap-join{background: url(<%= asset_path 'baicheng/index/leap-join.png' %>) no-repeat;width: 137px;height: 38px;left: 293px;top: 160px;}  
.leap-btn1{background: url(<%= asset_path 'baicheng/index/leap-btn1.png' %>) no-repeat;width: 169px;height: 172px;left: 362px;top: 356px;}  
.leap-btn2{background: url(<%= asset_path 'baicheng/index/leap-btn2.png' %>) no-repeat;width: 177px;height: 166px;left: 601px;top: 305px;}  
.leap-btn3{background: url(<%= asset_path 'baicheng/index/leap-btn3.png' %>) no-repeat;width: 232px;height: 211px;left: 429px;top: 170px;}  
.leap .leap-right,.pk .pk-left{width: 94px;height: 186px;position: fixed;top: 207px;}  
.leap .leap-right{background: url(<%= asset_path 'baicheng/index/leap-right.png' %>) no-repeat;right: 0;}

/*pk*/
.pk{background: url(<%= asset_path 'baicheng/index/pk.jpg' %>) no-repeat;}
.pk h1{background: url(<%= asset_path 'baicheng/index/pk-header.png' %>) no-repeat;width: 434px;height: 104px;text-indent: -999em;position: absolute;margin-left: -222px;top: 51px;}  
.pk-btn{background: url(<%= asset_path 'baicheng/index/pk-btn.png' %>) no-repeat;width: 184px;height: 54px;margin-left: -92px;top: 455px;}  
.pk .pk-left{background: url(<%= asset_path 'baicheng/index/pk-left.png' %>) no-repeat;left: 0;}
