.colorsbox .colors_con .desc .list li .colorblock{float:left;margin:0 5px 0 0;width:30px;height:30px}
.colorsbox .colors_con .desc .list li{ float:left; border-right:1px dotted #ccc; margin-right:10px; padding:0 10px;}
.colorsbox .colors_con .desc .list li h5{ color:#6d1718; font:12px "Microsoft Yahei";}
.colorsbox .colors_con .desc .list li p{ font:12px "Microsoft Yahei"; padding:0 5px 5px 35px;}

.workinfo{color:#5f5f5f;font:12px/14px "SinSum";}
.workinfo span{float:left;width:85px;margin-right:0;}
.workinfo em{float:left;width:565px;white-space:normal;word-wrap:break-word;}

.img-info .icon-word{color:#d71f18;}
.img-info .icon-word{padding-left:25px;background:url(<%= asset_path 'baicheng/content/content_icon.png' %>) no-repeat 0 -191px;}
.img-info .thankwords{line-height:18px;font-size:12px;}

/*comment-form*/
.comment-form{padding-top:15px;}
.comment-form h5{color:#898989;padding:5px;background:#f0fbfc;border:solid #dbdad7;border-width:1px 0;font-size:12px;}
.comment-form textarea,.reply_form textarea{height:88px;width:650px;padding:3px;border:solid #dbdad7;border-width:0 1px 1px;margin-bottom:5px;font: 16px "Microsoft Yahei";}
.submit_btn{padding:5px 7px;color:#fff;background:#e71d36;font-size:12px;}
.comment-pager{text-align:right;position:absolute;right:0;top:-31px;}
.comment-list{padding:10px 0;}
.comment-item{margin-bottom:15px;}
.comment-list h5{font-size:12px;color:#333333;font-weight:bold;padding:4px 7px;background:#f3f3f3;border-top:1px solid #d4d4d4;}
.comment-list h5 span{margin-right:0;color:#929292;}
.comment-list p{font:12px/16px "SinSum";padding:5px 65px 10px 7px;border-bottom:1px dashed #c7c7c7;}
.reply-btn{position:absolute;top:5px;right:0;background: url(<%= asset_path 'baicheng/content/content_icon.png' %>) no-repeat 0 -219px;padding-left: 24px;height: 18px;color: #5d5d5d;}
.submit_btn_cancel{background:#cccccc;margin-left:2px;}
.reply_form textarea{height:66px;border-top-width:1px;}

.slider-btngroup{position:absolute;bottom:5px;right:8px;}
.slider-btngroup ul{margin-left:2px;}

/*rules*/
.rules{background:#fff;padding:86px 30px 28px;width:940px;min-height: 800px;}
.rules ul{border-bottom:1px solid #d6d6d6;padding-bottom:20px;margin-bottom:20px;}
.rules li{font:14px/24px "Microsoft Yahei";}
.btn-title_medium{line-height:33px;text-align:center;padding-right:3px;background:url(<%= asset_path 'baicheng/rules/titlebg_r.png' %>) no-repeat right center;}
.btn-title_medium a{padding:6px 18px;background:url(<%= asset_path 'baicheng/rules/titlebg_l.png' %>) no-repeat left center;color:#fff;font-size:16px;}

.actives h4{padding-left:20px;background:url(<%= asset_path 'baicheng/rules/step_icon.png' %>) no-repeat 0 2px;margin-top:20px;}
.actives h4.step2{background-position:0 -38px;}
.actives h4.step3{background-position:0 -78px;}

.active_upload,.active_publish{position:absolute;bottom:20px;right:0;}
.active_upload a,.active_publish a{background:url(<%= asset_path 'baicheng/refresh/refresh-btn.jpg' %>) no-repeat 0 -52px;width:155px;height:45px;}
.active_publish a{background-position:0 -111px;}

.rules li h4{font-size:16px;margin:5px 0 10px;}
.award{padding:86px 0 28px;width:1000px;}
.award dl{width:50%;float:left;margin-top:0}
.award dl dt{background:#ebebeb url(<%= asset_path 'baicheng/rules/rules3arrow.jpg' %>) no-repeat center bottom;text-align:center;padding:15px 0;}
.awards{padding:5px 5px 5px 80px;height:70px;background:url(<%= asset_path 'baicheng/rules/award.png' %>) no-repeat 0 5px;margin:20px 30px 0;border-bottom:1px dotted #9d9d9d;}
.awards_second{background-position:0 -78px;}
.awards_third{background-position:0 -164px;}
.awards_fourth{background-position:0 -246px;}
.award dl dd h3{color:#232323;font-size:14px;font-weight:bold;}
.award dl .two_rows{margin:0 30px;padding:15px 0 0;border-bottom:1px dotted #9d9d9d;}
.award dl .two_rows dl{margin-bottom:0;}

.tiemline{padding:18px 0 0 6px;background:url(<%= asset_path 'baicheng/rules/timebg.jpg' %>) no-repeat center top;margin-top:30px;}
.tiemline li{float:left;padding:10px 5px;width:82px;text-align:center;font-size:16px;background:#e71d36;border-right:1px solid #fff;color:#fff;cursor:pointer;}
.time_table{width:928px;margin-left:6px;}
.time_table th{background:#7adee6;border-right:1px solid #fff;color:#fff;font:bold 18px "Microsoft Yahei";padding:10px 20px;}
.time_table td{padding:8px 20px;}