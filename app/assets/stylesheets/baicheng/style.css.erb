@charset "utf-8";
.reply_del{position:absolute;top:5px;right:0;padding-left: 24px;height: 18px;color: #5d5d5d;font-weight:normal;cursor:pointer;}
.show-group{top:5px;right:8px;padding-right:3px;background:url(<%= asset_path 'baicheng/content/btnbg_right.png' %>) no-repeat right center;}
.show-group ul{background:url(<%= asset_path 'baicheng/content/btnbg_left.png' %>) no-repeat left center;/*width:101px;padding:0 4px;*/height:21px;margin-left:10px;}
.show-group li{float:left;font-size:12px;line-height:21px;margin:0 5px;}
.show-group li a{float:left;background:url(<%= asset_path 'baicheng/content/content_icon.png' %>) no-repeat;padding-left:18px;color:#7d7d7d;}
.show-group li a.icon-like{background-position:0 -104px;}
.show-group li a.icon-view{background-position:0 -123px;}
.show-group li a.icon-collect{background-position:0 -145px;}
.show-group li a.icon-download{background-position:0 -166px;}

.img-info{border-top:1px dashed #b6b6b6;padding:10px 13px;}
.img-info p,.questionmart{line-height:24px;margin-top:5px;color:#5f5f5f;}
.img-info p.author{color:#ababab;}
.img-info span{margin-right:25px;}
.btn-title{width:79px;height:26px;line-height:24px;text-align:center;margin-top:-3px;background:#d71f18 url(<%= asset_path 'baicheng/content/btn-title.png' %>) no-repeat;color:#fff;font-size:14px;}
.img-info h4{color:#5f5f5f;margin-bottom:10px;}
.oldworks li{float:left;background:url(<%= asset_path 'baicheng/content/oldworksbg.png' %>) no-repeat;width:203px;padding:2px 3px;height:203px;margin:0 14px 0 0;}
.oldworks li img{border-bottom:1px solid #7a7a7a;}
.oldworks li p{line-height:14px;padding:0 10px;overflow:hidden;height:14px;}
.oldworks li h5{margin-top:5px;padding:0 10px;overflow:hidden;height:22px;}

/*.questionmart{margin-top:10px;}*/
.img-info .questionmart img{vertical-align:middle;margin-top:-2px;}
.questionmart_pop{position:absolute;bottom:-121px;left:169px;width:403px;height:361px;padding:33px 25px 30px 75px;background:url(<%= asset_path 'baicheng/content/questionmark_pop.png' %>) no-repeat;z-index:1001;font-size:12px;}
.questionmart_pop h3{font-size:14px;}
.questionmart_pop2{background:url(<%= asset_path 'baicheng/content/questionmark_pop2.png' %>) no-repeat;width:213px;height:288px;padding:43px 25px 30px 95px;left:235px;bottom:-68px;}  
.questionmart_pop .btn-title{height:24px;line-height:22px;}  
