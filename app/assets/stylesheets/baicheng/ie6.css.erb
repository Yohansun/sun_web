.navbar_top .nav  .active  a,
.navbar_top .nav  .active  a:hover,
.navbar-fixed-top .navbar-inner{box-shadow:none;background:#fff;color:red;}
.icon-refresh_login,
.icon-refresh_register{display:inline-block;width:29px;height:29px;background-image:url(<%= asset_path 'baicheng/icons.png'%>);vertical-align:middle;margin-right:6px;}
