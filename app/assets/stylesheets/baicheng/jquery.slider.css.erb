@charset "utf-8";

.slider_bin{background:url(<%= asset_path 'imgbase/loading.gif' %>) no-repeat center center;width:200px;height:150px;overflow:hidden;position:relative;}
.slider_container{width:9999999px;position:relative;}
.slider_container img{/*float:left;*/display:inline;}
.slider_container div{width: 1680px;height: 550px;float: left;}
.slider_bin ul{position:absolute;bottom:10px;right:10px;}
.slider_bin li{background:#fff;color:#000;font-size:12px;float:left;display:inline;width:20px;height:20px;text-align:center;line-height:20px;border-radius:10px;cursor:pointer;margin-right:5px;opacity:0.6;filter:alpha(opacity=60);}
.slider_bin li.curr{background:#000;color:#fff;}
.slider_prev,.slider_next{background:url(<%= asset_path 'img/slider.png' %>) no-repeat;_background-image:url(<%= asset_path 'img/slider.gif' %>);width:30px;height:30px;position:absolute;top:50%;z-index:1000;left:10px;text-indent:-999em;}
.slider_next{background-position:-32px 0;left:auto;right:10px;}

/*story slider*/
.story-slider{width:680px;height:353px;}
.story-slider .slider_container div{width:680px;height:353px;float:left;}
.story-slider .slider_prev,.story-slider .slider_next{width:45px;height:45px;background:url(<%= asset_path 'baicheng/content/content_icon.png' %>) no-repeat;margin-top:-22px;}
.story-slider .slider_next{background-position:0 -45px;}
.story-slider ul{right:50%;margin-right:-40px;}
.story-slider li{background:url(<%= asset_path 'baicheng/content/content_icon.png' %>) no-repeat -13px -95px;width:8px;height:8px;text-indent:-9999px;opacity:1;filter:alpha(opacity=100);}
.story-slider li.curr{background:url(<%= asset_path 'baicheng/content/content_icon.png' %>) no-repeat 0 -95px;}