@charset "utf-8";
.data_nav{margin:60px 0 0 300px;width:440px;}
.data_nav p.fr{margin-left:30px;}
.data_nav p a{color:#fff;}
.data_login{background-image:url(<%= asset_path "count/data_login.jpg"%>);}
.data_login_bg{background:url(<%= asset_path "count/data_login_bg.jpg"%>) top center no-repeat;width:903px;margin:40px auto;padding-top:149px;}
.bd{border:1px solid #fff;height:1000px;margin:30px auto;}
.data_login_content{width:540px;height:100px;border:1px solid #ccc;border-top:none;margin:0 auto;padding:50px 170px;}
.data_login_content div{margin:10px 0;}
.data_login_content div label{width:100px;float:left;display:inline;margin:6px;}
.data_login_content div label span{color:#f00;margin-right:10px;font-size:20px;font-weight:bold;position:relative;top:5px;}
.data_login_content div input{width:165px;height:20px;border:1px solid #e3e3e3;font-weight:bold;padding:5px 0;}
.data_login_content p{width:500px;}

.count{background:url(<%= asset_path "count/count_top.jpg"%>) #f8f8f8 no-repeat left top;width:1003px;height:1111px;margin:15px auto;color:#322e2e;}
.count h1{font-size:17px;font-weight:bold;float:left;margin:26px 0 12px 32px;}
.count_left{background:url(<%= asset_path "count/count_left.png"%>) no-repeat;width:196px;height:300px;margin-left:-29px;clear:left;padding:40px 100px 0 65px;}
.count_left li a{background:url(<%= asset_path "count/count_dot.jpg"%>) no-repeat left center;border-bottom:1px solid #fff;display:block;color:#fff;padding:1.5em;_height:1%;}

.count_right{background:url(<%= asset_path "count/count_right.png"%>) no-repeat;width:668px;height:340px;*margin-top:53px;}
.count_sum{background:#dddbdb;width:595px;height:252px;margin:30px 0 0 28px;padding:10px;}
.count_sum h2{font-size:15px;border-bottom:1px dotted #322e2e;padding:0.5em 2em;font-weight:bold;}
.count_sum p.data_count_p{text-align:center;line-height:3em;font-size:24px;color:#000;}
.count_sum p.data_count_p span{font-size:36px;font-weight:bold;color:#322e2e;font-family:Arial, Helvetica, sans-serif;margin:5px;position:relative;top:4px;text-shadow:-2px 1px 2px rgba(0,0,0,0.5);}
.count_sum ul.count_ul{width:400px;margin:0 auto;color:#000;}
.count_sum ul.count_ul li{margin:20px 0;font-weight:bold;}
.count_sum ul.count_ul span{width:200px;text-align:right;float:left;display:inline;}

.count table{clear:both;border:1px solid #d5d5d5;margin:75px 0 40px 195px;float:left;display:inline;*float: none;}
.count table th{background:#a3a3a3;border-right:1px dotted #fff;text-align:center;font-size:14px;height:33px;color:#fff;}
.count table td{text-align:center;font-size:12px;border:1px solid #d5d5d5; border-bottom-width:2px;height:33px;word-break:break-all;word-wrap:break-word;}
.count table th.tl,.count table td.tl{text-align:left;padding-left:2em;}
.count table td a{color:#191919;background:#e2dfdf;padding:0.1em 0.8em;font-size:14px;}
.count table input.data_info_input{margin:5px;position:relative;top:2px;_top:0;}
.count .pager{width:340px;}
.count_sum div{width:91px;float:left;display:inline;margin:0 8px 17px 0;}
.count_sum div h3{font-size:12px;background:#fff;text-align:center;padding:0.2em 0;}

.data_info_form h2{font-size:18px;margin:16px 0 10px 100px;*margin-left:35px;}
.data_info_form textarea{background:#fffcfc;border:1px solid #d3d3d3;width:734px;height:65px;margin-left:150px;}
.data_info_form input.info_submit{margin:40px 0;}
.info_ul{background:url(<%= asset_path "count/info_ul.jpg"%>) no-repeat #dddbdb center center;}

.data_tool{background:url(<%= asset_path "count/data_tool.jpg"%>) #dddbdb right bottom no-repeat;}
.data_tool p{color:#000;font-size:18px;background:url(<%= asset_path "count/data_tool_p.jpg"%>) left center no-repeat;padding-left:5em;margin:20px;line-height:1.5em;}
.data_tools{margin:50px;border:1px solid #d3d3d3;padding:20px;width:828px;}
.data_tools li{float:left;display:inline;margin:30px;width:354px;}
.data_tools li img{float:left;display:inline;margin-right:65px;}
.data_tools li h3{font-weight:bold;margin:30px 0;float:right;width:100px;}
.data_tools li p{line-height:20px;float:right;width:100px;}
.data_tools li a img{float:right;display:inline;margin:30px 0 0;clear:right;}
#layer{
	position:fixed;_position:absolute;
	width:100%;height:100%;left:0;top:0;
	background:#000;
	cursor:pointer;
	opacity: 0.5;
	-moz-opacity: 0.5;
	filter:alpha(opacity=50);
	z-index:2000;
	display:none;
}
.abs_center{
	position:fixed;
	_position:absolute;
	top:-50%;left:50%;
	z-index:2001;
	cursor:auto;
}
.layer_content{
	width:430px;height:250px;
	margin-left:-215px;margin-top:-125px;
	padding:10px;
	font-size:12px;
	border:7px solid #555;
	background:#fff;
	border-radius:10px;
	box-shadow: 10px 10px 5px rgba(0,0,0,0.5);
	display:none;
}
#lay_close{
	background:url(<%= asset_path "yda/lay_close.png"%>) no-repeat;
	_background-image:url(<%= asset_path "yda/lay_close.gif"%>);
	width:32px;height:32px;
	position:absolute;
	right:-20px;
	top:-20px;
	
}
.layer_content form{padding:0px 0;font-size:16px;}
.layer_content form ul{width:350px;margin:0 auto;}
.layer_content form li{margin:10px 0;}
.layer_content form li textarea{width:343px;height:85px;margin:5px 0;border:1px solid #ccc;}
.layer_content form li input{width:210px;border:1px solid #ccc;height:24px;}

.count .data_user{margin:40px auto;}
.data_user button{padding:0.2em 0.5em;background:#e4e2e2;color:#191919;border:1px solid #d3d3d3;border-radius:5px;}
#input_pop,#sale_amount{background:#f0eeee;width:125px;height:119px;border:1px solid #d0d0d0;padding:6px 0;font-size:12px;text-align:center;position:absolute;display:none;}
input.input_text{background:url(<%= asset_path "count/input_bg.jpg"%>) no-repeat;width:114px;height:24px;border:none;outline:0;margin-bottom:5px;}
input.input_submit{background:#767575;color:#fff;border:1px solid #393939;padding:0.2em 0.5em;}
.data_user td p{line-height:12px;padding:3px 0;}
#sale_amount{width:125px;height:55px;}
#input_pop .input_text{width:30px;background:#fff;border:1px solid #ccc;}
#input_pop .even{width:63px;}