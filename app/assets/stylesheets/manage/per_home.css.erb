.per_banner{position:relative;margin-bottom:20px;background:#fff;*min-height:422px;}
.per_photo{min-height:60px;}
.per_photo div{position:absolute;top:200px;left:24px;width:150px;height:150px;border:1px solid #e2e2e2;padding:4px;background:#fff;}
.per_photo div img{width:150px;height:150px;}
.per_banner h4{font:bold 18px/36px "Microsoft Yahei";margin-left:194px;}
.per_edit{position:absolute;right:4px;bottom:4px;background:#444444;color:#fff;padding:0 6px;line-height:22px;}
.per_edit:hover{color:#fff;}
.phone_number{font:24px 'AGaramondLT Semibold';color:#e71d36;}
.per_links{border-top:1px solid #eaeaea;}
.per_links li{height:60px;line-height:60px;vertical-align:middle;margin-left:22px;_display:inline;}
.per_links li *{vertical-align:middle;}
.per_links .pull-right a{display:inline-block;padding:0 14px;border-left:1px solid #ebebeb;font:14px/60px 'SimSun';color:#353535;}

.per_home .index_main{padding:0 13px;border:none;}
.per_left{width:514px;height:1045px;}
/*.per_left .index_tit a:hover,*/.per_left .index_tit a.active{color:#35679a;}
.per_works{padding-left:6px;}
.per_works li{float:left;padding:9px 10px 0;border:1px solid #e1e1e1;background:#f5f5f5;margin:0 20px 20px 0;*width:210px;}
.per_works li a.help-block{width:210px;height:156px;overflow:hidden;}
.per_works img{width:210px;height:156px;}
.per_works li h5.dott1{padding-top:5px;margin-bottom:0px;font-family:'SimSun';height:26px;width:210px;overflow:hidden;white-space:nowrap;text-overflow:ellipsis;}
.per_works li h5 a{color:#474747;}
.per_works li p.dott1{padding-top:5px;margin:5px 0 0;line-height:16px;}
.per_works li p span{font-size:12px;border-right:1px dotted #ddd;width:30%;display:inline-block;margin-right:3px;overflow:hidden;}
.per_right{width:423px;height:1045px;}
.per_right .work_comments .mood_list li {padding-bottom:6px;}
.per_right .re_comments{*padding-top:0;}
.per_home .index_tit{padding-top:4px;}
.per_home .comment_form h5{font:bold 14px "SimSun";color:#3c3b3b;}
.per_home .comment_form textarea{width:96%;height:107px;background:#fff;box-shadow:inset 0px 1px 3px #ddd;}

.per_left2{width:294px;height:283px;}
.per_right2{width:670px;height:283px;}
.per_left2 .index_tit{font-size:14px;}
.per_left2 .index_tit small{font-size:12px;}
.per_left2 .ul_list_news li{padding:3px 4px 3px 10px;margin:0 2px;border-bottom:1px dotted #ddd;height:24px;line-height:24px;overflow:hidden;white-space:nowrap;text-overflow:ellipsis;}
.per_left2 .ul_list_news li a{color:#5c5c5c;font:12px 'SimSun';}
.per_left2 .ul_list_news li a:hover{color:#ff6600;}
.per_right2 .slider-container{width:670px;}
.per_right2 .circle_indicators{text-align:right;position:absolute;right:9px;bottom:6px;text-indent:-9999px;width:50px;/*height:10px;*/}
.per_right2 .circle_indicators li{float:left;display:inline;}
.per_right2 .circle_indicators a{width:10px;height:10px;}
.per_right2 .circle_indicators .slider-active a {background-position:0 -401px;}
.per_right2 .circle_indicators a {background-position:-14px -401px;}


.index_main_black{background:#2c2c2c url(<%= asset_path 'manage/per_home_huaxun/per_design_bg.jpg'%>);padding:10px 10px 33px;color:#fff;}
.index_main_black .index_tit{color:#a5a274;font-size:14px;}
.index_main_black .index_tit strong{line-height:25px;}
.index_main_black hr.border2{border-color:#171717;}
#haxun_design_slide .slider-container{width:920px;margin:20px auto 0 auto;}
#haxun_design_slide li{width:210px;border:1px solid #a2a2a2;margin:0 8px;}
#haxun_design_slide li p{height:38px;line-height:38px;overflow:hidden;white-space:nowrap;text-overflow:ellipsis;background:#2d2e2d;}
#haxun_design_slide .slider-prev,#haxun_design_slide .slider-next{background:url(<%= asset_path 'manage/btns/btns_icon3.png' %>) no-repeat;width:22px;height:32px;text-indent:-9999px;margin-top:-16px;}
#haxun_design_slide .slider-prev{background-position:0 0;}
#haxun_design_slide .slider-next{background-position:-22px 0;}
#haxun_design_slide .slider-prev:hover{background-position:0 -32px;}
#haxun_design_slide .slider-next:hover{background-position:-22px -32px;}

.closer_haxun{padding:0 10px;font:14px 'SimSun';}
.huaxun_intro p{font:12px/22px 'SimSun';color:#404040;padding:5px 0px;}
.huaxun_intro{padding:10px;}
/*upload.css*/
.upload_tab.nav-tabs{background-color:#f8f8f8;margin-bottom:0;}
.upload_tab.nav-tabs li{margin-bottom:0;}
.upload_tab.nav-tabs > li > a{-webkit-border-radius:0;-moz-border-radius:0;border-radius:0;border:0;color:#000;border-top:2px solid #f8f8f8;}
.upload_tab.nav-tabs > li.active > a,.upload_tab.nav-tabs > li.active > a:hover{border:2px solid #ff6300;border-width:2px 0 0;}
/*upload.css ends*/
.haxun_point .tab-content{padding:20px 20px 25px;}
/*point.css*/
.per_tips{font:12px/24px "SimSun";}
.per_tips span{color:#35679a;}
.per_point h5{margin:5px 0;font-size:16px;}
.gifts_list{border:1px solid #eaeaea;border-width:1px 0;}
.gifts_list li{float:left;width:218px;/**width:200px;*/height:260px;text-align:center;border:1px solid #eaeaea;border-width:0px 1px 1px 0;padding:0 10px;}
.gifts_list a{color:#666666;font:14px/16px "SimSun";}
.gift_img{height:198px;width:202px;*width:200px;font-size:173px;text-align:center;display:table-cell;vertical-align:middle;}
.gift_img img{vertical-align:middle;}
.noborder_right{border-right:0!important;}
.noborder_bottom{border-bottom:0!important;}
.gifts_table{width:479px;/**width:443px;*/left:1px;font:12px/40px "Microsoft Yahei";color:#666;margin-top:20px;}
.gifts_table th,.gifts_table td{border:1px solid #eaeaea;padding:0 20px;height:40px;line-height:40px;}
.gifts_table th{background:#fbfbfb;text-align:left;font-size:14px;}
.nothing{text-indent:-9999px;}
.gifts_table th:last-child,.gifts_table td:last-child{text-align:center;}
/*point.css ends*/

