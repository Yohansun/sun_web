.christmas{width:963px;padding-bottom:75px;background:#900202 url(<%= asset_path "christmas/christmas_bg3.jpg"%>) no-repeat left bottom;margin-bottom:50px;}
.christmas form{background:url(<%= asset_path "christmas/christmas_bg1.jpg"%>) no-repeat top center;padding:30px 85px 0;}
.christmas form fieldset{padding-bottom:30px;}
.christmas button,a.button_small,a.button_large{background:url(<%= asset_path "christmas/button.jpg"%>) no-repeat top center;height:31px;text-align:center;color:#712222;font:bold 16px "Microsoft Yahei";}
a.button_small,a.button_large{display:inline-block;line-height:31px;}
.christmas form input{padding:5px;font-size:12px;width:375px;height:21px;line-height:21px;background:url(<%= asset_path "christmas/input_bg.jpg"%>) no-repeat;border:none;position:relative;top:-2px;*top:0;margin-right:20px;}
.christmas form input:focus{outline:0;}
.christmas form textarea{width:780px;height:150px;padding:10px;margin-bottom:20px;font-family:"Microsoft Yahei";}
.christmas .tips{background:url(<%= asset_path "christmas/christmas_bg2.jpg"%>) repeat-x left top;padding:25px 85px;min-height:317px;_height:317px;}
.christmas .tips p{color:#fff;margin:25px 0;line-height:16px;font-family:"Microsoft Yahei";}
.christmas .tips span.display_block{display:block;margin:5px 0 5px 48px;}
.christmas .tips i{display:inline-block;background:url(<%= asset_path "christmas/icon.png"%>) no-repeat 0 0;width:33px;height:33px;position:relative;top:12px;margin-right:10px;}
.christmas .tips strong,.christmas .tips span{line-height:33px;}
.christmas .tips strong{font-size:18px;}
.christmas .tips span{font-size:14px;}
.christmas .tips i.icon_time{background-position:0 -70px;}
.christmas .tips i.icon_step{background-position:0 -145px;}
.christmas .tips i.icon_award{background-position:0 -290px;}
.christmas .tips i.icon_state{background-position:0 -360px;}

.christmas_pop{width:340px;height:167px;padding:95px 100px;background:url(<%= asset_path "christmas/christ_pop.png"%>) no-repeat;position:fixed;_position:absolute;top:50%;left:50%;margin-left:-270px;margin-top:-250px;z-index:10000}
.christmas_pop h2{font:41px "SimHei";color:red;margin-bottom:20px;}
.christmas_pop h2.txt_green{color:green;}
.christmas_pop p{font:18px/26px "SimHei";color:#323232;/*text-indent:30px;*/padding:0 0 0 15px;}
.christmas_pop p a,.christmas_pop2 p a{color:#487ac5;text-decoration:underline;}

.christmas_pop2{width:360px;height:80px;padding:40px 20px 20px;background:#fff;position:fixed;_position:absolute;top:50%;left:50%;margin-left:-200px;margin-top:-140px;z-index:10000;}
.christmas_pop2 p{line-height:20px;font-size:12px;}
.christmas_pop2 p.ft14{font-size:14px;}
.christmas_pop2 .christmas_close{top:-24px;right:-24px;}
.christmas_close{position:absolute;top:5px;right:0;}
#layer{width:100%;height:100%;position:fixed;_position:absolute;top:0;left:0;background: black;cursor: pointer;opacity: 0.5;-moz-opacity: 0.5;filter: alpha(opacity=50);z-index:10000}
.button_large{width:98px;}
.button_small{width:70px;}
.nomargin{margin:0!important;}