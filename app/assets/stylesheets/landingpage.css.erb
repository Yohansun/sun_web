@charset "utf-8";
*{margin:0;padding:0;}
ul{list-style:none;}
a{text-decoration:none;}
a img{border:none;}
body{height:1102px;}
#wrapper{width:990px;margin:0 auto;height:1102px;}
.header{border-bottom:1px solid #929292;padding-bottom:5px;margin-bottom:70px;position:relative;}
.header h1 a{display:block;margin:30px 50px 0 5px;}
.header h1,.header .landing_nav,.header .landing_nav li,.header .landing_nav li a{float:left;}
.header .landing_nav{margin-top:30px;}
.header .landing_nav li a{height:47px;width:102px;color:#ff255b;font:14px/47px "Microsoft Yahei";text-align:center;}
.header .landing_nav li a.li_cur{background:url(<%= asset_path "landingpage/landingpage_navhover.png"%>) no-repeat;color:#fff;}
.header .back_icolor{position:absolute;top:40px;right:0;}
/******************************************/
/*index*/
.landing_index{padding-top:50px;text-align:center;}
/*introduction*/
.content .w_640{width:750px;}
.content h2{color:#23328a;font:30px "Microsoft Yahei";border-bottom:1px solid #ef4136;margin-bottom:35px;}
.content h3{color:#ff255b;font:18px "Microsoft Yahei";margin-bottom:10px;}
.content h4{color:#000;font:16px "Microsoft Yahei";}
.content p{color:#2c2d2d;font:12px/24px "Microsoft Yahei";margin:30px 0;/*padding-right:50px;*/}
.content p strong{font-weight:normal;}
.content .color_ff255b{color:#ff255b;}
/*flow*/
.content .flow p{vertical-align:middle;}
.content .flow h3 a{text-decoration:underline;color:#2e679c;}
.content .flow p a{color:#ef4136;}

i[class^="icon-"]{display:inline-block;vertical-align:middle;}
.icon-step1,.icon-step2,.icon-step3,.icon-step4{width:49px;height:67px;background:url(<%= asset_path "landingpage/landing_icon_flow.png"%>) no-repeat;margin-right:20px;_display:inline-block;_vertical-align:middle;}
.icon-step1{background-position:0 0;}
.icon-step2{background-position:0 -91px;}
.icon-step3{background-position:0 -185px;}
.icon-step4{background-position:0 -287px;}
/*award*/
.content .award ul{margin-bottom:30px;}
.content .award ul li{float:left;width:45%;margin-right:5%;*margin-right:4%;color:#2c2d2d;font:12px/24px "Microsoft Yahei";}
.content .award ul li strong{display:block;}
.content .award ul li img{float:right;}
/*jury*/
.jury p{position:relative;padding-left:15px;background:url(<%= asset_path "landingpage/list_icon.png"%>) no-repeat 0 5px;margin-left:-15px;min-height:160px;_height:160px;}
.jury p span{position:absolute;right:-130px;top:0;}
.jury p span strong{display:block;font-weight:bold;color:#ff255b;}

/*pop*/
.content.pop_rule{width:950px;height:700px;position:absolute;top:50%;margin-top:-400px;left:50%;margin-left:-605px;z-index:99999;background:#eafff8;padding:50px 130px 30px;box-shadow:2px 2px 5px #ccc;}
.content.pop_rule.jury p{min-height:24px;margin:10px 0;}
.landing_overlay{background:url(<%= asset_path "landingpage/landing_overlay.png"%>);position:absolute;top:0;left:0;width:100%;height:100%;z-index:99998;}

.landing_popclose{position:absolute;top:-10px;right:-10px;}
#footer{background:#0f213a;/*max-width:1900px;*/}
#footer .main{width:990px;margin:0 auto;padding:35px 0;}
#footer .main ,#footer .main a,#footer .main span{color:#fff;font-size:12px;}
#footer .main span{margin-top:5px;display:block;}


/* self-clear floats */
.group:after {
	content:".";
	display:block;
	height:0;
	clear:both;
	visibility:hidden;
}

/* self-clear floats */
*html .group { /* IE6 */
	height:1%;
}
*:first-child+html .group {/* IE7 */
	min-height:1px;
}

