@charset "utf-8";
*{margin:0;padding:0;}
ul{list-style:none;}
a{text-decoration:none;}
a img{border:none;}
body{height:1102px;background:url(<%= asset_path "landingpage/landingpage_bg.jpg"%>) no-repeat center top;}
#wrapper{width:940px;margin:0 auto;height:1102px;}
.landing_header{width:auto!important;border-bottom:1px solid #929292;padding-bottom:5px;margin-bottom:70px;position:relative;}
.landing_header h1 a{display:block;margin:30px 0px 0 5px;}
.landing_header h1,.landing_header .landing_nav,.landing_header .landing_nav li,.landing_header .landing_nav li a{float:left;}
.landing_header .landing_nav{margin-top:30px;}
.landing_header .landing_nav li a{height:47px;width:102px;color:#ff255b;font:14px/47px "Microsoft Yahei";text-align:center;margin-right:15px;}
.landing_header .landing_nav li a.li_cur{background:url(<%= asset_path "landingpage/landingpage_navhover.png"%>) no-repeat;color:#fff;}

.landing_header .back_icolor{position:absolute;top:40px;right:-27px;}
/******************************************/
/*index*/
.landing_index{padding-top:50px;text-align:center;}
/*introduction*/
.content .w_750{width:750px;}
.content h2{position:relative;color:#23328a;font:30px "Microsoft Yahei";border-bottom:1px solid #ef4136;margin-bottom:35px;}
.content h2 a{position:absolute;top:6px;right:-80px;}
.content h3{color:#ff255b;font:18px "Microsoft Yahei";margin-bottom:10px;}
.content h4{color:#000;font:16px "Microsoft Yahei";}
.content p{color:#2c2d2d;font:14px/24px "Microsoft Yahei";margin:30px 0;/*padding-right:50px;*/}
/*.content p.font18{font-size:16px;}*/
.content p strong{font-weight:normal;}
.content .color_ff255b{color:#ff255b;}
/*flow*/
.content .flow p{vertical-align:middle;}
.content .flow p strong{line-height:24px;}
.content .flow h3 a{text-decoration:underline;color:#2e679c;}
.content .flow p a{color:#ef4136;}

i[class^="icon-"]{display:inline-block;vertical-align:middle;}
.icon-step1,.icon-step2,.icon-step3,.icon-step4{width:49px;height:67px;background:url(<%= asset_path "landingpage/landing_icon_flow.png"%>) no-repeat;margin-right:20px;_display:inline-block;_vertical-align:middle;}
.icon-step1{background-position:0 0;}
.icon-step2{background-position:0 -91px;}
.icon-step3{background-position:0 -185px;}
.icon-step4{background-position:0 -287px;}
/*award*/
.content .award ul{margin-bottom:30px;}
.content .award ul li{float:left;width:45%;margin-right:5%;*margin-right:4%;color:#2c2d2d;font:14px/24px "Microsoft Yahei";}
.content .award ul li strong{display:block;font-weight:bold;}
.content .award ul li img{float:right;}
/*jury*/
.jury p{position:relative;padding-left:15px;background:url(<%= asset_path "landingpage/list_icon.png"%>) no-repeat 0 5px;margin-left:-15px;min-height:160px;_height:160px;padding-right:190px;}
.jury p span{position:absolute;right:5px;top:0;}
.jury p span img{padding:3px;background:#fff;}
.jury p span strong{display:block;font-weight:bold;color:#ff255b;margin-top:5px;}
/*pop*/
.content.pop_rule{display:none;width:860px;height:auto;position:fixed;_position:absolute;top:50%;margin-top:-240px;left:50%;margin-left:-440px;z-index:99999;background:#eafff8;padding:20px 10px;box-shadow:2px 2px 5px #ccc;}
.content.pop_rule div{height:400px;overflow-y:scroll;padding:20px 20px 20px 40px;overflow-x:hidden;*overflow:hidden;}
.content.pop_rule p{margin:1px 0 1px -15px;padding-right:0;padding-left:15px;background:url(<%= asset_path "landingpage/list_icon.png"%>) no-repeat 0 5px;}
.landing_overlay{display:none;background:url(<%= asset_path "landingpage/landing_overlay.png"%>);position:fixed;_position:absolute;top:0;left:0;width:100%;height:100%;z-index:99998;}
.landing_popclose{position:absolute;top:-10px;right:-10px;}

#footer{background:#0f213a;/*max-width:1900px;*/}
#footer .main{width:990px;margin:0 auto;padding:35px 0;}
#footer .main ,#footer .main a,#footer .main span{color:#fff;font-size:12px;}
#footer .main span{margin-top:5px;display:block;}


/* self-clear floats */
.group:after {
content:".";
display:block;
height:0;
clear:both;
visibility:hidden;
}

/* self-clear floats */
*html .group { /* IE6 */
height:1%;
}
*:first-child+html .group {/* IE7 */
min-height:1px;
}

