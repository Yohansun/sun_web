.w964{width:934px;margin:0 auto;padding:25px 15px;background:#fff;}

.w964 .sort_box ul.sort_show_ul{width:auto;}
.system_info a{*white-space:nowrap;}
.nothing{text-indent:-9999px;}
.lh25{line-height:25px;}
.gifts_list{border:1px solid #eaeaea;border-width:1px 0;}
.gifts_list li{float:left;width:202px;*width:200px;height:260px;text-align:center;border:1px solid #eaeaea;border-width:0px 1px 1px 0;padding:0 10px;}
.gifts_list a{color:#666666;font:14px/20px "Microsoft Yahei";}
.gift_img{height:198px;width:202px;*width:200px;font-size:173px;text-align:center;display:table-cell;vertical-align:middle;}
.gift_img img{vertical-align:middle;}
.noborder_right{border-right:0!important;}
.noborder_bottom{border-bottom:0!important;}

.gifts_table{width:445px;*width:443px;left:1px;font:12px/40px "Microsoft Yahei";color:#666;}
.gifts_table th,.gifts_table td{border:1px solid #eaeaea;padding:0 20px;height:40px;line-height:40px;}
.gifts_table th{background:#fbfbfb;text-align:left;color:#f00;font-size:14px;}
.border_top{border-top:1px solid #eaeaea;}

.gifts_list.h330 li{height:330px;}
.change_num{width:110px;margin:15px auto 0 auto;}
.change_num input{width:32px;height:17px;border:1px solid #cccccc;padding:0 3px;text-align:center;*text-align:left;}
.change_num span{margin-top:4px;}
.change_num a{font-size:8px;margin:3px 3px 0;width:15px;height:15px;background:url(<%= asset_path "personal/signup_icon.png"%>) no-repeat;}
.change_num .num_minus{background-position: 0 -980px;}
.change_num .num_plus{background-position: 0 -1003px;}

.line_b1{border-bottom:1px solid #eaeaea;padding-bottom:7px;}
.line_b5{border-bottom:5px solid #eaeaea;padding-bottom:7px;}

.gifts_select{font-family:"Microsoft Yahei";}
.gifts_select th{/*text-align:left;*/font-size:12px;}
.gifts_select th,.gifts_select td{padding:15px 10px;border-bottom:1px solid #ddd;}
.gifts_select td{font-size:14px;}
.gifts_select th,
.gifts_select td,
.gifts_select th input,
.gifts_select td input[type="checkbox"],
.gifts_select td img{vertical-align:middle;}
.gifts_select th input{margin-right:7px;}
.gifts_select td input[type="checkbox"]{margin-right:13px;}

.gifts_del{display:block;width:30px;height:20px;line-height:20px;padding:0 15px;border:1px solid #dfdfdf;text-align:center;color:#000;font-size:12px;margin:0 auto;font-weight:bold;}
.gifts_tips{font:12px "SimSun";line-height:20px;color:#666;}

.record_form label{margin-top:5px;line-height:14px;}
.record_form input{padding:2px 3px;margin:0 5px;width:115px;}
.check_btn{width:77px;height:23px;background:url(<%= asset_path "personal/check_btn.jpg"%>) no-repeat;text-align:center;}

.record_list th select,.record_list th input{width:97px;margin:0 5px 15px 0;font-size:14px;padding:2px 3px;border:1px solid #ddd;background:#fff;}
.record_list td{padding:10px;border:1px solid #ddd;color:#712222;font:bold 14px "SimHei";text-align:center;}
.record_list th a{margin-bottom:15px;}
.record_form p .record_submit{width:68px;height:36px;margin:0;padding:0;}

.record_list_old th,.record_list_old td{height:38px;border:1px solid #ddd;font-family:"Microsoft Yahei";text-align:center;line-height:38px;}
.record_list_old th{background:#fbfbfb;font-size:14px;}
.record_list_old td{font-size:12px;}
.record_pass{color:#2da100;font-weight:bold;}
.record_dispass{color:#fe0000;font-weight:bold;}
.record_check th,.record_check td{font-weight:bold;}
.record_check td{color:#712222;}
.pb35{padding-bottom:35px;}