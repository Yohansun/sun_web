@charset "utf-8";
.slider_bin{
	width:900px;height:500px;
	overflow:hidden;
	margin:0 auto;
	margin-left:-450px;margin-top:-250px;
	z-index:2002;
}
.slider_bin_container{
	width:9999999px;
	position:relative;
}
.slider_bin_container img{
	float:left;display:inline;
}
.slider_bin ul{
	background:url(<%= asset_path "layer/pager_bg.png"%>) no-repeat;
	width:396px;height:13px;
	position:absolute;
	left:0;bottom:0;
	padding:10px 300px;
}
.slider_bin ul li{
	background:url(<%= asset_path "layer/dots.png"%>) -12px 0;
	color:#000;
	font-size:0;
	float:left;display:inline;
	width:12px;height:12px;
	text-align:center;
	line-height:20px;
	border-radius:10px;
	cursor:pointer;
	margin-right:15px;
	opacity:0.6;
	filter:alpha(opacity=60);
}
.slider_bin ul li.curr{
	background-position:0 0;
	color:#fff;
}
.slider_next{
	background:url(<%= asset_path "layer/next_icon.png"%>) no-repeat right center;
	color:#fff;font-size:12px;
	padding-right:16px;
	position:absolute;
	right:10px;bottom:8px;
	z-index:1000;
}