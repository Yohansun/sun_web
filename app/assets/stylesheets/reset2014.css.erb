@charset "utf-8";
html, body, div, span, h1, h2, h3, h4, h5, h6,
p, a, del, em, img, b, i, dl, dt, dd, sub, sup,
small, strong, ol, ul, li, fieldset, form, label,
input, button, select, option, dfn,
table, caption, tbody, tfoot, thead, tr, th, td {
  margin: 0;
}
img {
  border: 0;
  -ms-interpolation-mode: bicubic;
}
body {
  font: 12px "Microsoft Yahei","微软雅黑", Arial;
}
button, select, input, textarea {
  font: inherit;
  vertical-align:baseline;
  *vertical-align:middle;
}
button::-moz-focus-inner, input::-moz-focus-inner {
  border: 0;
  padding: 0;
}
button, input[type="button"], input[type="reset"], input[type="submit"] {
  cursor:pointer;
  -webkit-appearance:button;
}
ol, ul {
  list-style: none;
  padding: 0;
}
a, a:hover {
  background: transparent;
  text-decoration: none;
  *zoom: 1;
  color: #fff;
}
a:active,
a:hover {
  outline: 0;
}
mark {
  background: #ff0;
  color: #000;
}
hr {
  -moz-box-sizing: content-box;
  box-sizing: content-box;
  height: 0;
}
textarea {
  overflow: auto;
  vertical-align: top;
}
input[type="checkbox"],
input[type="radio"] {
    box-sizing: border-box;
    padding: 0;
    *height: 13px;
    *width: 13px;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}
td, th {
  padding: 0;
}
dfn {
    font-style: italic;
}
.fl {
  float: left;
  _display:inline;
}
.fr {
  float: right;
  _display:inline;
}
.mb20 {
  margin-bottom: 20px;
}
.mt30 {
  margin-top: 30px;
}
.mt10 {
  margin-top: 10px;
}
.mt20 {
  margin-top: 20px;
}
.mr5 {
  margin-right: 5px;
}
.mr10 {
  margin-right: 10px;
}
.fb {
  font-weight: bold;
}
.ft12 {
  font-size: 12px;
}
.ft14 {
  font-size: 14px;
}
.ft16 {
  font-size: 16px;
}
.ft18 {
  font-size: 18px;
}
.tl {
  text-align: left;
}
.tc {
  text-align: center;
}
.tr {
  text-align: right;
}
.pr {
  position: relative;
}
.pa {
  position: absolute;
}
.pf {
  position: fixed;
  _position: absolute;
}
.none {
  display: none;
}
.hide {
  visibility: hidden;
}
.show {
  display: block;
}
.noborder {
  border: 0 none!important;
}
.nomargin {
  margin: 0!important;
}
.clear:before,
.clear:after {
  display: table;
  line-height: 0;
  content: "";
}
.clear {
  *zoom: 1;
}
.clear:after {
  clear: both;
}
::-webkit-input-placeholder {
  color: #bbb;
}
:-moz-placeholder {
  color: #bbb;
}
::-moz-placeholder {
  color: #bbb;
}
:-ms-input-placeholder {
  color: #bbb;
}